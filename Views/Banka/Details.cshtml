@model MuhasebeStokWebApp.ViewModels.Banka.BankaViewModel
@{
    ViewData["Title"] = "Banka Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <!-- Banka Bilgileri -->
        <div class="col-xl-6 col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Banka Bilgileri</h5>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.BankaID" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <a asp-action="Hesaplar" asp-route-id="@Model.BankaID" class="btn btn-info btn-sm">
                                <i class="fas fa-university"></i> Hesaplar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Banka Adı</h6>
                                <p>@Model.BankaAdi</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Durum</h6>
                                <p>
                                    @if (Model.Aktif)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="info-group">
                                <h6 class="f-w-600">Oluşturma Tarihi</h6>
                                <p>@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hesap Sayısı ve Özet Bilgiler -->
        <div class="col-xl-6 col-md-12">
            <div class="card bg-light">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-12 mb-4">
                            <h5>Hesap Özeti</h5>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-primary text-white mb-3">
                                <div class="card-body">
                                    <h5>Toplam Hesap</h5>
                                    <h3>@(ViewBag.Hesaplar?.Count ?? 0)</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5>Aktif Hesap</h5>
                                    <h3>@((ViewBag.Hesaplar as IEnumerable<dynamic>)?.Count(h => h.Aktif) ?? 0)</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Banka Hesapları -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Banka Hesapları</h5>
                        <a asp-action="HesapCreate" asp-route-id="@Model.BankaID" class="btn btn-success btn-sm">
                            <i class="fas fa-plus"></i> Yeni Hesap Ekle
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (ViewBag.Hesaplar != null && ((IEnumerable<dynamic>)ViewBag.Hesaplar).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Hesap Adı</th>
                                        <th>IBAN</th>
                                        <th>Para Birimi</th>
                                        <th class="text-end">Güncel Bakiye</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var hesap in ViewBag.Hesaplar)
                                    {
                                        <tr>
                                            <td>@hesap.HesapAdi</td>
                                            <td>@hesap.IBAN</td>
                                            <td>@hesap.ParaBirimi</td>
                                            <td class="text-end @(hesap.GuncelBakiye >= 0 ? "text-success" : "text-danger")">
                                                @hesap.GuncelBakiye.ToString("N2")
                                            </td>
                                            <td>
                                                @if (hesap.Aktif)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="HesapDetails" asp-route-id="@hesap.BankaHesapID" class="btn btn-sm btn-info" title="Detay">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="HesapEdit" asp-route-id="@hesap.BankaHesapID" class="btn btn-sm btn-warning" title="Düzenle">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="HesapDelete" asp-route-id="@hesap.BankaHesapID" class="btn btn-sm btn-danger" title="Sil">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            Bu bankaya ait hesap bulunamadı. Yeni hesap eklemek için "Yeni Hesap Ekle" butonunu kullanabilirsiniz.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Alt Butonlar -->
    <div class="row mt-4">
        <div class="col-12 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
            <a asp-action="Edit" asp-route-id="@Model.BankaID" class="btn btn-warning">
                <i class="fas fa-edit"></i> Düzenle
            </a>
            <a asp-action="Hesaplar" asp-route-id="@Model.BankaID" class="btn btn-info">
                <i class="fas fa-university"></i> Hesaplar
            </a>
            <button type="button" class="btn btn-danger" onclick="showDeleteModal('@Model.BankaID')">
                <i class="fas fa-trash"></i> Sil
            </button>
        </div>
    </div>
</div>

<!-- Silme Onay Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Banka Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bu bankayı silmek istediğinize emin misiniz?</p>
                <p class="text-danger">Bu işlem geri alınamaz!</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" asp-action="Delete" method="post">
                    <input type="hidden" id="deleteId" name="id" value="@Model.BankaID" />
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showDeleteModal(id) {
            $('#deleteModal').modal('show');
        }
    </script>
} 
</div> 