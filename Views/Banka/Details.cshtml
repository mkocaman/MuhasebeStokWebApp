@model MuhasebeStokWebApp.ViewModels.Banka.BankaViewModel
@{
    ViewData["Title"] = "Banka Hesap Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <!-- Banka Bilgileri -->
        <div class="col-xl-6 col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Banka Bilgileri</h5>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.BankaID" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <a asp-action="Hareketler" asp-route-id="@Model.BankaID" class="btn btn-info btn-sm">
                                <i class="fas fa-exchange-alt"></i> Hareketler
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Banka Adı</h6>
                                <p>@Model.BankaAdi</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Şube Adı</h6>
                                <p>@Model.SubeAdi</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Şube Kodu</h6>
                                <p>@Model.SubeKodu</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Hesap No</h6>
                                <p>@Model.HesapNo</p>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="info-group">
                                <h6 class="f-w-600">IBAN</h6>
                                <p>@Model.IBAN</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bakiye Bilgileri -->
        <div class="col-xl-6 col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Bakiye Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Para Birimi</h6>
                                <p>@Model.ParaBirimi</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Durum</h6>
                                <p>
                                    @if (Model.Aktif)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Açılış Bakiyesi</h6>
                                <p>@Model.AcilisBakiye.ToString("N2") @Model.ParaBirimi</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Güncel Bakiye</h6>
                                <p class="@(Model.GuncelBakiye >= 0 ? "text-success" : "text-danger") fw-bold">
                                    @Model.GuncelBakiye.ToString("N2") @Model.ParaBirimi
                                </p>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Aciklama))
                        {
                            <div class="col-sm-12">
                                <div class="info-group">
                                    <h6 class="f-w-600">Açıklama</h6>
                                    <p>@Model.Aciklama</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Son İşlemler -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Son İşlemler</h5>
                        <a asp-action="Hareketler" asp-route-id="@Model.BankaID" class="btn btn-light btn-sm">
                            <i class="fas fa-list"></i> Tüm İşlemler
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (ViewBag.SonHareketler != null && ViewBag.SonHareketler.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tarih</th>
                                        <th>İşlem Türü</th>
                                        <th>Açıklama</th>
                                        <th class="text-end">Tutar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var hareket in ViewBag.SonHareketler)
                                    {
                                        <tr>
                                            <td>@hareket.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>@hareket.HareketTuru</td>
                                            <td>@hareket.Aciklama</td>
                                            <td class="text-end @(hareket.Tutar >= 0 ? "text-success" : "text-danger")">
                                                @hareket.Tutar.ToString("N2") @Model.ParaBirimi
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            Henüz herhangi bir işlem yapılmamış.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Alt Butonlar -->
    <div class="row mt-4">
        <div class="col-12 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
            <a asp-action="Edit" asp-route-id="@Model.BankaID" class="btn btn-warning">
                <i class="fas fa-edit"></i> Düzenle
            </a>
            <a asp-action="Hareketler" asp-route-id="@Model.BankaID" class="btn btn-info">
                <i class="fas fa-exchange-alt"></i> Hareketler
            </a>
            <button type="button" class="btn btn-danger" onclick="showDeleteModal('@Model.BankaID')">
                <i class="fas fa-trash"></i> Sil
            </button>
        </div>
    </div>
</div>

<!-- Silme Onay Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Banka Hesabı Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bu banka hesabını silmek istediğinize emin misiniz?</p>
                <p class="text-danger">Bu işlem geri alınamaz!</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" asp-action="Delete" method="post">
                    <input type="hidden" id="deleteId" name="id" value="@Model.BankaID" />
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showDeleteModal(id) {
            $('#deleteModal').modal('show');
        }
    </script>
} 
</div> 