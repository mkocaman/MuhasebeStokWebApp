@model MuhasebeStokWebApp.ViewModels.Banka.BankaHareketViewModel
@{
    ViewData["Title"] = "Hareket Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@Model.BankaAdi - @Model.HesapAdi - Hareket Detayı</h5>
                        <div>
                            <a asp-action="HesapHareketler" asp-route-id="@Model.BankaHesapID" class="btn btn-sm btn-light">
                                <i class="fas fa-arrow-left"></i> Hareketlere Dön
                            </a>
                            @if (Model.ReferansTuru == "Manuel")
                            {
                                <a asp-action="HareketDuzenle" asp-route-id="@Model.BankaHareketID" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <a asp-action="HareketSil" asp-route-id="@Model.BankaHareketID" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th width="30%">Hareket Türü</th>
                                        <td>
                                            @if (Model.HareketTuru == "Giriş")
                                            {
                                                <span class="badge bg-success">@Model.HareketTuru</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">@Model.HareketTuru</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Tarih</th>
                                        <td>@Model.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                                    </tr>
                                    <tr>
                                        <th>Tutar</th>
                                        <td>
                                            <span class="@(Model.HareketTuru == "Giriş" ? "text-success" : "text-danger") fw-bold">
                                                @Model.Tutar.ToString("N2") @Model.ParaBirimi
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Dekont No</th>
                                        <td>@(string.IsNullOrEmpty(Model.DekontNo) ? "-" : Model.DekontNo)</td>
                                    </tr>
                                    <tr>
                                        <th>Referans No</th>
                                        <td>@(string.IsNullOrEmpty(Model.ReferansNo) ? "-" : Model.ReferansNo)</td>
                                    </tr>
                                    <tr>
                                        <th>Referans Türü</th>
                                        <td>@Model.ReferansTuru</td>
                                    </tr>
                                    <tr>
                                        <th>Açıklama</th>
                                        <td>@Model.Aciklama</td>
                                    </tr>
                                    <tr>
                                        <th>Cari</th>
                                        <td>
                                            @if (!string.IsNullOrEmpty(Model.CariUnvani))
                                            {
                                                <a asp-controller="Cari" asp-action="Details" asp-route-id="@Model.CariID">@Model.CariUnvani</a>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Oluşturma Tarihi</th>
                                        <td>@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light mb-3">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="card-title mb-0">Hesap Bilgileri</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong>Banka:</strong> @Model.BankaAdi</p>
                                    <p><strong>Hesap:</strong> @Model.HesapAdi</p>
                                    <p><strong>Para Birimi:</strong> @Model.ParaBirimi</p>
                                </div>
                            </div>
                            
                            @if (Model.ReferansTuru != "Manuel")
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> Bu hareket otomatik oluşturulduğu için düzenlenemez veya silinemez.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 