@model MuhasebeStokWebApp.ViewModels.Banka.BankaHareketViewModel
@{
    ViewData["Title"] = "Hareket Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Banka Hareketi Sil</h5>
                        <a asp-action="HesapHareketler" asp-route-id="@Model.BankaHesapID" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left"></i> Hareketlere Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> <strong>Uyarı!</strong> Bu işlem geri alınamaz. Hareketi silmek istediğinizden emin misiniz?
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th width="30%">Banka / Hesap</th>
                                        <td>@Model.BankaAdi / @Model.HesapAdi</td>
                                    </tr>
                                    <tr>
                                        <th>Hareket Türü</th>
                                        <td>
                                            @if (Model.HareketTuru == "Giriş")
                                            {
                                                <span class="badge bg-success">@Model.HareketTuru</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">@Model.HareketTuru</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Tarih</th>
                                        <td>@Model.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                                    </tr>
                                    <tr>
                                        <th>Tutar</th>
                                        <td>
                                            <span class="@(Model.HareketTuru == "Giriş" ? "text-success" : "text-danger") fw-bold">
                                                @Model.Tutar.ToString("N2") @Model.ParaBirimi
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Referans Türü</th>
                                        <td>@Model.ReferansTuru</td>
                                    </tr>
                                    <tr>
                                        <th>Açıklama</th>
                                        <td>@Model.Aciklama</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <form asp-action="HareketSil" method="post">
                        <input type="hidden" name="id" value="@Model.BankaHareketID" />
                        <div class="form-group text-end">
                            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Hareketi Sil</button>
                            <a asp-action="HesapHareketler" asp-route-id="@Model.BankaHesapID" class="btn btn-secondary"><i class="fas fa-times"></i> İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 