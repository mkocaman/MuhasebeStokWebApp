@model IEnumerable<MuhasebeStokWebApp.ViewModels.Banka.BankaHareketViewModel>
@{
    ViewData["Title"] = "Banka Hareketleri";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <div class="row px-4">
                            <div class="col-6">
                                <h6 class="text-white text-capitalize">@ViewBag.Banka.BankaAdi - Banka Hareketleri</h6>
                            </div>
                            <div class="col-6 text-end">
                                <a asp-action="YeniHareket" class="btn bg-gradient-success btn-sm mb-0">
                                    <i class="material-icons text-sm">add</i> Yeni Hareket Ekle
                                </a>
                                <a asp-action="Details" asp-route-id="@ViewBag.Banka.BankaID" class="btn bg-gradient-info btn-sm mb-0 ms-2">
                                    <i class="material-icons text-sm">visibility</i> Banka Detayı
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="container mb-4">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="card card-stats mb-4 mb-xl-0">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <h5 class="card-title text-uppercase text-muted mb-0">Banka</h5>
                                                <span class="h2 font-weight-bold mb-0">@ViewBag.Banka.BankaAdi</span>
                                            </div>
                                            <div class="col-auto">
                                                <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                                                    <i class="material-icons">account_balance</i>
                                                </div>
                                            </div>
                                        </div>
                                        <p class="mt-3 mb-0 text-muted text-sm">
                                            <span>@ViewBag.Banka.IBAN</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card card-stats mb-4 mb-xl-0">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <h5 class="card-title text-uppercase text-muted mb-0">Açılış Bakiyesi</h5>
                                                <span class="h2 font-weight-bold mb-0">@ViewBag.Banka.AcilisBakiye.ToString("N2") @ViewBag.Banka.ParaBirimi</span>
                                            </div>
                                            <div class="col-auto">
                                                <div class="icon icon-shape bg-warning text-white rounded-circle shadow">
                                                    <i class="material-icons">account_balance_wallet</i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card card-stats mb-4 mb-xl-0">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <h5 class="card-title text-uppercase text-muted mb-0">Güncel Bakiye</h5>
                                                <span class="h2 font-weight-bold mb-0 @(ViewBag.Banka.GuncelBakiye >= 0 ? "text-success" : "text-danger")">
                                                    @ViewBag.Banka.GuncelBakiye.ToString("N2") @ViewBag.Banka.ParaBirimi
                                                </span>
                                            </div>
                                            <div class="col-auto">
                                                <div class="icon icon-shape bg-success text-white rounded-circle shadow">
                                                    <i class="material-icons">attach_money</i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card card-stats mb-4 mb-xl-0">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <h5 class="card-title text-uppercase text-muted mb-0">Toplam Hareket</h5>
                                                <span class="h2 font-weight-bold mb-0">@Model.Count()</span>
                                            </div>
                                            <div class="col-auto">
                                                <div class="icon icon-shape bg-info text-white rounded-circle shadow">
                                                    <i class="material-icons">swap_horiz</i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tarih</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">İşlem Türü</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Referans</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Açıklama</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Karşı Taraf</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Cari</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tutar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.Tarih.ToString("dd.MM.yyyy")</h6>
                                                    <p class="text-xs text-secondary mb-0">@item.Tarih.ToString("HH:mm")</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.HareketTuru</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.ReferansNo</p>
                                            <p class="text-xs text-secondary mb-0">@item.ReferansTuru</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.Aciklama</p>
                                            @if (!string.IsNullOrEmpty(item.DekontNo))
                                            {
                                                <p class="text-xs text-secondary mb-0">Dekont: @item.DekontNo</p>
                                            }
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.KarsiUnvan</p>
                                            @if (!string.IsNullOrEmpty(item.KarsiBankaAdi) || !string.IsNullOrEmpty(item.KarsiIBAN))
                                            {
                                                <p class="text-xs text-secondary mb-0">
                                                    @(!string.IsNullOrEmpty(item.KarsiBankaAdi) ? item.KarsiBankaAdi : "")
                                                    @(!string.IsNullOrEmpty(item.KarsiIBAN) ? " - " + item.KarsiIBAN : "")
                                                </p>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.CariAdi))
                                            {
                                                <p class="text-xs font-weight-bold mb-0">@item.CariAdi</p>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-sm font-weight-bold @(item.HareketTuru.Contains("Yatırma") || item.HareketTuru.Contains("Alma") ? "text-success" : "text-danger")">
                                                @(item.HareketTuru.Contains("Yatırma") || item.HareketTuru.Contains("Alma") ? "+" : "-")
                                                @item.Tutar.ToString("N2") @ViewBag.Banka.ParaBirimi
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 