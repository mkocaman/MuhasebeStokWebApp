@model MuhasebeStokWebApp.ViewModels.Banka.BankaHareketlerViewModel
@{
    ViewData["Title"] = "Banka Hareketleri";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@Model.BankaAdi - Banka Hareketleri</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-info"><i class="fas fa-money-bill-wave"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Güncel Bakiye</span>
                                    <span class="info-box-number">@Model.GuncelBakiye.ToString("N2") @Model.ParaBirimi</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-success"><i class="fas fa-arrow-down"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Toplam Giriş</span>
                                    <span class="info-box-number">@Model.ToplamGiris.ToString("N2") @Model.ParaBirimi</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-danger"><i class="fas fa-arrow-up"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Toplam Çıkış</span>
                                    <span class="info-box-number">@Model.ToplamCikis.ToString("N2") @Model.ParaBirimi</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-warning"><i class="fas fa-university"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Açılış Bakiye</span>
                                    <span class="info-box-number">@Model.AcilisBakiye.ToString("N2") @Model.ParaBirimi</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="card card-primary card-outline">
                                <div class="card-header">
                                    <h3 class="card-title">Filtrele</h3>
                                </div>
                                <div class="card-body">
                                    <form asp-action="Hareketler" method="get">
                                        <input type="hidden" name="id" value="@Model.BankaID" />
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Başlangıç Tarihi</label>
                                                    <input type="date" name="baslangicTarihi" class="form-control" value="@Model.BaslangicTarihi.ToString("yyyy-MM-dd")" />
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Bitiş Tarihi</label>
                                                    <input type="date" name="bitisTarihi" class="form-control" value="@Model.BitisTarihi.ToString("yyyy-MM-dd")" />
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>Hareket Türü</label>
                                                    <select name="hareketTuru" class="form-control">
                                                        <option value="">Tümü</option>
                                                        <option value="Giriş">Giriş</option>
                                                        <option value="Çıkış">Çıkış</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>&nbsp;</label>
                                                    <button type="submit" class="btn btn-primary btn-block">Filtrele</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Hareket Türü</th>
                                    <th>Tutar</th>
                                    <th>Referans No</th>
                                    <th>Referans Türü</th>
                                    <th>Dekont No</th>
                                    <th>Cari</th>
                                    <th>Açıklama</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Hareketler)
                                {
                                    <tr>
                                        <td>@item.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@item.HareketTuru</td>
                                        <td class="text-right">@item.Tutar.ToString("N2") @item.ParaBirimi</td>
                                        <td>@item.ReferansNo</td>
                                        <td>@item.ReferansTuru</td>
                                        <td>@item.DekontNo</td>
                                        <td>@item.CariAdi</td>
                                        <td>@item.Aciklama</td>
                                        <td>
                                            <a asp-action="HareketDetay" asp-route-id="@item.BankaHareketID" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Detay
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-default">Geri Dön</a>
                    <a asp-action="YeniHareket" asp-route-id="@Model.BankaID" class="btn btn-primary float-right">
                        <i class="fas fa-plus"></i> Yeni Hareket
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('table').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                }
            });
        });
    </script>
} 