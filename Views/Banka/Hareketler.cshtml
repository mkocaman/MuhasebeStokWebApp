@model IEnumerable<MuhasebeStokWebApp.ViewModels.Banka.BankaHareketViewModel>
@{
    ViewData["Title"] = "Banka Hareketleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var banka = ViewBag.Banka as MuhasebeStokWebApp.ViewModels.Banka.BankaViewModel;
}

<div class="container-fluid">
    <!-- Banka Bilgileri -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">@banka.BankaAdi - Banka Hareketleri</h4>
                <div>
                    <a asp-action="YeniHareket" asp-route-id="@banka.BankaID" class="btn btn-success">
                        <i class="fas fa-plus"></i> Yeni Hareket
                    </a>
                    <a asp-action="Details" asp-route-id="@banka.BankaID" class="btn btn-light">
                        <i class="fas fa-info-circle"></i> Hesap Detayı
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="info-group">
                        <h6 class="f-w-600">Şube</h6>
                        <p>@banka.SubeAdi (@banka.SubeKodu)</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info-group">
                        <h6 class="f-w-600">Hesap No</h6>
                        <p>@banka.HesapNo</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info-group">
                        <h6 class="f-w-600">IBAN</h6>
                        <p>@banka.IBAN</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info-group">
                        <h6 class="f-w-600">Güncel Bakiye</h6>
                        <p class="@(banka.GuncelBakiye >= 0 ? "text-success" : "text-danger") fw-bold">
                            @banka.GuncelBakiye.ToString("N2") @banka.ParaBirimi
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hareket Listesi -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Hareket Listesi</h5>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="hareketTable">
                    <thead class="table-light">
                        <tr>
                            <th>Tarih</th>
                            <th>İşlem Türü</th>
                            <th>Referans No</th>
                            <th>Dekont No</th>
                            <th>Karşı Taraf</th>
                            <th>Açıklama</th>
                            <th class="text-end">Tutar</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.HareketTuru</td>
                                <td>@item.ReferansNo</td>
                                <td>@item.DekontNo</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CariAdi))
                                    {
                                        <a asp-controller="Cari" asp-action="Details" asp-route-id="@item.CariID">@item.CariAdi</a>
                                    }
                                    else
                                    {
                                        @item.KarsiUnvan
                                    }
                                </td>
                                <td>@item.Aciklama</td>
                                <td class="text-end @(item.Tutar >= 0 ? "text-success" : "text-danger")">
                                    @item.Tutar.ToString("N2") @banka.ParaBirimi
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="javascript:void(0);" onclick="showDeleteModal('@item.BankaHareketID')" class="btn btn-sm btn-danger" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Silme Onay Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Hareket Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bu hareketi silmek istediğinize emin misiniz?</p>
                <p class="text-danger">Bu işlem geri alınamaz ve hesap bakiyesi otomatik olarak güncellenecektir!</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" asp-action="DeleteHareket" method="post">
                    <input type="hidden" id="deleteId" name="id" />
                    <input type="hidden" name="bankaId" value="@banka.BankaID" />
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#hareketTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                },
                order: [[0, 'desc']]
            });
        });

        function showDeleteModal(id) {
            $('#deleteId').val(id);
            $('#deleteModal').modal('show');
        }
    </script>
} 