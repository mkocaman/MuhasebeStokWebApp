@model MuhasebeStokWebApp.ViewModels.Banka.BankaHesapViewModel

@{
    ViewData["Title"] = "Banka Hesabı Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Banka Hesabı Silme Onayı</h4>
                <div>
                    <a asp-action="Hesaplar" asp-route-id="@Model.BankaID" class="btn btn-light">
                        <i class="fas fa-arrow-left"></i> Hesaplar Listesine Dön
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Uyarı!</h5>
                <p>Bu banka hesabını silmek istediğinize emin misiniz? Bu işlem geri alınamaz.</p>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.BankaAdi):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.BankaAdi</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.HesapAdi):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.HesapAdi</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.SubeAdi):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.SubeAdi</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.ParaBirimi):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.ParaBirimi</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.GuncelBakiye):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">
                                <span class="@(Model.GuncelBakiye >= 0 ? "text-success" : "text-danger") font-weight-bold">
                                    @Model.GuncelBakiye.ToString("N2") @Model.ParaBirimi
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            
            <form asp-action="HesapDelete" method="post">
                <input type="hidden" asp-for="BankaHesapID" />
                <div class="form-group text-right mt-4">
                    <a asp-action="Hesaplar" asp-route-id="@Model.BankaID" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 