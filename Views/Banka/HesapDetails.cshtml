@model MuhasebeStokWebApp.ViewModels.Banka.BankaHesapViewModel

@{
    ViewData["Title"] = "Banka Hesabı Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Banka Hesabı Detayları</h4>
                <div>
                    <a asp-action="Hesaplar" asp-route-id="@Model.BankaID" class="btn btn-light">
                        <i class="fas fa-arrow-left"></i> Hesaplar Listesine Dön
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.BankaAdi):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.BankaAdi</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.HesapAdi):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.HesapAdi</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.SubeAdi):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.SubeAdi</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.SubeKodu):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.SubeKodu</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.HesapNo):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.HesapNo</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.IBAN):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.IBAN</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.ParaBirimi):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.ParaBirimi</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.AcilisBakiye):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.AcilisBakiye.ToString("N2") @Model.ParaBirimi</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.GuncelBakiye):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">
                                <span class="@(Model.GuncelBakiye >= 0 ? "text-success" : "text-danger") font-weight-bold">
                                    @Model.GuncelBakiye.ToString("N2") @Model.ParaBirimi
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label font-weight-bold">@Html.DisplayNameFor(model => model.Aktif):</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">
                                @if (Model.Aktif)
                                {
                                    <span class="badge badge-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Pasif</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Aciklama):</label>
                        <p class="border p-2 rounded bg-light">@(string.IsNullOrEmpty(Model.Aciklama) ? "Açıklama yok" : Model.Aciklama)</p>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="font-weight-bold">@Html.DisplayNameFor(model => model.OlusturmaTarihi):</label>
                        <p>@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</p>
                    </div>
                </div>
            </div>
            
            <hr />
            
            <div class="form-group text-right">
                <a asp-action="HesapEdit" asp-route-id="@Model.BankaHesapID" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-action="HesapDelete" asp-route-id="@Model.BankaHesapID" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Sil
                </a>
                <a asp-action="Hesaplar" asp-route-id="@Model.BankaID" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div> 