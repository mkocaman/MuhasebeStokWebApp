@model MuhasebeStokWebApp.ViewModels.Banka.BankaHesapListViewModel

@{
    ViewData["Title"] = "Banka Hesapları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">@ViewBag.BankaAdi - Banka Hesapları</h4>
                <div>
                    <a asp-action="HesapCreate" asp-route-id="@ViewBag.BankaID" class="btn btn-light">
                        <i class="fas fa-plus"></i> Yeni Hesap Ekle
                    </a>
                    <a asp-action="Index" class="btn btn-light ml-2">
                        <i class="fas fa-arrow-left"></i> Bankalar Listesine Dön
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Toplam Bakiye</h5>
                            <h3 class="text-primary">
                                @foreach (var paraBirimiToplam in Model.ParaBirimiToplamlari)
                                {
                                    <div>@paraBirimiToplam.Value.ToString("N2") @paraBirimiToplam.Key</div>
                                }
                            </h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover" id="bankahesaplariTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>Hesap Adı</th>
                            <th>Şube</th>
                            <th>Hesap No</th>
                            <th>IBAN</th>
                            <th>Para Birimi</th>
                            <th>Güncel Bakiye</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hesap in Model.BankaHesaplari)
                        {
                            <tr>
                                <td>@hesap.HesapAdi</td>
                                <td>@hesap.SubeAdi (@hesap.SubeKodu)</td>
                                <td>@hesap.HesapNo</td>
                                <td>@hesap.IBAN</td>
                                <td>@hesap.ParaBirimi</td>
                                <td class="font-weight-bold @(hesap.GuncelBakiye >= 0 ? "text-success" : "text-danger")">
                                    @hesap.GuncelBakiye.ToString("N2")
                                </td>
                                <td>
                                    @if (hesap.Aktif)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="HesapHareketler" asp-route-id="@hesap.BankaHesapID" class="btn btn-sm btn-success">
                                            <i class="fas fa-exchange-alt"></i> Hareketler
                                        </a>
                                        <a asp-action="HesapDetails" asp-route-id="@hesap.BankaHesapID" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="HesapEdit" asp-route-id="@hesap.BankaHesapID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="HesapDelete" asp-route-id="@hesap.BankaHesapID" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#bankahesaplariTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                },
                "responsive": true,
                "order": [[0, "asc"]]
            });
        });
    </script>
} 