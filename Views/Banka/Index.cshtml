@model IEnumerable<MuhasebeStokWebApp.ViewModels.Banka.BankaViewModel>
@{
    ViewData["Title"] = "Banka Listesi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Banka Listesi</h5>
                        <div>
                            <a asp-action="Create" class="btn btn-light btn-sm">
                                <i class="fas fa-plus"></i> Yeni Banka Ekle
                            </a>
                            <a asp-action="YeniHareket" class="btn btn-success btn-sm">
                                <i class="fas fa-exchange-alt"></i> Hareket Ekle
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mx-4" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Banka Adı</th>
                                    <th>Şube Bilgileri</th>
                                    <th>Hesap Bilgileri</th>
                                    <th class="text-end">Bakiye</th>
                                    <th class="text-center">Durum</th>
                                    <th class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null || !Model.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">Kayıt bulunamadı.</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0">@item.BankaAdi</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="mb-0">@item.SubeAdi</p>
                                                <p class="text-secondary mb-0 small">Şube Kodu: @item.SubeKodu</p>
                                            </td>
                                            <td>
                                                <p class="mb-0">@item.HesapNo</p>
                                                <p class="text-secondary mb-0 small">@item.IBAN</p>
                                            </td>
                                            <td class="text-end">
                                                <span class="@(item.GuncelBakiye >= 0 ? "text-success" : "text-danger") fw-bold">
                                                    @item.GuncelBakiye.ToString("N2") @item.ParaBirimi
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                @if (item.Aktif)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pasif</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a asp-action="Details" asp-route-id="@item.BankaID" class="btn btn-info btn-sm">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.BankaID" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Hareketler" asp-route-id="@item.BankaID" class="btn btn-success btn-sm">
                                                    <i class="fas fa-exchange-alt"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.BankaID" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.table').DataTable({
                language: {
                    url: '/js/dataTables.turkish.json'
                }
            });
        });
    </script>
} 