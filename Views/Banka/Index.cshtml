@model IEnumerable<MuhasebeStokWebApp.ViewModels.Banka.BankaViewModel>
@{
    ViewData["Title"] = "Banka Listesi";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <div class="row px-4">
                            <div class="col-6">
                                <h6 class="text-white text-capitalize">Banka Listesi</h6>
                            </div>
                            <div class="col-6 text-end">
                                <a asp-action="Create" class="btn bg-gradient-success btn-sm mb-0">
                                    <i class="material-icons text-sm">add</i> Yeni Banka Ekle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <div class="px-4 pt-3">
                            <form asp-action="Index" method="get" class="form-inline">
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Banka Adı, Şube veya IBAN ile ara...</label>
                                    <input type="text" name="searchString" class="form-control" />
                                    <button type="submit" class="btn bg-gradient-info ms-2">
                                        <i class="material-icons text-sm">search</i> Ara
                                    </button>
                                </div>
                            </form>
                        </div>
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Banka Adı</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Şube Bilgileri</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Hesap Bilgileri</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Bakiye</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Durum</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.BankaAdi</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.SubeAdi</p>
                                            <p class="text-xs text-secondary mb-0">Şube Kodu: @item.SubeKodu</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.HesapNo</p>
                                            <p class="text-xs text-secondary mb-0">@item.IBAN</p>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-sm font-weight-bold @(item.GuncelBakiye >= 0 ? "text-success" : "text-danger")">
                                                @item.GuncelBakiye.ToString("N2") @item.ParaBirimi
                                            </span>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            @if (item.Aktif)
                                            {
                                                <span class="badge badge-sm bg-gradient-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-sm bg-gradient-danger">Pasif</span>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.BankaID" class="btn btn-info btn-link btn-sm" data-toggle="tooltip" title="Detay">
                                                    <i class="material-icons">visibility</i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.BankaID" class="btn btn-primary btn-link btn-sm" data-toggle="tooltip" title="Düzenle">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                                <a asp-action="Hareketler" asp-route-id="@item.BankaID" class="btn btn-warning btn-link btn-sm" data-toggle="tooltip" title="Hareketler">
                                                    <i class="material-icons">account_balance_wallet</i>
                                                </a>
                                                <a href="javascript:void(0);" onclick="confirmDelete('@item.BankaID', '@item.BankaAdi')" class="btn btn-danger btn-link btn-sm" data-toggle="tooltip" title="Sil">
                                                    <i class="material-icons">delete</i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            if (confirm(`"${name}" isimli banka hesabını silmek istediğinize emin misiniz?`)) {
                var form = document.createElement("form");
                form.method = "POST";
                form.action = "/Banka/Delete/" + id;
                
                var antiForgeryToken = document.createElement("input");
                antiForgeryToken.type = "hidden";
                antiForgeryToken.name = "__RequestVerificationToken";
                antiForgeryToken.value = document.querySelector('input[name="__RequestVerificationToken"]').value;
                
                form.appendChild(antiForgeryToken);
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
} 