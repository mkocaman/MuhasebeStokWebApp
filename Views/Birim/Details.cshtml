@model MuhasebeStokWebApp.ViewModels.Birim.BirimViewModel
@{
    ViewData["Title"] = "Birim Detayı";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Birim Detayı</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Birim Adı</label>
                                    <p class="form-control-static">@Model.BirimAdi</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Durum</label>
                                    <p class="form-control-static">
                                        @if (Model.Aktif)
                                        {
                                            <span class="badge badge-sm bg-gradient-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-sm bg-gradient-secondary">Pasif</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label">Açıklama</label>
                                    <p class="form-control-static">@Model.Aciklama</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-md-12 text-end">
                                <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
                                <a asp-action="Edit" asp-route-id="@Model.BirimID" class="btn btn-primary">Düzenle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 