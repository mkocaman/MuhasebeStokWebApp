@model MuhasebeStokWebApp.ViewModels.Birim.BirimViewModel
@{
    ViewData["Title"] = "Birim Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>Birim Detayı</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Birimler</a></li>
                    <li class="breadcrumb-item active">Birim Detayı</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Birim Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Birim Adı</label>
                                <p class="form-control-static">@Model.BirimAdi</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Durum</label>
                                <p class="form-control-static">
                                    @if (Model.Aktif)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <p class="form-control-static">@Model.Aciklama</p>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left"></i> Geri
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.BirimID" class="btn btn-primary">
                            <i class="fa fa-edit"></i> Düzenle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 