@model MuhasebeStokWebApp.ViewModels.Birim.BirimListViewModel
@{
    ViewData["Title"] = "Birimler";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Birim Listesi</h4>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createBirimModal">
                    <i class="fas fa-plus"></i> Yeni Birim Ekle
                </button>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <!-- Sekme Başlıkları -->
            <ul class="nav nav-tabs mb-3" id="birimTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(ViewBag.AktifTab == "aktif" ? "active" : "")" id="aktif-tab" href="@Url.Action("Index", new { tab = "aktif" })" role="tab" aria-controls="aktif" aria-selected="@(ViewBag.AktifTab == "aktif" ? "true" : "false")">
                        <i class="fas fa-check-circle text-success"></i> Aktif Birimler
                    </a>
                </li>
                @if (isAdmin)
                {
                <li class="nav-item" role="presentation">
                        <a class="nav-link @(ViewBag.AktifTab == "pasif" ? "active" : "")" id="pasif-tab" href="@Url.Action("Index", new { tab = "pasif" })" role="tab" aria-controls="pasif" aria-selected="@(ViewBag.AktifTab == "pasif" ? "true" : "false")">
                        <i class="fas fa-times-circle text-danger"></i> Pasif Birimler
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link @(ViewBag.AktifTab == "silindi" ? "active" : "")" id="silindi-tab" href="@Url.Action("Index", new { tab = "silindi" })" role="tab" aria-controls="silindi" aria-selected="@(ViewBag.AktifTab == "silindi" ? "true" : "false")">
                            <i class="fas fa-trash text-danger"></i> Silinmiş Birimler
                        </a>
                </li>
                }
            </ul>
            
            <!-- Sekme İçerikleri -->
            <div class="tab-content" id="birimTabsContent">
                <!-- Aktif Birimler Sekmesi -->
                <div class="tab-pane fade @(ViewBag.AktifTab == "aktif" ? "show active" : "")" id="aktif" role="tabpanel" aria-labelledby="aktif-tab">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="aktifBirimTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Birim Adı</th>
                                    <th>Açıklama</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Birimler.Where(b => b.Aktif && !b.Silindi))
                                {
                                    <tr>
                                        <td>@item.BirimAdi</td>
                                        <td>@item.Aciklama</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-sm btn-info btn-edit-birim" data-id="@item.BirimID">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-primary btn-details-birim" data-id="@item.BirimID">
                                                    <i class="fas fa-info-circle"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-danger btn-delete-birim" data-id="@item.BirimID">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Pasif Birimler Sekmesi -->
                @if (isAdmin)
                {
                <div class="tab-pane fade @(ViewBag.AktifTab == "pasif" ? "show active" : "")" id="pasif" role="tabpanel" aria-labelledby="pasif-tab">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="pasifBirimTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Birim Adı</th>
                                    <th>Açıklama</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Birimler.Where(b => !b.Aktif && !b.Silindi))
                                {
                                    <tr>
                                        <td>@item.BirimAdi</td>
                                        <td>@item.Aciklama</td>
                                        <td>
                                            <span class="badge bg-warning">Pasif</span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-sm btn-primary btn-details-birim" data-id="@item.BirimID">
                                                    <i class="fas fa-info-circle"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-success" onclick="confirmActivate('@item.BirimID', '@item.BirimAdi')">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                    <!-- Silinmiş Birimler Sekmesi -->
                    <div class="tab-pane fade @(ViewBag.AktifTab == "silindi" ? "show active" : "")" id="silindi" role="tabpanel" aria-labelledby="silindi-tab">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="silinmisBirimTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>Birim Adı</th>
                                        <th>Açıklama</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Birimler.Where(b => b.Silindi))
                                    {
                                        <tr>
                                            <td>@item.BirimAdi</td>
                                            <td>@item.Aciklama</td>
                                            <td>
                                                <span class="badge bg-danger">Silinmiş</span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm btn-success btn-restore-birim" data-id="@item.BirimID">
                                                        <i class="fas fa-undo"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Yeni Birim Ekleme Modal -->
<div class="modal fade" id="createBirimModal" tabindex="-1" aria-labelledby="createBirimModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="createBirimModalLabel">Yeni Birim Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="birimCreateModalContent">
                <form asp-action="Create" method="post" id="createBirimForm">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div id="createFormAlert" class="alert alert-danger d-none" role="alert"></div>
                        <div class="mb-3">
                            <label for="BirimAdi" class="form-label">Birim Adı</label>
                            <input type="text" class="form-control" id="BirimAdi" name="BirimAdi" required maxlength="50">
                            <div class="invalid-feedback">Birim adı zorunludur.</div>
                        </div>
                        <div class="mb-3">
                            <label for="Aciklama" class="form-label">Açıklama</label>
                            <textarea class="form-control" id="Aciklama" name="Aciklama" rows="3" maxlength="500"></textarea>
                        </div>
                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="Aktif" name="Aktif" value="true" checked>
                            <label class="form-check-label" for="Aktif">Aktif</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Birim Düzenleme Modal -->
<div class="modal fade" id="editBirimModal" tabindex="-1" aria-labelledby="editBirimModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editBirimModalLabel">Birim Düzenle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="editBirimModalContent">
                <!-- İçerik AJAX ile yüklenecek -->
                <div class="modal-body text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Birim Silme Modal -->
<div class="modal fade" id="deleteBirimModal" tabindex="-1" aria-labelledby="deleteBirimModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteBirimModalLabel">Birim Sil</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> Dikkat! Bu birimi silmek istediğinize emin misiniz?
                </div>
                <p>Silmek istediğiniz birim: <strong id="deleteBirimName"></strong></p>
                <input type="hidden" id="deleteBirimID" value="" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBirim">
                    <i class="fas fa-trash"></i> Sil
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Birim Detay Modal -->
<div class="modal fade" id="detailsBirimModal" tabindex="-1" aria-labelledby="detailsBirimModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="detailsBirimModalLabel">Birim Detayları</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="detailsBirimModalContent">
                <div class="modal-body text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable uyarılarını gizle
            $.fn.dataTable.ext.errMode = 'none';
            
            // Aktif sekmeyi belirle
            var aktifTab = '@ViewBag.AktifTab';
            
            // Aktif Birimler DataTable başlatma
            try {
                // Aktif sekmedeki tabloyu başlat
                if (aktifTab === 'aktif') {
                    $('#aktifBirimTable').DataTable({
                        language: {
                            url: '/js/dataTables.turkish.json'
                        },
                        responsive: true,
                        retrieve: true
                    });
                } else if (aktifTab === 'pasif') {
                    $('#pasifBirimTable').DataTable({
                        language: {
                            url: '/js/dataTables.turkish.json'
                        },
                        responsive: true,
                        retrieve: true
                    });
                } else if (aktifTab === 'silindi') {
                    $('#silinmisBirimTable').DataTable({
                        language: {
                            url: '/js/dataTables.turkish.json'
                        },
                        responsive: true,
                        retrieve: true
                    });
                }
                
                // Tab değişikliğinde DataTable'ı başlat
                $('a[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
                    var targetId = $(e.target).attr("href").substring(1);
                    if (targetId === 'aktif' && !$.fn.dataTable.isDataTable('#aktifBirimTable')) {
                        $('#aktifBirimTable').DataTable({
                            language: {
                                url: '/js/dataTables.turkish.json'
                            },
                            responsive: true,
                            retrieve: true
                        });
                    } else if (targetId === 'pasif' && !$.fn.dataTable.isDataTable('#pasifBirimTable')) {
                        $('#pasifBirimTable').DataTable({
                            language: {
                                url: '/js/dataTables.turkish.json'
                            },
                            responsive: true,
                            retrieve: true
                        });
                    } else if (targetId === 'silindi' && !$.fn.dataTable.isDataTable('#silinmisBirimTable')) {
                        $('#silinmisBirimTable').DataTable({
                            language: {
                                url: '/js/dataTables.turkish.json'
                            },
                            responsive: true,
                            retrieve: true
                        });
                    }
                });
            } catch (e) {
                console.error("DataTable başlatma hatası:", e);
            }
            
            // Birim oluşturma formunun gönderimini ele al
            $('#createBirimForm').on('submit', function(e) {
                e.preventDefault();
                
                var formData = new FormData(this);
                
                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function(response) {
                        if (response.success) {
                            // Başarılı olursa Sweet Alert göster
                            Swal.fire({
                                icon: 'success',
                                title: 'Başarılı!',
                                text: response.message || 'Birim başarıyla oluşturuldu.',
                                confirmButtonText: 'Tamam'
                            }).then((result) => {
                                // Modal'ı kapat ve sayfayı yenile
                                $('#createBirimModal').modal('hide');
                                location.reload();
                            });
                        } else {
                            // Başarısız olursa Sweet Alert göster
                            Swal.fire({
                                icon: 'error',
                                title: 'Hata!',
                                text: response.message || 'Birim oluşturulurken bir hata oluştu.',
                                confirmButtonText: 'Tamam'
                            });
                        }
                    },
                    error: function(xhr, status, error) {
                        // AJAX hatası olursa Sweet Alert göster
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            text: 'Birim oluşturulurken bir hata oluştu. Lütfen tekrar deneyin.',
                            confirmButtonText: 'Tamam'
                        });
                    }
                });
            });
            
            // Birim düzenleme modal'ını aç
            $('.btn-edit-birim').on('click', function() {
                var birimID = $(this).data('id');
                
                // Modal içeriğini yükle
                $.ajax({
                    url: '@Url.Action("Edit", "Birim")/' + birimID,
                    type: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function(data) {
                        $('#editBirimModalContent').html(data);
                        $('#editBirimModal').modal('show');
                    },
                    error: function(xhr, status, error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            text: 'Birim bilgileri yüklenirken bir hata oluştu.',
                            confirmButtonText: 'Tamam'
                        });
                    }
                });
            });
            
            // Birim silme modal'ını aç
            $(document).on('click', '.btn-delete-birim', function() {
                var birimID = $(this).data('id');
                var row = $(this).closest('tr');
                var birimAdi = row.find('td:first').text();
                
                $('#deleteBirimID').val(birimID);
                $('#deleteBirimName').text(birimAdi);
                $('#deleteBirimModal').modal('show');
            });
            
            // Birim silme işlemini gerçekleştir
            $('#confirmDeleteBirim').on('click', function() {
                var birimID = $('#deleteBirimID').val();
                
                $.ajax({
                    url: '@Url.Action("DeleteBirim", "Birim")',
                    type: 'POST',
                    data: { id: birimID },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Başarılı!',
                                text: response.message || 'Birim başarıyla silindi.',
                                confirmButtonText: 'Tamam'
                            }).then(() => {
                                $('#deleteBirimModal').modal('hide');
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Hata!',
                                text: response.message || 'Birim silinirken bir hata oluştu.',
                                confirmButtonText: 'Tamam'
                            });
                        }
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            text: 'İşlem sırasında bir hata oluştu.',
                            confirmButtonText: 'Tamam'
                        });
                    }
                });
            });
            
            // Geri alma butonu işlemleri
            $(document).on('click', '.btn-restore-birim', function() {
                var birimID = $(this).data('id');
                
                // Onay dialogu göster
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: 'Bu birimi aktif duruma getirmek istediğinize emin misiniz?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Evet, Aktif Yap',
                    cancelButtonText: 'İptal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // AJAX isteği ile birimi aktif yap
                        $.ajax({
                            url: '@Url.Action("RestoreUnit", "Birim")',
                            type: 'POST',
                            data: { id: birimID },
                            headers: {
                                'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                            },
                            success: function(response) {
                                if (response.success) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Başarılı!',
                                        text: response.message || 'Birim başarıyla aktif edildi.',
                                        confirmButtonText: 'Tamam'
                                    }).then(() => {
                                        location.reload();
                                    });
                                } else {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Hata!',
                                        text: response.message || 'Birim aktif edilirken bir hata oluştu.',
                                        confirmButtonText: 'Tamam'
                                    });
                                }
                            },
                            error: function() {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Hata!',
                                    text: 'İşlem sırasında bir hata oluştu.',
                                    confirmButtonText: 'Tamam'
                                });
                            }
                        });
                    }
                });
            });

            // Birim detay modal'ını aç
            $(document).on('click', '.btn-details-birim', function() {
                var birimID = $(this).data('id');
                
                // Modal içeriğini yükle
                $.ajax({
                    url: '@Url.Action("Details", "Birim")/' + birimID,
                    type: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function(data) {
                        $('#detailsBirimModalContent').html(data);
                        $('#detailsBirimModal').modal('show');
                    },
                    error: function(xhr, status, error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            text: 'Birim detayları yüklenirken bir hata oluştu.',
                            confirmButtonText: 'Tamam'
                        });
                    }
                });
            });
        });
    </script>
} 