@model MuhasebeStokWebApp.ViewModels.Cari.CariCreateViewModel
@using System.Linq
@{
    ViewData["Title"] = "Yeni Cari Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Yeni Cari Ekle</h4>
                <a asp-action="Index" class="btn btn-light">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
        <div class="card-body">
            <form id="createCariForm" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <!-- Gizli alanlar -->
                <input type="hidden" id="VarsayilanParaBirimiKodu" asp-for="VarsayilanParaBirimiKodu" />
                <input type="hidden" id="VarsayilanParaBirimiAdi" asp-for="VarsayilanParaBirimiAdi" />
                <input type="hidden" id="VarsayilanParaBirimiSembol" asp-for="VarsayilanParaBirimiSembol" />
                
                <!-- Cari Bilgileri -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Ad" class="control-label">Cari Adı</label>
                            <input asp-for="Ad" class="form-control" required />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CariKodu" class="control-label">Cari Kodu</label>
                            <input asp-for="CariKodu" class="form-control" placeholder="Otomatik oluşturulacak" readonly />
                            <span asp-validation-for="CariKodu" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CariTipi" class="control-label">Cari Tipi</label>
                            <div class="mt-2">
                                <div class="form-check form-check-inline">
                                    <input type="radio" id="cariTipiMusteri" name="CariTipi" value="Müşteri" class="form-check-input" 
                                           @(ViewBag.CariTipi == "Müşteri" ? "checked" : (Model?.CariTipi == "Müşteri" ? "checked" : "")) />
                                    <label class="form-check-label" for="cariTipiMusteri">Müşteri</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input type="radio" id="cariTipiTedarikci" name="CariTipi" value="Tedarikçi" class="form-check-input" 
                                           @(ViewBag.CariTipi == "Tedarikçi" ? "checked" : (Model?.CariTipi == "Tedarikçi" ? "checked" : "")) />
                                    <label class="form-check-label" for="cariTipiTedarikci">Tedarikçi</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input type="radio" id="cariTipiHerIkisi" name="CariTipi" value="Müşteri ve Tedarikçi" class="form-check-input" 
                                           @(ViewBag.CariTipi == "Müşteri ve Tedarikçi" ? "checked" : (Model?.CariTipi == "Müşteri ve Tedarikçi" ? "checked" : "")) />
                                    <label class="form-check-label" for="cariTipiHerIkisi">Her İkisi</label>
                                </div>
                            </div>
                            <span asp-validation-for="CariTipi" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <!-- İletişim ve Vergi Bilgileri -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Telefon" class="control-label">Telefon</label>
                            <input asp-for="Telefon" class="form-control" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label">E-posta</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Yetkili" class="control-label">Yetkili</label>
                            <input asp-for="Yetkili" class="form-control" />
                            <span asp-validation-for="Yetkili" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="WebSitesi" class="control-label">Web Sitesi</label>
                            <input asp-for="WebSitesi" class="form-control" />
                            <span asp-validation-for="WebSitesi" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            <label asp-for="Adres" class="control-label">Adres</label>
                            <textarea asp-for="Adres" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Adres" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="VergiNo" class="control-label">Vergi No</label>
                            <input asp-for="VergiNo" class="form-control" />
                            <span asp-validation-for="VergiNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="VergiDairesi" class="control-label">Vergi Dairesi</label>
                            <input asp-for="VergiDairesi" class="form-control" />
                            <span asp-validation-for="VergiDairesi" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <!-- Para Birimi ve Ek Bilgiler -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="VarsayilanParaBirimiId" class="control-label">Varsayılan Para Birimi</label>
                            <select asp-for="VarsayilanParaBirimiId" class="form-control select2" id="varsayilanParaBirimiSelect">
                                @if (ViewBag.ParaBirimleri != null)
                                {
                                    var paraBirimleriListesi = ViewBag.ParaBirimleri;
                                    
                                    // Ana para birimi
                                    var anaPB = (dynamic)null;
                                    foreach (var pb in paraBirimleriListesi)
                                    {
                                        if (pb.AnaParaBirimiMi == true)
                                        {
                                            anaPB = pb;
                                            break;
                                        }
                                    }
                                    
                                    if (anaPB != null)
                                    {
                                        <option value="@anaPB.ParaBirimiID"
                                                data-kod="@anaPB.Kod" 
                                                data-ad="@anaPB.Ad" 
                                                data-sembol="@anaPB.Sembol">
                                            @anaPB.Kod - @anaPB.Ad (Ana Para Birimi)
                                        </option>
                                    }
                                    
                                    // Diğer para birimleri
                                    foreach (var paraBirimi in paraBirimleriListesi)
                                    {
                                        if (paraBirimi.AnaParaBirimiMi != true)
                                        {
                                            <option value="@paraBirimi.ParaBirimiID" 
                                                    data-kod="@paraBirimi.Kod" 
                                                    data-ad="@paraBirimi.Ad" 
                                                    data-sembol="@paraBirimi.Sembol">
                                                @paraBirimi.Kod - @paraBirimi.Ad
                                            </option>
                                        }
                                    }
                                }
                            </select>
                            <span asp-validation-for="VarsayilanParaBirimiId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check form-switch mb-3 mt-4">
                            <input asp-for="VarsayilanKurKullan" class="form-check-input" />
                            <label asp-for="VarsayilanKurKullan" class="form-check-label">Hesaplamalarda varsayılan kur kullanılsın</label>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            <label asp-for="Aciklama" class="control-label">Açıklama</label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input asp-for="Aktif" class="form-check-input" checked />
                            <label asp-for="Aktif" class="form-check-label">Aktif</label>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4 text-end">
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // Select2 initialize
            try {
                $('.select2').select2();
            } catch (e) {
                console.error("Select2 yüklenemedi:", e);
            }
            
            $("#createCariForm").submit(function (e) {
                e.preventDefault();
                
                // Para birimi bilgilerini gizli alanlara ekleyelim
                var selectedOption = $("#varsayilanParaBirimiSelect option:selected");
                $("#VarsayilanParaBirimiKodu").val(selectedOption.data("kod"));
                $("#VarsayilanParaBirimiAdi").val(selectedOption.data("ad"));
                $("#VarsayilanParaBirimiSembol").val(selectedOption.data("sembol"));
                
                // Formu submit et
                this.submit();
            });
            
            // Para birimi seçildiğinde
            $("#varsayilanParaBirimiSelect").change(function() {
                var selectedOption = $(this).find("option:selected");
                $("#VarsayilanParaBirimiKodu").val(selectedOption.data("kod"));
                $("#VarsayilanParaBirimiAdi").val(selectedOption.data("ad"));
                $("#VarsayilanParaBirimiSembol").val(selectedOption.data("sembol"));
            });
        });
    </script>
} 