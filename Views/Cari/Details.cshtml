@model MuhasebeStokWebApp.Data.Entities.Cari
@{
    ViewData["Title"] = "Cari Bilgileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            @if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString()))
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            @if (!string.IsNullOrEmpty(TempData["WarningMessage"]?.ToString()))
            {
                <div class="alert alert-warning">
                    @TempData["WarningMessage"]
                </div>
            }
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Cari Detayları</h4>
                        <div>
                            <a asp-action="Index" class="btn btn-light btn-sm">
                                <i class="fas fa-arrow-left"></i> Listeye Dön
                            </a>
                            @if (Model.Silindi)
                            {
                                <button type="button" class="btn btn-success btn-sm" data-cari-id="@Model.CariID" onclick="restoreCari(this)" title="Geri Yükle">
                                    <i class="fas fa-trash-restore"></i> Geri Yükle
                                </button>
                            }
                            else
                            {
                                <a asp-action="Edit" asp-route-id="@Model.CariID" class="btn btn-light btn-sm">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                @if (Model.AktifMi)
                                {
                                    <button type="button" class="btn btn-warning btn-sm" data-cari-id="@Model.CariID" onclick="setPassive(this)" title="Pasife Al">
                                        <i class="fas fa-ban"></i> Pasife Al
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-success btn-sm" data-cari-id="@Model.CariID" onclick="setActive(this)" title="Aktife Al">
                                        <i class="fas fa-check"></i> Aktif Et
                                    </button>
                                }
                                <button type="button" class="btn btn-danger btn-sm" data-cari-id="@Model.CariID" onclick="deleteCari(this)" title="Sil">
                                    <i class="fas fa-trash"></i> Sil
                                </button>
                                <a asp-action="YeniHareket" asp-route-cariID="@Model.CariID" class="btn btn-info btn-sm">
                                    <i class="fas fa-plus"></i> Hareket Ekle
                                </a>
                                <a asp-action="Ekstre" asp-route-id="@Model.CariID" class="btn btn-primary btn-sm">
                                    <i class="fas fa-file-invoice"></i> Ekstre
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Genel Bilgiler</h5>
                            <table class="table table-sm table-bordered">
                                <tr>
                                    <th>Cari Kodu</th>
                                    <td>@Model.CariKodu</td>
                                </tr>
                                <tr>
                                    <th>Cari Adı</th>
                                    <td>@Model.Ad</td>
                                </tr>
                                <tr>
                                    <th>Cari Tipi</th>
                                    <td>@Model.CariTipi</td>
                                </tr>
                                <tr>
                                    <th>Vergi No</th>
                                    <td>@(Model.VergiNo ?? "Belirtilmemiş")</td>
                                </tr>
                                <tr>
                                    <th>Vergi Dairesi</th>
                                    <td>@(Model.VergiDairesi ?? "Belirtilmemiş")</td>
                                </tr>
                                <tr>
                                    <th>Telefon</th>
                                    <td>@Model.Telefon</td>
                                </tr>
                                <tr>
                                    <th>E-posta</th>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <th>Web Sitesi</th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.WebSitesi))
                                        {
                                            var website = Model.WebSitesi;
                                            if (!website.StartsWith("http://") && !website.StartsWith("https://"))
                                            {
                                                website = "http://" + website;
                                            }
                                            <a href="@website" target="_blank">@Model.WebSitesi</a>
                                        }
                                        else
                                        {
                                            <span>Belirtilmemiş</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Yetkili</th>
                                    <td>@Model.Yetkili</td>
                                </tr>
                                <tr>
                                    <th>Durum</th>
                                    <td>
                                        @if (Model.Silindi)
                                        {
                                            <span class="badge bg-danger">Silinmiş</span>
                                        }
                                        else
                                        {
                                            if (Model.AktifMi)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Pasif</span>
                                            }
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Adres Bilgileri</h5>
                            <table class="table table-sm table-bordered">
                                <tr>
                                    <th>Adres</th>
                                    <td>@Model.Adres</td>
                                </tr>
                                <tr>
                                    <th>İl</th>
                                    <td>@Model.Il</td>
                                </tr>
                                <tr>
                                    <th>İlçe</th>
                                    <td>@Model.Ilce</td>
                                </tr>
                                <tr>
                                    <th>Posta Kodu</th>
                                    <td>@Model.PostaKodu</td>
                                </tr>
                                <tr>
                                    <th>Ülke</th>
                                    <td>@Model.Ulke</td>
                                </tr>
                                <tr>
                                    <th>Açıklama</th>
                                    <td>@(Model.Aciklama ?? "Belirtilmemiş")</td>
                                </tr>
                                <tr>
                                    <th>Varsayılan Para Birimi</th>
                                    <td>
                                        @if (Model.VarsayilanParaBirimi != null)
                                        {
                                            <span>@Model.VarsayilanParaBirimi.Ad (@Model.VarsayilanParaBirimi.Kod)</span>
                                        }
                                        else
                                        {
                                            <span>TRY (Türk Lirası)</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Oluşturma Tarihi</th>
                                    <td>@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                                @if (Model.GuncellemeTarihi.HasValue)
                                {
                                    <tr>
                                        <th>Son Güncelleme</th>
                                        <td>@Model.GuncellemeTarihi.Value.ToString("dd.MM.yyyy HH:mm")</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>

                    <!-- Bakiye Bilgisi -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="card bg-light mb-3">
                                <div class="card-header"><h5>Bakiye Bilgisi</h5></div>
                                <div class="card-body">
                                    <div class="row">
                                        @{
                                            decimal toplamBorc = 0;
                                            decimal toplamAlacak = 0;
                                            decimal sonBakiye = 0;
                                            
                                            // Cari hareketlerinden bakiye hesapla
                                            if (Model.CariHareketler != null && Model.CariHareketler.Any())
                                            {
                                                toplamBorc = Model.CariHareketler.Sum(h => h.Borc);
                                                toplamAlacak = Model.CariHareketler.Sum(h => h.Alacak);
                                                sonBakiye = toplamBorc - toplamAlacak;
                                            }
                                        }
                                        <div class="col-md-4">
                                            <div class="card bg-primary text-white">
                                                <div class="card-body">
                                                    <h5 class="card-title">Toplam Borç</h5>
                                                    <p class="card-text h3">@toplamBorc.ToString("N2") ₺</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="card bg-success text-white">
                                                <div class="card-body">
                                                    <h5 class="card-title">Toplam Alacak</h5>
                                                    <p class="card-text h3">@toplamAlacak.ToString("N2") ₺</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="card @(sonBakiye > 0 ? "bg-warning" : "bg-info") text-white">
                                                <div class="card-body">
                                                    <h5 class="card-title">Bakiye</h5>
                                                    <p class="card-text h3">@sonBakiye.ToString("N2") ₺</p>
                                                    <small>@(sonBakiye > 0 ? "Alacaklıyız" : sonBakiye < 0 ? "Borçluyuz" : "Denk")</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Son Hareketler -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Son Hareketler</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.CariHareketler != null && Model.CariHareketler.Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-striped table-sm">
                                                <thead>
                                                    <tr>
                                                        <th>Tarih</th>
                                                        <th>Hareket Türü</th>
                                                        <th>Açıklama</th>
                                                        <th>Borç (₺)</th>
                                                        <th>Alacak (₺)</th>
                                                        <th>Referans</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var hareket in Model.CariHareketler.OrderByDescending(h => h.Tarih).Take(10))
                                                    {
                                                        <tr>
                                                            <td>@hareket.Tarih.ToString("dd.MM.yyyy")</td>
                                                            <td>@hareket.HareketTuru</td>
                                                            <td>@hareket.Aciklama</td>
                                                            <td class="text-end">@hareket.Borc.ToString("N2")</td>
                                                            <td class="text-end">@hareket.Alacak.ToString("N2")</td>
                                                            <td>@hareket.ReferansNo</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="text-end">
                                            <a asp-action="Ekstre" asp-route-id="@Model.CariID" class="btn btn-primary btn-sm">
                                                <i class="fas fa-list"></i> Tüm Hareketleri Gör
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info">
                                            Bu cariye ait hareket kaydı bulunmamaktadır.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Son Faturalar -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Son Faturalar</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.Faturalar != null && Model.Faturalar.Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-striped table-sm">
                                                <thead>
                                                    <tr>
                                                        <th>Fatura No</th>
                                                        <th>Tarih</th>
                                                        <th>Tür</th>
                                                        <th>Açıklama</th>
                                                        <th>Tutar (₺)</th>
                                                        <th>İşlemler</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var fatura in Model.Faturalar.OrderByDescending(f => f.FaturaTarihi))
                                                    {
                                                        <tr>
                                                            <td>@fatura.FaturaNumarasi</td>
                                                            <td>@(fatura.FaturaTarihi?.ToString("dd.MM.yyyy") ?? "-")</td>
                                                            <td>@fatura.FaturaTuru</td>
                                                            <td>@fatura.FaturaNotu</td>
                                                            <td class="text-end">@string.Format("{0:N2}", fatura.GenelToplam)</td>
                                                            <td>
                                                                <div class="btn-group">
                                                                    <a href="@Url.Action("Details", "Fatura", new { id = fatura.FaturaID })" class="btn btn-info btn-sm" title="Detay">
                                                                        <i class="fas fa-eye"></i>
                                                                    </a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info">
                                            Bu cariye ait fatura kaydı bulunmamaktadır.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteCari(button) {
            if (confirm('Bu cariyi silmek istediğinizden emin misiniz?')) {
                const cariId = $(button).data('cari-id');
                
                $.ajax({
                    url: '@Url.Action("SetDelete")',
                    type: 'POST',
                    data: { id: cariId },
                    success: function(result) {
                        if (result.success) {
                            toastr.success(result.message);
                            setTimeout(function() {
                                window.location.href = '@Url.Action("Index")';
                            }, 1500);
                        } else {
                            toastr.error(result.message);
                        }
                    },
                    error: function() {
                        toastr.error('İşlem sırasında bir hata oluştu.');
                    }
                });
            }
        }
        
        function setPassive(button) {
            if (confirm('Bu cariyi pasif duruma almak istediğinizden emin misiniz?')) {
                const cariId = $(button).data('cari-id');
                
                $.ajax({
                    url: '@Url.Action("SetPassive")',
                    type: 'POST',
                    data: { id: cariId },
                    success: function(result) {
                        if (result.success) {
                            toastr.success(result.message);
                            setTimeout(function() {
                                window.location.reload();
                            }, 1500);
                        } else {
                            toastr.error(result.message);
                        }
                    },
                    error: function() {
                        toastr.error('İşlem sırasında bir hata oluştu.');
                    }
                });
            }
        }
        
        function setActive(button) {
            if (confirm('Bu cariyi aktif duruma almak istediğinizden emin misiniz?')) {
                const cariId = $(button).data('cari-id');
                
                $.ajax({
                    url: '@Url.Action("SetActive")',
                    type: 'POST',
                    data: { id: cariId },
                    success: function(result) {
                        if (result.success) {
                            toastr.success(result.message);
                            setTimeout(function() {
                                window.location.reload();
                            }, 1500);
                        } else {
                            toastr.error(result.message);
                        }
                    },
                    error: function() {
                        toastr.error('İşlem sırasında bir hata oluştu.');
                    }
                });
            }
        }
        
        function restoreCari(button) {
            if (confirm('Bu cariyi geri yüklemek istediğinizden emin misiniz?')) {
                const cariId = $(button).data('cari-id');
                
                $.ajax({
                    url: '@Url.Action("RestoreCari")',
                    type: 'POST',
                    data: { id: cariId },
                    success: function(result) {
                        if (result.success) {
                            toastr.success(result.message);
                            setTimeout(function() {
                                window.location.reload();
                            }, 1500);
                        } else {
                            toastr.error(result.message);
                        }
                    },
                    error: function() {
                        toastr.error('İşlem sırasında bir hata oluştu.');
                    }
                });
            }
        }
    </script>
} 