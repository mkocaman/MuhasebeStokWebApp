@model MuhasebeStokWebApp.Data.Entities.Cari
@{
    ViewData["Title"] = "Cari Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    string paraBirimiSembol = "₺";
    if (Model.VarsayilanParaBirimiId.HasValue && ViewBag.ParaBirimleri != null)
    {
        foreach (var pb in ViewBag.ParaBirimleri)
        {
            if (pb.ParaBirimiID == Model.VarsayilanParaBirimiId)
            {
                paraBirimiSembol = pb.Sembol;
                break;
            }
        }
    }
}

<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col">
                <div class="page-header-left">
                    <h3>Cari Detayları</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home"><i class="fa fa-home"></i></a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Cariler</a></li>
                        <li class="breadcrumb-item active">Cari Detayları</li>
                    </ol>
                </div>
            </div>
            <div class="col">
                <div class="float-end">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                        <i class="fa fa-edit"></i> Düzenle
                    </a>
                    <a href="@Url.Action("Ekstre", new { id = Model.Id })" class="btn btn-info">
                        <i class="fa fa-file-alt"></i> Ekstre
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <!-- Cari Bilgileri -->
        <div class="col-xl-4 col-lg-5 col-md-12 mx-auto">
            <div class="card">
                <div class="card-header bg-primary">
                    <h5 class="text-white mb-0">Cari Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-12">
                            <div class="cari-title mb-4">
                                <h3 class="d-flex justify-content-between">
                                    @Model.Ad
                                    <span class="badge @(Model.AktifMi ? "bg-success" : "bg-danger")">
                                        @(Model.AktifMi ? "Aktif" : "Pasif")
                                    </span>
                                </h3>
                                <h5 class="d-flex justify-content-between">
                                    <span>Bakiye</span>
                                    <span class="@(Model.BaslangicBakiye >= 0 ? "text-success" : "text-danger")">
                                        @Model.BaslangicBakiye.ToString("N2") @paraBirimiSembol
                                    </span>
                                </h5>
                            </div>
                            
                            <div class="cari-details">
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <th width="35%">Cari Tipi</th>
                                            <td>@Model.CariTipi</td>
                                        </tr>
                                        <tr>
                                            <th>Cari Kodu</th>
                                            <td>@Model.CariKodu</td>
                                        </tr>
                                        <tr>
                                            <th>Vergi No</th>
                                            <td>@(string.IsNullOrEmpty(Model.VergiNo) ? "-" : Model.VergiNo)</td>
                                        </tr>
                                        <tr>
                                            <th>Vergi Dairesi</th>
                                            <td>@(string.IsNullOrEmpty(Model.VergiDairesi) ? "-" : Model.VergiDairesi)</td>
                                        </tr>
                                        <tr>
                                            <th>Telefon</th>
                                            <td>@(string.IsNullOrEmpty(Model.Telefon) ? "-" : Model.Telefon)</td>
                                        </tr>
                                        <tr>
                                            <th>E-posta</th>
                                            <td>@(string.IsNullOrEmpty(Model.Email) ? "-" : Model.Email)</td>
                                        </tr>
                                        <tr>
                                            <th>Yetkili</th>
                                            <td>@(string.IsNullOrEmpty(Model.Yetkili) ? "-" : Model.Yetkili)</td>
                                        </tr>
                                        <tr>
                                            <th>Adres</th>
                                            <td>@(string.IsNullOrEmpty(Model.Adres) ? "-" : Model.Adres)</td>
                                        </tr>
                                        <tr>
                                            <th>Para Birimi</th>
                                            <td>
                                                @{
                                                    bool paraBirimiFound = false;
                                                    
                                                    if (Model.VarsayilanParaBirimiId.HasValue && ViewBag.ParaBirimleri != null)
                                                    {
                                                        foreach (var pb in ViewBag.ParaBirimleri)
                                                        {
                                                            if (pb.ParaBirimiID == Model.VarsayilanParaBirimiId)
                                                            {
                                                                @($"{pb.Kod} - {pb.Ad} ({pb.Sembol})")
                                                                paraBirimiFound = true;
                                                                break;
                                                            }
                                                        }
                                                    }
                                                    
                                                    if (!paraBirimiFound)
                                                    {
                                                        @:Ana Para Birimi (UZS)
                                                    }
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Varsayılan Kur</th>
                                            <td>
                                                @(Model.VarsayilanKurKullan ? "Varsayılan kur kullanılıyor" : "Güncel kur kullanılıyor")
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Oluşturma Tarihi</th>
                                            <td>@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                        </tr>
                                        @if (Model.GuncellemeTarihi.HasValue)
                                        {
                                            <tr>
                                                <th>Güncelleme Tarihi</th>
                                                <td>@Model.GuncellemeTarihi.Value.ToString("dd.MM.yyyy HH:mm")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Cari Hareketleri -->
        <div class="col-xl-8 col-lg-7 col-md-12">
            <div class="card">
                <div class="card-header bg-primary">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="text-white mb-0">Son Hareketler</h5>
                        <div>
                            <div class="btn-group">
                                <a href="@Url.Action("Ekstre", new { id = Model.Id })" class="btn btn-info btn-sm">
                                    <i class="fa fa-file-alt"></i> Tüm Hareketler
                                </a>
                                <div class="btn-group ms-2">
                                    <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa fa-plus"></i> Hareket Ekle
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" href="@Url.Action("HareketEkle", new { id = Model.Id })">
                                            <i class="fa fa-money-bill-alt"></i> Cari Hareketi Ekle
                                        </a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("YeniHareket", "Banka", new { cariId = Model.Id })">
                                            <i class="fa fa-university"></i> Banka Hareketi Ekle
                                        </a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("YeniHareket", "Kasa", new { cariId = Model.Id })">
                                            <i class="fa fa-cash-register"></i> Kasa Hareketi Ekle
                                        </a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped" id="hareketlerTablosu">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>İşlem Türü</th>
                                <th>Tutar</th>
                                <th>Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CariHareketler != null && Model.CariHareketler.Any())
                            {
                                foreach (var hareket in Model.CariHareketler.OrderByDescending(h => h.Tarih).Take(10))
                                {
                                    <tr>
                                        <td>@hareket.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@hareket.HareketTuru</td>
                                        <td class="text-end @(hareket.Alacak > 0 ? "text-success" : "text-danger")">
                                            @((hareket.Alacak > 0 ? hareket.Alacak : hareket.Borc).ToString("N2")) @paraBirimiSembol
                                        </td>
                                        <td>@hareket.Aciklama</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center">Henüz hareket bulunmuyor.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Son Faturalar -->
            <div class="card mt-4">
                <div class="card-header bg-primary">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="text-white mb-0">Son Faturalar</h5>
                        <a href="@Url.Action("Create", "Fatura", new { cariId = Model.Id })" class="btn btn-light btn-sm">
                            <i class="fa fa-plus"></i> Yeni Fatura
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.SonFaturalar != null && Model.SonFaturalar.Any())
                    {
                        <table class="table table-bordered table-striped" id="faturalarTablosu">
                            <thead>
                                <tr>
                                    <th>Fatura No</th>
                                    <th>Fatura Tarihi</th>
                                    <th>Vade Tarihi</th>
                                    <th>Fatura Türü</th>
                                    <th>Tutar</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var faturaObj in Model.SonFaturalar)
                                {
                                    var fatura = (MuhasebeStokWebApp.Data.Entities.Fatura)faturaObj;
                                    <tr>
                                        <td>@fatura.FaturaNumarasi</td>
                                        <td>@(fatura.FaturaTarihi.HasValue ? fatura.FaturaTarihi.Value.ToString("dd.MM.yyyy") : "-")</td>
                                        <td>@(fatura.VadeTarihi.HasValue ? fatura.VadeTarihi.Value.ToString("dd.MM.yyyy") : "-")</td>
                                        <td>@(fatura.FaturaTuru != null ? fatura.FaturaTuru.FaturaTuruAdi : "-")</td>
                                        <td class="text-end">@(fatura.GenelToplam.HasValue ? fatura.GenelToplam.Value.ToString("N2") + " ₺" : "-")</td>
                                        <td class="text-center">
                                            <a href="@Url.Action("Details", "Fatura", new { id = fatura.FaturaID })" class="btn btn-info btn-sm">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">Bu cariye ait fatura bulunmamaktadır.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12 text-end">
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fa fa-arrow-left"></i> Listeye Dön
            </a>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                <i class="fa fa-edit"></i> Düzenle
            </a>
            <a href="@Url.Action("Ekstre", new { id = Model.Id })" class="btn btn-info">
                <i class="fa fa-file-alt"></i> Ekstre
            </a>
            <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
                <i class="fa fa-trash"></i> Sil
            </a>
        </div>
    </div>
</div>

<!-- Hareket Ekle Modal -->
<div class="modal fade" id="hareketEkleModal" tabindex="-1" aria-labelledby="hareketEkleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="hareketEkleModalLabel">Yeni Hareket Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <form id="hareketEkleForm" action="@Url.Action("HareketEkle")" method="post">
                    <input type="hidden" name="CariId" value="@Model.Id" />
                    <input type="hidden" name="CariAdi" value="@Model.Ad" />
                    
                    <div class="mb-3">
                        <label for="HareketTuru" class="form-label">Hareket Türü</label>
                        <select class="form-select" id="HareketTuru" name="HareketTuru" required>
                            <option value="">Seçiniz</option>
                            <option value="Tahsilat">Tahsilat</option>
                            <option value="Ödeme">Ödeme</option>
                            <option value="Alacak">Alacak</option>
                            <option value="Borç">Borç</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="Tutar" class="form-label">Tutar</label>
                        <input type="number" class="form-control" id="Tutar" name="Tutar" step="0.01" min="0.01" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="Tarih" class="form-label">Tarih</label>
                        <input type="date" class="form-control" id="Tarih" name="Tarih" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="Aciklama" class="form-label">Açıklama</label>
                        <textarea class="form-control" id="Aciklama" name="Aciklama" rows="3"></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="ReferansNo" class="form-label">Referans No</label>
                        <input type="text" class="form-control" id="ReferansNo" name="ReferansNo" />
                    </div>
                    
                    <div class="text-end">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable başlatma
            $('#hareketlerTablosu').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                },
                responsive: true,
                order: [[0, 'desc']],
                pageLength: 10
            });
            
            // Faturalar tablosu
            $('#faturalarTablosu').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                },
                responsive: true,
                order: [[1, 'desc']],
                pageLength: 5
            });
            
            // Form gönderimi
            $('#hareketEkleForm').submit(function(e) {
                e.preventDefault();
                
                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function(result) {
                        if (result.success) {
                            $('#hareketEkleModal').modal('hide');
                            window.location.reload();
                        } else {
                            alert('Hareket eklenirken bir hata oluştu.');
                        }
                    },
                    error: function() {
                        alert('İşlem sırasında bir hata oluştu.');
                    }
                });
            });
        });
    </script>
} 