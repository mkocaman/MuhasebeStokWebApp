@model MuhasebeStokWebApp.ViewModels.Cari.CariEditViewModel
@{
    ViewData["Title"] = "Cari Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Cari Düzenle</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Cariler</a></li>
                    <li class="breadcrumb-item active">Düzenle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>@Model.Ad</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm mb-0">
                            <i class="fas fa-arrow-left me-2"></i>Listeye Dön
                        </a>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="mb-0">Cari bilgilerini güncelleyin</p>
                    </div>
                </div>
                <div class="card-body">
                    <form id="cariEditForm" asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CariID" />
                        <input type="hidden" asp-for="OlusturmaTarihi" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Ad" class="form-label">Cari Adı <span class="text-danger">*</span></label>
                                    <input asp-for="Ad" class="form-control" placeholder="Cari Adı" />
                                    <span asp-validation-for="Ad" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="CariTipi" class="form-label">Cari Tipi <span class="text-danger">*</span></label>
                                    <div class="mt-2">
                                        <div class="form-check form-check-inline">
                                            <input type="radio" id="cariTipiMusteri" name="CariTipi" value="Müşteri" class="form-check-input" @(Model.CariTipi == "Müşteri" ? "checked" : "") />
                                            <label class="form-check-label" for="cariTipiMusteri">Müşteri</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input type="radio" id="cariTipiTedarikci" name="CariTipi" value="Tedarikçi" class="form-check-input" @(Model.CariTipi == "Tedarikçi" ? "checked" : "") />
                                            <label class="form-check-label" for="cariTipiTedarikci">Tedarikçi</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input type="radio" id="cariTipiHerIkisi" name="CariTipi" value="Müşteri ve Tedarikçi" class="form-check-input" @(Model.CariTipi == "Müşteri ve Tedarikçi" ? "checked" : "") />
                                            <label class="form-check-label" for="cariTipiHerIkisi">Her İkisi</label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="CariTipi" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="VergiNo" class="form-label">Vergi No</label>
                                    <input asp-for="VergiNo" class="form-control" placeholder="Vergi No" />
                                    <span asp-validation-for="VergiNo" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="VergiDairesi" class="form-label">Vergi Dairesi</label>
                                    <input asp-for="VergiDairesi" class="form-control" placeholder="Vergi Dairesi" />
                                    <span asp-validation-for="VergiDairesi" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Telefon" class="form-label">Telefon</label>
                                    <input asp-for="Telefon" class="form-control" placeholder="Telefon" />
                                    <span asp-validation-for="Telefon" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label">E-posta</label>
                                    <input asp-for="Email" class="form-control" placeholder="E-posta" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Yetkili" class="form-label">Yetkili</label>
                                    <input asp-for="Yetkili" class="form-control" placeholder="Yetkili" />
                                    <span asp-validation-for="Yetkili" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Adres" class="form-label">Adres</label>
                                    <textarea asp-for="Adres" class="form-control" rows="3" placeholder="Adres"></textarea>
                                    <span asp-validation-for="Adres" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Aciklama" class="form-label">Açıklama</label>
                                    <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Açıklama"></textarea>
                                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                                </div>
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" asp-for="AktifMi">
                                    <label class="form-check-label" asp-for="AktifMi">Aktif</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <div class="card border">
                                    <div class="card-header">
                                        <h5 class="mb-0">Para Birimi Ayarları</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <label asp-for="VarsayilanParaBirimiId" class="control-label">Varsayılan Para Birimi</label>
                                                    <select asp-for="VarsayilanParaBirimiId" class="form-control select2" id="varsayilanParaBirimiSelect">
                                                        @if (ViewBag.ParaBirimleri != null)
                                                        {
                                                            foreach (var paraBirimi in ViewBag.ParaBirimleri)
                                                            {
                                                                bool anaParaBirimi = paraBirimi.AnaParaBirimiMi == true;
                                                                string label = anaParaBirimi 
                                                                    ? $"{paraBirimi.Kod} - {paraBirimi.Ad} (Ana Para Birimi)" 
                                                                    : $"{paraBirimi.Kod} - {paraBirimi.Ad}";
                                                                
                                                                <option value="@paraBirimi.ParaBirimiID" 
                                                                        data-kod="@paraBirimi.Kod" 
                                                                        data-ad="@paraBirimi.Ad"
                                                                        data-sembol="@paraBirimi.Sembol"
                                                                        selected="@(Model.VarsayilanParaBirimiId == paraBirimi.ParaBirimiID)">
                                                                    @label
                                                                </option>
                                                            }
                                                        }
                                                    </select>
                                                    <span asp-validation-for="VarsayilanParaBirimiId" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-check form-switch mt-4">
                                                    <input class="form-check-input" type="checkbox" asp-for="VarsayilanKurKullan" id="varsayilanKurKullanSwitch">
                                                    <label class="form-check-label" asp-for="VarsayilanKurKullan">Hesaplamalarda varsayılan kur kullanılsın</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group mb-0">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Details" asp-route-id="@Model.CariID" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // Form submit işlemi
            $("#cariEditForm").submit(function (e) {
                e.preventDefault();
                
                if (!$(this).valid()) {
                    return false;
                }
                
                // Form verilerini topla
                var formData = $(this).serialize();
                
                // Butonu devre dışı bırak ve yükleniyor göster
                var submitBtn = $(this).find('button[type="submit"]');
                var originalText = submitBtn.val();
                submitBtn.prop('disabled', true).val('Kaydediliyor...');
                
                $.ajax({
                    url: $(this).attr("action"),
                    type: "POST",
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            // Başarılı güncelleme durumunda
                            Swal.fire({
                                title: 'Başarılı!',
                                text: response.message || 'Cari başarıyla güncellendi.',
                                icon: 'success',
                                confirmButtonText: 'Tamam'
                            }).then(function() {
                                // Detay sayfasına yönlendir
                                window.location.href = '@Url.Action("Details", new { id = Model.CariID })';
                            });
                        } else {
                            // İşlem hatası
                            Swal.fire({
                                title: 'Hata!',
                                text: response.message || 'Cari güncellenirken bir hata oluştu.',
                                icon: 'error',
                                confirmButtonText: 'Tamam'
                            });
                            
                            // Varsa hata mesajlarını göster
                            if (response.errors && response.errors.length > 0) {
                                var errorList = '<ul>';
                                $.each(response.errors, function(index, error) {
                                    errorList += '<li>' + error + '</li>';
                                });
                                errorList += '</ul>';
                                
                                $('.validation-summary-errors').html(errorList);
                            }
                        }
                        
                        // Butonu normal duruma getir
                        submitBtn.prop('disabled', false).val(originalText);
                    },
                    error: function (xhr, status, error) {
                        console.error(xhr.responseText);
                        
                        // JSON yanıtını analiz etmeye çalış
                        var errorMessage = 'İşlem sırasında beklenmeyen bir hata oluştu.';
                        try {
                            var jsonResponse = JSON.parse(xhr.responseText);
                            if (jsonResponse && jsonResponse.message) {
                                errorMessage = jsonResponse.message;
                            }
                        } catch (e) {
                            // JSON parse hatası - varsayılan mesajı kullan
                        }
                        
                        Swal.fire({
                            title: 'Hata!',
                            text: errorMessage,
                            icon: 'error',
                            confirmButtonText: 'Tamam'
                        });
                        
                        // Butonu normal duruma getir
                        submitBtn.prop('disabled', false).val(originalText);
                    }
                });
            });
            
            // Para birimi değiştiğinde sembolü güncelle
            $('#varsayilanParaBirimiSelect').change(function () {
                var selectedOption = $(this).find('option:selected');
                var sembol = selectedOption.data('sembol');
                $('#bakiyeParaBirimiSembol').text(sembol || '₺');
            });
        });
    </script>
} 