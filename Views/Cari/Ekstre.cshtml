@model MuhasebeStokWebApp.ViewModels.Cari.CariEkstreRaporViewModel

@{
    ViewData["Title"] = "Cari Ekstre";
}

<!-- Ana sayfa içeriği - Yazdırırken gizlenecek -->
<div class="container-fluid normal-view">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@Model.CariAdi - Cari Ekstre</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <dl class="row">
                                <dt class="col-sm-5">Cari Adı:</dt>
                                <dd class="col-sm-7">@Model.CariAdi</dd>
                                <dt class="col-sm-5">Vergi No:</dt>
                                <dd class="col-sm-7">@(Model.VergiNo ?? "-")</dd>
                                <dt class="col-sm-5">Adres:</dt>
                                <dd class="col-sm-7">@(Model.Adres ?? "-")</dd>
                                @if (!Model.OrijinalParaBirimi)
                                {
                                    <dt class="col-sm-5">Para Birimi:</dt>
                                    <dd class="col-sm-7 font-weight-bold">@Model.ParaBirimiKodu (@Model.ParaBirimiSembol)</dd>
                                    <dt class="col-sm-5">Döviz Kuru:</dt>
                                    <dd class="col-sm-7">@Model.DovizKuru.ToString("0.######") (@Model.DovizKuruTarihi?.ToString("dd.MM.yyyy") ?? "Güncel")</dd>
                                }
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <dl class="row">
                                <dt class="col-sm-6">Başlangıç Tarihi:</dt>
                                <dd class="col-sm-6">@Model.BaslangicTarihi.ToString("dd.MM.yyyy")</dd>
                                <dt class="col-sm-6">Bitiş Tarihi:</dt>
                                <dd class="col-sm-6">@Model.BitisTarihi.ToString("dd.MM.yyyy")</dd>
                                <dt class="col-sm-6">Rapor Tarihi:</dt>
                                <dd class="col-sm-6">@Model.RaporTarihi.ToString("dd.MM.yyyy HH:mm")</dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <form asp-action="Ekstre" method="get" class="mt-3">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="baslangicTarihi">Başlangıç Tarihi</label>
                                            <input type="date" id="baslangicTarihi" name="baslangicTarihi" class="form-control" value="@Model.BaslangicTarihi.ToString("yyyy-MM-dd")" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="bitisTarihi">Bitiş Tarihi</label>
                                            <input type="date" id="bitisTarihi" name="bitisTarihi" class="form-control" value="@Model.BitisTarihi.ToString("yyyy-MM-dd")" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="paraBirimiId">Para Birimi</label>
                                            <select id="paraBirimiId" name="paraBirimiId" class="form-control">
                                                @foreach (var paraBirimi in ViewBag.ParaBirimleri)
                                                {
                                                    if (paraBirimi.Kod != "TRY")
                                                    {
                                                        var isSelected = (Model.VarsayilanParaBirimiId.HasValue && Model.VarsayilanParaBirimiId.Value == paraBirimi.ParaBirimiID) || 
                                                                        (ViewBag.SeciliParaBirimiId != null && ViewBag.SeciliParaBirimiId == paraBirimi.ParaBirimiID);
                                                        if (isSelected)
                                                        {
                                                            <option value="@paraBirimi.ParaBirimiID" selected>@paraBirimi.Kod (@paraBirimi.Sembol)</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@paraBirimi.ParaBirimiID">@paraBirimi.Kod (@paraBirimi.Sembol)</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-md-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary">Filtrele</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <hr />

                    <div class="table-responsive mt-4">
                        <table class="table table-striped table-hover" id="ekstreTable">
                            <thead class="thead-light">
                                <tr>
                                    <th>Tarih</th>
                                    <th>Vade</th>
                                    <th>İşlem</th>
                                    <th>Açıklama</th>
                                    <th>Evrak No</th>
                                    <th class="text-right">Borç <span class="font-weight-bold">@Model.ParaBirimiSembol</span></th>
                                    <th class="text-right">Alacak <span class="font-weight-bold">@Model.ParaBirimiSembol</span></th>
                                    <th class="text-right">Bakiye <span class="font-weight-bold">@Model.ParaBirimiSembol</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var hareket in Model.Hareketler)
                                {
                                    <tr>
                                        <td>@hareket.Tarih.ToString("dd.MM.yyyy")</td>
                                        <td>@(hareket.VadeTarihi.HasValue ? hareket.VadeTarihi.Value.ToString("dd.MM.yyyy") : "")</td>
                                        <td>@hareket.IslemTuru</td>
                                        <td>@hareket.Aciklama</td>
                                        <td>@hareket.EvrakNo</td>
                                        <td class="text-right">@(hareket.Borc > 0 ? hareket.Borc.ToString("N2") : "")</td>
                                        <td class="text-right">@(hareket.Alacak > 0 ? hareket.Alacak.ToString("N2") : "")</td>
                                        <td class="text-right">@hareket.Bakiye.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="font-weight-bold">
                                    <td colspan="5" class="text-right">TOPLAM</td>
                                    <td class="text-right">@Model.ToplamBorc.ToString("N2")</td>
                                    <td class="text-right">@Model.ToplamAlacak.ToString("N2")</td>
                                    <td class="text-right">@Model.Bakiye.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cari Detayına Dön
                            </a>
                            <button type="button" class="btn btn-info" id="btnPrint">
                                <i class="fas fa-print"></i> Yazdır
                            </button>
                            <button type="button" class="btn btn-primary" id="btnExportPdf">
                                <i class="fas fa-file-pdf"></i> PDF Olarak Kaydet
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Yazdırma görünümü - Sadece yazdırma sırasında gösterilecek -->
<div class="print-view" style="display: none;">
    <div class="print-header">
        <h2 class="text-center mb-3">@Model.CariAdi - Cari Ekstre</h2>
        <div class="row mb-3">
            <div class="col-4">
                <strong>Cari Adı:</strong> @Model.CariAdi<br />
                <strong>Vergi No:</strong> @(Model.VergiNo ?? "-")<br />
                <strong>Adres:</strong> @(Model.Adres ?? "-")<br />
                @if (!Model.OrijinalParaBirimi)
                {
                    <div class="currency-info" style="margin-top: 5px; padding: 2px 5px; background-color: #f0f0f0; border-radius: 4px; display: inline-block;">
                        <strong>Para Birimi:</strong> @Model.ParaBirimiKodu (@Model.ParaBirimiSembol)<br />
                        <strong>Döviz Kuru:</strong> @Model.DovizKuru.ToString("0.######") (@Model.DovizKuruTarihi?.ToString("dd.MM.yyyy") ?? "Güncel")
                    </div>
                }
            </div>
            <div class="col-4 text-center">
                <strong>Başlangıç Tarihi:</strong> @Model.BaslangicTarihi.ToString("dd.MM.yyyy")<br />
                <strong>Bitiş Tarihi:</strong> @Model.BitisTarihi.ToString("dd.MM.yyyy")<br />
                <strong>Rapor Tarihi:</strong> @Model.RaporTarihi.ToString("dd.MM.yyyy HH:mm")
            </div>
            <div class="col-4 text-right">
                <img src="/img/logo.png" alt="Logo" style="max-height: 60px;" />
            </div>
        </div>
    </div>

    <table class="table table-bordered" style="width: 100%;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th>Tarih</th>
                <th>Vade</th>
                <th>İşlem</th>
                <th>Açıklama</th>
                <th>Evrak No</th>
                <th style="text-align: right;">Borç <span style="font-weight: bold;">@Model.ParaBirimiSembol</span></th>
                <th style="text-align: right;">Alacak <span style="font-weight: bold;">@Model.ParaBirimiSembol</span></th>
                <th style="text-align: right;">Bakiye <span style="font-weight: bold;">@Model.ParaBirimiSembol</span></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hareket in Model.Hareketler)
            {
                <tr>
                    <td>@hareket.Tarih.ToString("dd.MM.yyyy")</td>
                    <td>@(hareket.VadeTarihi.HasValue ? hareket.VadeTarihi.Value.ToString("dd.MM.yyyy") : "")</td>
                    <td>@hareket.IslemTuru</td>
                    <td>@hareket.Aciklama</td>
                    <td>@hareket.EvrakNo</td>
                    <td style="text-align: right;">@(hareket.Borc > 0 ? hareket.Borc.ToString("N2") : "")</td>
                    <td style="text-align: right;">@(hareket.Alacak > 0 ? hareket.Alacak.ToString("N2") : "")</td>
                    <td style="text-align: right;">@hareket.Bakiye.ToString("N2")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr style="font-weight: bold; background-color: #f2f2f2;">
                <td colspan="5" style="text-align: right;">TOPLAM</td>
                <td style="text-align: right;">@Model.ToplamBorc.ToString("N2")</td>
                <td style="text-align: right;">@Model.ToplamAlacak.ToString("N2")</td>
                <td style="text-align: right;">@Model.Bakiye.ToString("N2")</td>
            </tr>
        </tfoot>
    </table>

    <div class="print-footer mt-3">
        <p class="text-center small">Bu belge @DateTime.Now.ToString("dd.MM.yyyy HH:mm") tarihinde oluşturulmuştur.</p>
    </div>
</div>

@section Styles {
    <style type="text/css">
        /* Normal görünüm stil ayarları */
        .normal-view {
            display: block;
        }
        
        .print-view {
            display: none;
        }
        
        /* Yazdırma stilleri */
        @@media print {
            body * {
                visibility: hidden;
            }
            
            .print-view, .print-view * {
                visibility: visible;
                display: block;
            }
            
            .print-view {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                padding: 20px;
            }
            
            .normal-view {
                display: none;
            }
            
            .print-header, .print-footer {
                margin-bottom: 20px;
            }
            
            table {
                width: 100%;
                border-collapse: collapse;
            }
            
            th, td {
                padding: 8px;
                border: 1px solid #dee2e6;
            }
            
            thead {
                display: table-header-group;
            }
            
            tfoot {
                display: table-footer-group;
            }
        }
    </style>
}

@section Scripts {
    <!-- HTML2PDF kütüphanesini ekleyin -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js" integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    
    <script>
        $(document).ready(function() {
            // Yazdırma işlemi
            $("#btnPrint").click(function() {
                // Yazdırma işlemi öncesi görünümü ayarla
                $(".print-view").show();
                window.print();
                
                // Yazdırma sonrası görünümü geri al
                setTimeout(function() {
                    $(".print-view").hide();
                }, 1000);
            });
            
            // PDF olarak kaydetme işlemi
            $("#btnExportPdf").click(function() {
                // Yazdırma görünümünü geçici olarak göster
                var printView = $(".print-view").clone();
                printView.css("display", "block");
                $("body").append(printView);
                
                // HTML2PDF ayarları
                var opt = {
                    margin: [10, 10],
                    filename: '@(Model.CariAdi.Replace(" ", "_") + "_Ekstre_" + DateTime.Now.ToString("ddMMyyyy") + ".pdf")',
                    image: { type: 'jpeg', quality: 0.98 },
                    html2canvas: { scale: 2, useCORS: true },
                    jsPDF: { unit: 'mm', format: 'a4', orientation: 'landscape' }
                };
                
                // PDF oluşturma ve indirme
                html2pdf().set(opt).from(printView[0]).save().then(function() {
                    printView.remove(); // Geçici eklenen elemanı kaldır
                });
            });
        });
    </script>
} 