@model MuhasebeStokWebApp.ViewModels.Cari.CariHareketCreateViewModel

@{
    ViewData["Title"] = "Cari Hareket Ekle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="HareketEkle" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CariId" />
                        
                        <div class="form-group">
                            <label asp-for="CariAdi" class="control-label"></label>
                            <input asp-for="CariAdi" class="form-control" readonly />
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="HareketTuru" class="control-label"></label>
                            <select asp-for="HareketTuru" class="form-control">
                                <option value="Tahsilat">Tahsilat</option>
                                <option value="Ödeme">Ödeme</option>
                                <option value="Alacak">Alacak</option>
                                <option value="Borç">Borç</option>
                            </select>
                            <span asp-validation-for="HareketTuru" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Tutar" class="control-label"></label>
                            <input asp-for="Tutar" class="form-control" type="number" step="0.01" min="0.01" />
                            <span asp-validation-for="Tutar" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Tarih" class="control-label"></label>
                            <input asp-for="Tarih" class="form-control" type="date" />
                            <span asp-validation-for="Tarih" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="ReferansNo" class="control-label"></label>
                            <input asp-for="ReferansNo" class="form-control" />
                            <span asp-validation-for="ReferansNo" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="ReferansTuru" class="control-label"></label>
                            <select asp-for="ReferansTuru" class="form-control">
                                <option value="">Seçiniz</option>
                                <option value="Nakit">Nakit</option>
                                <option value="Banka">Banka</option>
                                <option value="Çek">Çek</option>
                                <option value="Senet">Senet</option>
                                <option value="Diğer">Diğer</option>
                            </select>
                            <span asp-validation-for="ReferansTuru" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Aciklama" class="control-label"></label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Details" asp-route-id="@Model.CariId" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 