@model IEnumerable<MuhasebeStokWebApp.Data.Entities.Cari>

@{
    ViewData["Title"] = "Cari Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Cari Listesi</h4>
                <button type="button" id="btnYeniCari" class="btn btn-success">
                    <i class="fas fa-plus"></i> Yeni Cari Ekle
                </button>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="table-responsive">
                <table id="cariTable" class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Cari Adı</th>
                            <th>Vergi No</th>
                            <th>Telefon</th>
                            <th>Email</th>
                            <th>Yetkili</th>
                            <th class="text-end">Bakiye</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Ad</td>
                                <td>@item.VergiNo</td>
                                <td>@item.Telefon</td>
                                <td>@item.Email</td>
                                <td>@item.Yetkili</td>
                                <td class="text-end">@item.BaslangicBakiye.ToString("N2") ₺</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="#" class="btn btn-sm btn-warning edit-cari" data-id="@item.CariID" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-danger delete-cari" data-id="@item.CariID" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Cari Ekleme Modal -->
<div class="modal fade" id="cariModal" tabindex="-1" role="dialog" aria-labelledby="cariModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <!-- Modal içeriği AJAX ile yüklenecek -->
        </div>
    </div>
</div>

<!-- Cari Silme Onay Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Cari Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bu cariyi silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" id="btnConfirmDelete" class="btn btn-danger">Sil</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var cariIdToDelete = null;

        $(document).ready(function () {
            // Yeni Cari Ekleme
            $("#btnYeniCari").click(function () {
                openModal('@Url.Action("Create", "Cari")', '#cariModal');
            });

            // Cari Düzenleme
            $(document).on("click", ".edit-cari", function () {
                var id = $(this).data("id");
                openModal('@Url.Action("Edit", "Cari")/' + id, '#cariModal');
            });

            // Cari Silme
            $(document).on("click", ".delete-cari", function () {
                cariIdToDelete = $(this).data("id");
                $("#deleteModal").modal("show");
            });

            // Silme Onayı
            $("#btnConfirmDelete").click(function () {
                if (cariIdToDelete) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Delete", "Cari")/' + cariIdToDelete,
                        success: function (response) {
                            $("#deleteModal").modal("hide");
                            if (response.success) {
                                showAlert('success', 'Başarılı!', response.message);
                                setTimeout(function () {
                                    window.location.reload();
                                }, 1500);
                            } else {
                                showAlert('error', 'Hata!', response.message);
                            }
                        },
                        error: function (xhr) {
                            $("#deleteModal").modal("hide");
                            showAlert('error', 'Hata!', 'Cari silinirken bir hata oluştu: ' + xhr.statusText);
                        }
                    });
                }
            });

            // DataTable başlatma
            try {
                $('#cariTable').DataTable({
                    language: {
                        "emptyTable": "Tabloda herhangi bir veri mevcut değil",
                        "info": "_TOTAL_ kayıttan _START_ - _END_ arasındaki kayıtlar gösteriliyor",
                        "infoEmpty": "Kayıt yok",
                        "infoFiltered": "(_MAX_ kayıt içerisinden bulunan)",
                        "infoPostFix": "",
                        "thousands": ".",
                        "lengthMenu": "Sayfada _MENU_ kayıt göster",
                        "loadingRecords": "Yükleniyor...",
                        "processing": "İşleniyor...",
                        "search": "Ara:",
                        "zeroRecords": "Eşleşen kayıt bulunamadı",
                        "paginate": {
                            "first": "İlk",
                            "last": "Son",
                            "next": "Sonraki",
                            "previous": "Önceki"
                        }
                    },
                    responsive: true,
                    retrieve: true,
                    order: [[0, 'asc']] // Cari adına göre sıralama
                });
            } catch (e) {
                console.log("DataTable başlatılırken bir hata oluştu, ancak işlem devam ediyor.");
            }

            // Otomatik kapanan alertler
            window.setTimeout(function() {
                $(".alert").fadeTo(500, 0).slideUp(500, function() {
                    $(this).remove();
                });
            }, 4000);

            // SweetAlert ile başarı mesajı göster
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                Swal.fire({
                    title: 'Başarılı!',
                    text: '@TempData["SuccessMessage"]',
                    icon: 'success',
                    confirmButtonText: 'Tamam'
                });
                </text>
            }
        });
    </script>
} 