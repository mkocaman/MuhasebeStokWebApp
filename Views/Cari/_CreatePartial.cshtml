@model MuhasebeStokWebApp.ViewModels.Cari.CariCreateViewModel

<div class="modal-header">
    <h5 class="modal-title" id="cariModalLabel">Yeni Cari Ekle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="createCariForm" asp-controller="Cari" asp-action="Create" method="post">
    <div class="modal-body">
        <div id="createFormAlert" class="alert alert-danger d-none" role="alert"></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="CariKodu" class="form-label">Cari Kodu</label>
                    <input asp-for="CariKodu" class="form-control" />
                    <span asp-validation-for="CariKodu" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ad" class="form-label">Cari Adı</label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CariUnvani" class="form-label">Ünvan</label>
                    <input asp-for="CariUnvani" class="form-control" />
                    <span asp-validation-for="CariUnvani" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CariTipi" class="form-label">Cari Tipi</label>
                    <select asp-for="CariTipi" class="form-select">
                        <option value="Müşteri">Müşteri</option>
                        <option value="Tedarikçi">Tedarikçi</option>
                        <option value="MüşteriVeTedarikçi">Müşteri ve Tedarikçi</option>
                    </select>
                    <span asp-validation-for="CariTipi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VergiNo" class="form-label">Vergi Numarası</label>
                    <input asp-for="VergiNo" class="form-control" />
                    <span asp-validation-for="VergiNo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VergiDairesi" class="form-label">Vergi Dairesi</label>
                    <input asp-for="VergiDairesi" class="form-control" />
                    <span asp-validation-for="VergiDairesi" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Telefon" class="form-label">Telefon</label>
                    <input asp-for="Telefon" class="form-control" />
                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">E-posta</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="WebSitesi" class="form-label">Web Sitesi</label>
                    <input asp-for="WebSitesi" class="form-control" />
                    <span asp-validation-for="WebSitesi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Yetkili" class="form-label">Yetkili</label>
                    <input asp-for="Yetkili" class="form-control" />
                    <span asp-validation-for="Yetkili" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BaslangicBakiye" class="form-label">Başlangıç Bakiyesi</label>
                    <input asp-for="BaslangicBakiye" class="form-control" value="0.00" />
                    <span asp-validation-for="BaslangicBakiye" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VarsayilanParaBirimiId" class="form-label">Para Birimi</label>
                    <select asp-for="VarsayilanParaBirimiId" class="form-select">
                        <option value="">Para Birimi Seçiniz</option>
                        @foreach (var paraBirimi in ViewBag.ParaBirimleri)
                        {
                            <option value="@paraBirimi.ParaBirimiID">@paraBirimi.Ad (@paraBirimi.Sembol)</option>
                        }
                    </select>
                    <span asp-validation-for="VarsayilanParaBirimiId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Ulke" class="form-label">Ülke</label>
                    <input asp-for="Ulke" class="form-control" value="Türkiye" />
                    <span asp-validation-for="Ulke" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Il" class="form-label">İl</label>
                    <input asp-for="Il" class="form-control" />
                    <span asp-validation-for="Il" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ilce" class="form-label">İlçe</label>
                    <input asp-for="Ilce" class="form-control" />
                    <span asp-validation-for="Ilce" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PostaKodu" class="form-label">Posta Kodu</label>
                    <input asp-for="PostaKodu" class="form-control" />
                    <span asp-validation-for="PostaKodu" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Adres" class="form-label">Adres</label>
                    <textarea asp-for="Adres" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Adres" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Aciklama" class="form-label">Açıklama</label>
                    <textarea asp-for="Aciklama" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Notlar" class="form-label">Notlar</label>
                    <textarea asp-for="Notlar" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Notlar" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

<script>
    $(document).ready(function() {
        $('#createCariForm').on('submit', function(e) {
            e.preventDefault();
            
            $('#createFormAlert').addClass('d-none');
            
            var formData = $(this).serialize();
            
            $.ajax({
                url: '@Url.Action("Create", "Cari")',
                type: 'POST',
                data: formData,
                success: function(response) {
                    if (response.success) {
                        toastr.success(response.message);
                        setTimeout(function() {
                            window.location.reload();
                        }, 1500);
                    } else {
                        $('#createFormAlert').removeClass('d-none').text(response.message);
                    }
                },
                error: function(xhr, status, error) {
                    var errorMessage = 'Bir hata oluştu. Lütfen tüm alanları kontrol ediniz.';
                    
                    if (xhr.responseJSON && xhr.responseJSON.errors) {
                        errorMessage = Object.values(xhr.responseJSON.errors).flat().join('<br>');
                    }
                    
                    $('#createFormAlert').removeClass('d-none').html(errorMessage);
                }
            });
        });
    });
</script> 