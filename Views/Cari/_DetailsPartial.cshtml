@model MuhasebeStokWebApp.Data.Entities.Cari

<div class="row">
    <div class="col-md-12 mb-3">
        <h4 class="border-bottom pb-2">@Model.Ad</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-light">
                <h5 class="mb-0">Genel Bilgiler</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm table-borderless">
                    <tbody>
                        <tr>
                            <th width="30%">Cari Kodu:</th>
                            <td>@Model.CariKodu</td>
                        </tr>
                        <tr>
                            <th>Cari Tipi:</th>
                            <td>@Model.CariTipi</td>
                        </tr>
                        <tr>
                            <th>Vergi No:</th>
                            <td>@Model.VergiNo</td>
                        </tr>
                        <tr>
                            <th>Vergi Dairesi:</th>
                            <td>@Model.VergiDairesi</td>
                        </tr>
                        <tr>
                            <th>Telefon:</th>
                            <td>@Model.Telefon</td>
                        </tr>
                        <tr>
                            <th>E-posta:</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Web Sitesi:</th>
                            <td>@(string.IsNullOrEmpty(Model.WebSitesi) ? "-" : Model.WebSitesi)</td>
                        </tr>
                        <tr>
                            <th>Durumu:</th>
                            <td>
                                @if(Model.AktifMi)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-light">
                <h5 class="mb-0">İletişim Bilgileri</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm table-borderless">
                    <tbody>
                        <tr>
                            <th width="30%">Yetkili:</th>
                            <td>@Model.Yetkili</td>
                        </tr>
                        <tr>
                            <th>Adres:</th>
                            <td>@Model.Adres</td>
                        </tr>
                        <tr>
                            <th>İl / İlçe:</th>
                            <td>@Model.Il / @Model.Ilce</td>
                        </tr>
                        <tr>
                            <th>Posta Kodu:</th>
                            <td>@Model.PostaKodu</td>
                        </tr>
                        <tr>
                            <th>Ülke:</th>
                            <td>@Model.Ulke</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="card-header bg-light">
                <h5 class="mb-0">Finansal Bilgiler</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="alert alert-info">
                            <h6 class="alert-heading">Başlangıç Bakiye</h6>
                            <h4 class="mb-0">@Model.BaslangicBakiye.ToString("N2") ₺</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="alert alert-success">
                            <h6 class="alert-heading">Oluşturulma Tarihi</h6>
                            <h4 class="mb-0">@Model.OlusturmaTarihi.ToString("dd.MM.yyyy")</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="alert alert-warning">
                            <h6 class="alert-heading">Son Güncelleme</h6>
                            <h4 class="mb-0">@(Model.GuncellemeTarihi?.ToString("dd.MM.yyyy") ?? "-")</h4>
                        </div>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Aciklama))
                {
                    <div class="mt-3">
                        <h6>Açıklama:</h6>
                        <p>@Model.Aciklama</p>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Notlar))
                {
                    <div class="mt-3">
                        <h6>Notlar:</h6>
                        <p>@Model.Notlar</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 