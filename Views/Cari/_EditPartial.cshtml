@model MuhasebeStokWebApp.ViewModels.Cari.CariEditViewModel

<div class="modal-header">
    <h5 class="modal-title" id="cariEditModalLabel">Cari Düzenle: @Model.Ad</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="editCariForm" asp-controller="Cari" asp-action="Edit" method="post">
    <div class="modal-body">
        <div id="editFormAlert" class="alert alert-danger d-none" role="alert"></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <input type="hidden" asp-for="CariID" />

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="CariKodu" class="form-label">Cari Kodu</label>
                    <input asp-for="CariKodu" class="form-control" readonly />
                    <span asp-validation-for="CariKodu" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ad" class="form-label">Cari Adı</label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CariTipi" class="form-label">Cari Tipi</label>
                    <select asp-for="CariTipi" class="form-select">
                        <option value="Müşteri">Müşteri</option>
                        <option value="Tedarikçi">Tedarikçi</option>
                        <option value="MüşteriVeTedarikçi">Müşteri ve Tedarikçi</option>
                    </select>
                    <span asp-validation-for="CariTipi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VergiNo" class="form-label">Vergi Numarası</label>
                    <input asp-for="VergiNo" class="form-control" />
                    <span asp-validation-for="VergiNo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VergiDairesi" class="form-label">Vergi Dairesi</label>
                    <input asp-for="VergiDairesi" class="form-control" />
                    <span asp-validation-for="VergiDairesi" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Telefon" class="form-label">Telefon</label>
                    <input asp-for="Telefon" class="form-control" />
                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">E-posta</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Yetkili" class="form-label">Yetkili</label>
                    <input asp-for="Yetkili" class="form-control" />
                    <span asp-validation-for="Yetkili" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="WebSitesi" class="form-label">Web Sitesi</label>
                    <input asp-for="WebSitesi" class="form-control" />
                    <span asp-validation-for="WebSitesi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VarsayilanParaBirimiId" class="form-label">Para Birimi</label>
                    <select asp-for="VarsayilanParaBirimiId" class="form-select" id="paraBirimiEditSelect">
                        <option value="">Seçiniz</option>
                        @if (ViewBag.ParaBirimleri != null)
                        {
                            @foreach (var pb in ViewBag.ParaBirimleri)
                            {
                                <option value="@pb.ParaBirimiID" data-kod="@pb.Kod" data-sembol="@pb.Sembol" data-ad="@pb.Ad">@pb.Ad (@pb.Kod)</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="VarsayilanParaBirimiId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <div class="mb-3">
                    <label asp-for="Adres" class="form-label">Adres</label>
                    <textarea asp-for="Adres" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Adres" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <div class="mb-3">
                    <label asp-for="Aciklama" class="form-label">Açıklama</label>
                    <textarea asp-for="Aciklama" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="AktifMi">
            <label class="form-check-label" asp-for="AktifMi">Aktif</label>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
</form>

<script>
    $(document).ready(function () {
        // Para birimi seçildiğinde hidden alanlara değerleri atayalım
        $('#paraBirimiEditSelect').change(function () {
            var selected = $(this).find('option:selected');
            $('#VarsayilanParaBirimiKodu').val(selected.data('kod'));
            $('#VarsayilanParaBirimiAdi').val(selected.data('ad'));
            $('#VarsayilanParaBirimiSembol').val(selected.data('sembol'));
        });

        // Form submit olayında AJAX kullanımı
        $('#editCariForm').submit(function (e) {
            e.preventDefault();
            var formData = $(this).serialize();
            
            $.ajax({
                type: 'POST',
                url: $(this).attr('action'),
                data: formData,
                success: function (result) {
                    if (result.success) {
                        $('#cariEditModal').modal('hide');
                        showNotification('success', result.message);
                        // İsteğe bağlı olarak sayfayı yenileyebilir veya tabloyu güncelleyebilirsiniz
                        setTimeout(function() {
                            location.reload();
                        }, 1500);
                    } else {
                        $('#editFormAlert').removeClass('d-none').text(result.message);
                    }
                },
                error: function (xhr, status, error) {
                    $('#editFormAlert').removeClass('d-none').text('İşlem sırasında bir hata oluştu. Lütfen tekrar deneyin.');
                }
            });
        });

        // Sayfa yüklendiğinde seçilen para biriminin bilgilerini gizli alanlara yükle
        var selected = $('#paraBirimiEditSelect').find('option:selected');
        $('#VarsayilanParaBirimiKodu').val(selected.data('kod'));
        $('#VarsayilanParaBirimiAdi').val(selected.data('ad'));
        $('#VarsayilanParaBirimiSembol').val(selected.data('sembol'));
    });
</script> 