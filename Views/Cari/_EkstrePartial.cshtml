@model MuhasebeStokWebApp.ViewModels.Cari.CariEkstreRaporViewModel

<div class="row mb-3">
    <div class="col-md-12">
        <div class="card border-primary">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0 d-flex justify-content-between align-items-center">
                    <span>@Model.CariAdi - Hesap Ekstresi</span>
                    <div>
                        <button class="btn btn-sm btn-light" id="btnFilterEkstre">
                            <i class="fas fa-filter"></i> Filtrele
                        </button>
                    </div>
                </h5>
            </div>
            <div class="card-body">
                <div id="ekstreFilterPanel" class="mb-4" style="display:none;">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label for="startDate" class="form-label">Başlangıç Tarihi</label>
                            <input type="date" class="form-control" id="startDate" value="@Model.BaslangicTarihi.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-4">
                            <label for="endDate" class="form-label">Bitiş Tarihi</label>
                            <input type="date" class="form-control" id="endDate" value="@Model.BitisTarihi.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-primary" id="btnApplyFilter">Uygula</button>
                            <button class="btn btn-secondary" id="btnResetFilter">Sıfırla</button>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th colspan="2" class="text-center">Cari Bilgileri</th>
                        </tr>
                        <tr>
                            <td width="30%"><strong>Cari Adı:</strong></td>
                            <td>@Model.CariAdi</td>
                        </tr>
                        <tr>
                            <td><strong>Vergi No:</strong></td>
                            <td>@Model.VergiNo</td>
                        </tr>
                    </table>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center bg-light">
                                <h6 class="card-title">Başlangıç Bakiyesi</h6>
                                <h4 class="text-primary">@Model.BaslangicBakiye.ToString("N2") @Model.ParaBirimiSembolu</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center bg-light">
                                <h6 class="card-title">Güncel Bakiye</h6>
                                <h4 class="@(Model.Bakiye >= 0 ? "text-success" : "text-danger")">
                                    @Model.Bakiye.ToString("N2") @Model.ParaBirimiSembolu
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="ekstreTable">
                        <thead class="bg-light">
                            <tr>
                                <th>Tarih</th>
                                <th>İşlem No</th>
                                <th>Açıklama</th>
                                <th>Borç</th>
                                <th>Alacak</th>
                                <th>Bakiye</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Başlangıç bakiyesi satırı -->
                            <tr class="table-secondary">
                                <td>@Model.BaslangicTarihi.ToString("dd.MM.yyyy")</td>
                                <td>-</td>
                                <td><strong>Açılış Bakiyesi</strong></td>
                                <td>-</td>
                                <td>-</td>
                                <td><strong>@Model.BaslangicBakiye.ToString("N2") @Model.ParaBirimiSembolu</strong></td>
                            </tr>

                            @if (Model.Hareketler != null && Model.Hareketler.Any())
                            {
                                decimal bakiye = Model.BaslangicBakiye;
                                
                                @foreach (var hareket in Model.Hareketler.OrderBy(h => h.Tarih))
                                {
                                    bakiye = hareket.Bakiye;
                                    
                                    <tr>
                                        <td>@hareket.Tarih.ToString("dd.MM.yyyy")</td>
                                        <td>@hareket.IslemNo</td>
                                        <td>@hareket.Aciklama</td>
                                        <td>@(hareket.Borc > 0 ? hareket.Borc.ToString("N2") : "-")</td>
                                        <td>@(hareket.Alacak > 0 ? hareket.Alacak.ToString("N2") : "-")</td>
                                        <td>@bakiye.ToString("N2") @Model.ParaBirimiSembolu</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">Belirtilen tarih aralığında hareket bulunamadı.</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-info">
                                <td colspan="3" class="text-end"><strong>TOPLAM:</strong></td>
                                <td><strong>@Model.ToplamBorc.ToString("N2") @Model.ParaBirimiSembolu</strong></td>
                                <td><strong>@Model.ToplamAlacak.ToString("N2") @Model.ParaBirimiSembolu</strong></td>
                                <td><strong>@Model.Bakiye.ToString("N2") @Model.ParaBirimiSembolu</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <!-- Yazdırma fonksiyonu -->
                <div class="text-end mt-3">
                    <button class="btn btn-outline-primary" onclick="window.print()">
                        <i class="fas fa-print"></i> Yazdır
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Filtreleme panelini göster/gizle
        $("#btnFilterEkstre").click(function () {
            $("#ekstreFilterPanel").toggle("fast");
        });

        // Filtre uygula
        $("#btnApplyFilter").click(function () {
            var cariId = '@Model.Id';
            var startDate = $("#startDate").val();
            var endDate = $("#endDate").val();

            // AJAX isteği ile filtrelenmiş ekstreyi getir
            $.ajax({
                url: '@Url.Action("Ekstre", "Cari")',
                data: { id: cariId, baslangicTarihi: startDate, bitisTarihi: endDate },
                type: 'GET',
                success: function (result) {
                    $("#cariEkstreContent").html(result);
                },
                error: function (xhr) {
                    alert('Ekstre verileri alınırken bir hata oluştu.');
                }
            });
        });

        // Filtreyi sıfırla
        $("#btnResetFilter").click(function () {
            var cariId = '@Model.Id';
            $.ajax({
                url: '@Url.Action("Ekstre", "Cari")',
                data: { id: cariId },
                type: 'GET',
                success: function (result) {
                    $("#cariEkstreContent").html(result);
                },
                error: function (xhr) {
                    alert('Ekstre verileri alınırken bir hata oluştu.');
                }
            });
        });
    });
</script> 