@model MuhasebeStokWebApp.Data.Entities.DovizModulu.KurDegeri
@{
    ViewData["Title"] = "Döviz Kuru Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Döviz Kuru Detayları</h4>
                <div>
                    <a asp-action="Liste" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left"></i> Listeye Dön
                    </a>
                    <a asp-action="Duzenle" asp-route-id="@Model.KurDegeriID" class="btn btn-outline-light">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header py-3 bg-light">
                            <h6 class="m-0 font-weight-bold text-primary">Kur Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th style="width: 30%">Döviz Kodu</th>
                                        <td>@(Model.ParaBirimi?.Kod ?? "Belirtilmemiş")</td>
                                    </tr>
                                    <tr>
                                        <th>Döviz Adı</th>
                                        <td>@(Model.ParaBirimi?.Ad ?? "Belirtilmemiş")</td>
                                    </tr>
                                    <tr>
                                        <th>Döviz Sembolü</th>
                                        <td>@(Model.ParaBirimi?.Sembol ?? "Belirtilmemiş")</td>
                                    </tr>
                                    <tr>
                                        <th>Tarih</th>
                                        <td>@Model.Tarih.ToString("dd.MM.yyyy")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header py-3 bg-light">
                            <h6 class="m-0 font-weight-bold text-primary">Kur Değerleri</h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th style="width: 30%">Alış</th>
                                        <td class="text-right">@Model.Alis.ToString("N6")</td>
                                    </tr>
                                    <tr>
                                        <th>Satış</th>
                                        <td class="text-right">@Model.Satis.ToString("N6")</td>
                                    </tr>
                                    <tr>
                                        <th>Efektif Alış</th>
                                        <td class="text-right">@Model.Efektif_Alis.ToString("N6")</td>
                                    </tr>
                                    <tr>
                                        <th>Efektif Satış</th>
                                        <td class="text-right">@Model.Efektif_Satis.ToString("N6")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-header py-3 bg-light">
                            <h6 class="m-0 font-weight-bold text-primary">Sistem Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th style="width: 15%">Durumu</th>
                                        <td>
                                            @if (Model.Aktif)
                                            {
                                                <span class="badge badge-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Pasif</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Oluşturma Tarihi</th>
                                        <td>@(Model.OlusturmaTarihi?.ToString("dd.MM.yyyy HH:mm:ss") ?? "Belirtilmemiş")</td>
                                    </tr>
                                    <tr>
                                        <th>Oluşturan Kullanıcı</th>
                                        <td>@(Model.OlusturanKullaniciID ?? "Belirtilmemiş")</td>
                                    </tr>
                                    <tr>
                                        <th>Son Güncelleme Tarihi</th>
                                        <td>@(Model.GuncellemeTarihi?.ToString("dd.MM.yyyy HH:mm:ss") ?? "Güncellenmemiş")</td>
                                    </tr>
                                    <tr>
                                        <th>Son Güncelleyen Kullanıcı</th>
                                        <td>@(Model.SonGuncelleyenKullaniciID ?? "Güncellenmemiş")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Liste" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
                <a asp-action="Duzenle" asp-route-id="@Model.KurDegeriID" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-action="Sil" asp-route-id="@Model.KurDegeriID" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Sil
                </a>
            </div>
        </div>
    </div>
</div> 