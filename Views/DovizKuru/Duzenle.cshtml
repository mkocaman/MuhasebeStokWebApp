@model MuhasebeStokWebApp.ViewModels.DovizModulu.DovizEditViewModel
@{
    ViewData["Title"] = "Döviz Kuru Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Döviz Kuru Düzenle</h4>
                <a asp-action="Liste" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Duzenle" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="KurDegeriID" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header py-3 bg-light">
                                <h6 class="m-0 font-weight-bold text-primary">Kur Bilgileri</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="ParaBirimiID" class="control-label">Para Birimi</label>
                                    <select asp-for="ParaBirimiID" class="form-control" asp-items="ViewBag.ParaBirimleri">
                                        <option value="">-- Para Birimi Seçin --</option>
                                    </select>
                                    <span asp-validation-for="ParaBirimiID" class="text-danger"></span>
                                    <small class="text-muted">Mevcut değer: @Model.ParaBirimiKodu - @Model.ParaBirimiAdi</small>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="Tarih" class="control-label">Tarih</label>
                                    <input asp-for="Tarih" type="date" class="form-control" />
                                    <span asp-validation-for="Tarih" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Kur Değerleri</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Alis" class="control-label">Alış</label>
                                    <input asp-for="Alis" class="form-control" step="0.000001" />
                                    <span asp-validation-for="Alis" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="Satis" class="control-label">Satış</label>
                                    <input asp-for="Satis" class="form-control" step="0.000001" />
                                    <span asp-validation-for="Satis" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="Efektif_Alis" class="control-label">Efektif Alış</label>
                                    <input asp-for="Efektif_Alis" class="form-control" step="0.000001" />
                                    <span asp-validation-for="Efektif_Alis" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="Efektif_Satis" class="control-label">Efektif Satış</label>
                                    <input asp-for="Efektif_Satis" class="form-control" step="0.000001" />
                                    <span asp-validation-for="Efektif_Satis" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-12">
                        <div class="card mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Ek Bilgiler</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Aciklama" class="control-label">Açıklama</label>
                                    <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group form-check">
                                    <input asp-for="Aktif" class="form-check-input" />
                                    <label asp-for="Aktif" class="form-check-label">Aktif</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-action="Liste" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                    <a asp-action="Sil" asp-route-id="@Model.KurDegeriID" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sil
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Alış değeri değişirse efektif alışı güncelle (eğer alış değeri değiştiyse)
            $('#Alis').change(function() {
                if (confirm('Efektif alış değerini de güncellemek ister misiniz?')) {
                    $('#Efektif_Alis').val($(this).val());
                }
            });
            
            // Satış değeri değişirse efektif satışı güncelle (eğer satış değeri değiştiyse)
            $('#Satis').change(function() {
                if (confirm('Efektif satış değerini de güncellemek ister misiniz?')) {
                    $('#Efektif_Satis').val($(this).val());
                }
            });
        });
    </script>
} 