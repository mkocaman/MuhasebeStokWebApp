@model List<MuhasebeStokWebApp.Data.Entities.KurDegeri>

@{
    ViewData["Title"] = "Döviz Kurları";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Döviz Kurları</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="mb-3">
                        <a href="@Url.Action("Create", "DovizKuru")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Yeni Kur Değeri Ekle
                        </a>
                        <a href="@Url.Action("Sync", "DovizKuru")" class="btn btn-success">
                            <i class="fas fa-sync"></i> Merkez Bankasından Kurları Güncelle
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table id="kurDegerleriTable" class="table table-hover table-striped table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Para Birimi</th>
                                    <th>Tarih</th>
                                    <th>Alış Değeri</th>
                                    <th>Satış Değeri</th>
                                    <th>Kaynak</th>
                                    <th>Oluşturma Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var kurDegeri in Model)
                                    {
                                        <tr>
                                            <td>@kurDegeri.ParaBirimi?.Kod (@kurDegeri.ParaBirimi?.Ad)</td>
                                            <td>@kurDegeri.Tarih.ToString("dd.MM.yyyy")</td>
                                            <td class="text-end">@kurDegeri.AlisDegeri.ToString("N4")</td>
                                            <td class="text-end">@kurDegeri.SatisDegeri.ToString("N4")</td>
                                            <td>@kurDegeri.Kaynak</td>
                                            <td>@kurDegeri.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("Edit", "DovizKuru", new { id = kurDegeri.KurDegeriID })" class="btn btn-primary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Details", "DovizKuru", new { id = kurDegeri.KurDegeriID })" class="btn btn-info">
                                                        <i class="fas fa-info-circle"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", "DovizKuru", new { id = kurDegeri.KurDegeriID })" class="btn btn-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">Kayıtlı kur değeri bulunamadı.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Tabloya datatable özelliği ekle
            $('#kurDegerleriTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/tr.json"
                },
                "responsive": true,
                "order": [[1, 'desc']]
            });
        });
    </script>
} 