@model IEnumerable<MuhasebeStokWebApp.Data.Entities.ParaBirimi>
@{
    ViewData["Title"] = "Para Birimi Ayarları";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "ParaBirimi")">Para Birimleri</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Para Birimi Ayarları</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Para Birimi Listesi</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Kod</th>
                                    <th>Ad</th>
                                    <th>Sembol</th>
                                    <th>Format</th>
                                    <th>Sıra</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Kod</td>
                                            <td>@item.Ad</td>
                                            <td>@item.Sembol</td>
                                            <td>@item.Format</td>
                                            <td>@item.Sira</td>
                                            <td>
                                                @if (item.Aktif)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="@Url.Action("ParaBirimiKurlari", "DovizKuru", new { id = item.ParaBirimiID })" class="btn btn-sm btn-info" title="Kur Değerleri">
                                                        <i class="bi bi-currency-exchange"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", "ParaBirimi", new { id = item.ParaBirimiID })" class="btn btn-sm btn-warning" title="Düzenle">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", "ParaBirimi", new { id = item.ParaBirimiID })" class="btn btn-sm btn-danger" title="Sil">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">Kayıt bulunamadı.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Kur Ayarları</h5>
                </div>
                <div class="card-body">
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="otomatikGuncelleme" />
                        <label class="form-check-label" for="otomatikGuncelleme">
                            Kurları otomatik olarak güncelle
                        </label>
                    </div>
                    <div class="mb-3">
                        <button id="btnKurAyarlariKaydet" class="btn btn-primary">Ayarları Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#btnKurAyarlariKaydet').click(function () {
                var otomatikGuncelleme = $('#otomatikGuncelleme').is(':checked');
                
                $.ajax({
                    url: '@Url.Action("KurAyarlariKaydet", "DovizKuru")',
                    type: 'POST',
                    data: { otomatikGuncelleme: otomatikGuncelleme },
                    success: function (result) {
                        if (result.success) {
                            toastr.success(result.message);
                        } else {
                            toastr.error(result.message);
                        }
                    },
                    error: function () {
                        toastr.error('Ayarlar kaydedilirken bir hata oluştu.');
                    }
                });
            });
        });
    </script>
} 