@model MuhasebeStokWebApp.ViewModels.Fatura.FaturaDetailViewModel
@{
    ViewData["Title"] = "Fatura Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Para birimi sembolünü belirle
    string GetCurrencySymbol(string currencyCode)
    {
        return currencyCode switch
        {
            "USD" => "$",
            "UZS" => "so'm",
            "TRY" => "₺",
            "EUR" => "€",
            "GBP" => "£",
            _ => currencyCode
        };
    }
    
    string currencySymbol = GetCurrencySymbol(Model.DovizTuru);
    // USD fatura ise döviz alanında UZS göster, UZS fatura ise döviz alanında USD göster
    string dovizSymbol = Model.DovizTuru == "UZS" ? "$" : "so'm";
    
    // Cari silinmiş mi kontrolü - hem model hem de viewbag'den kontrol edelim
    bool cariSilindi = (ViewBag.CariSilindi != null && (bool)ViewBag.CariSilindi) || Model.CariSilindi;
}

@functions {
    public static string FormatDecimal(decimal value)
    {
        // Türk kültürünü ayarla: binlik ayracı nokta, ondalık ayracı virgül
        return value.ToString("N2", new System.Globalization.CultureInfo("tr-TR"));
    }
}

<div class="container-fluid">
    <div class="row">
        <!-- Fatura Bilgileri -->
        <div class="col-xl-6 col-md-12 box-col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Fatura Bilgileri</h5>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.FaturaID" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <a asp-action="Print" asp-route-id="@Model.FaturaID" class="btn btn-light btn-sm" target="_blank">
                                <i class="fas fa-print"></i> Yazdır
                            </a>
                            @if (Model.IrsaliyeID == null || Model.IrsaliyeID == Guid.Empty)
                            {
                                <a asp-action="CreateIrsaliye" asp-route-id="@Model.FaturaID" class="btn btn-info btn-sm">
                                    <i class="fas fa-file-alt"></i> İrsaliye Oluştur
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Fatura No</h6>
                                <p>@Model.FaturaNumarasi</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Fatura Türü</h6>
                                <p>
                                    @if (Model.FaturaTuru == "Satış")
                                    {
                                        <span class="badge bg-success">Satış</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">Alış</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Fatura Tarihi</h6>
                                <p>@(Model.FaturaTarihi.HasValue ? Model.FaturaTarihi.Value.ToString("dd.MM.yyyy") : "-")</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Vade Tarihi</h6>
                                <p>@(Model.VadeTarihi.HasValue ? Model.VadeTarihi.Value.ToString("dd.MM.yyyy") : "-")</p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="info-group">
                                <h6 class="f-w-600">Cari</h6>
                                <p>
                                    <a asp-controller="Cari" asp-action="Details" asp-route-id="@Model.CariID">@Model.CariAdi</a>
                                    @if (cariSilindi)
                                    {
                                        <span class="badge bg-danger ms-1">Silindi</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="info-group">
                                <h6 class="f-w-600">Son Güncelleme</h6>
                                <p>
                                    @if (Model.GuncellemeTarihi.HasValue)
                                    {
                                        <span>@Model.GuncellemeTarihi.Value.ToString("dd.MM.yyyy HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span>Güncellenmemiş</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Vergi No</h6>
                                <p>@(string.IsNullOrEmpty(Model.CariVergiNo) ? "-" : Model.CariVergiNo)</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Telefon</h6>
                                <p>@(string.IsNullOrEmpty(Model.CariTelefon) ? "-" : Model.CariTelefon)</p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="info-group">
                                <h6 class="f-w-600">Adres</h6>
                                <p>@(string.IsNullOrEmpty(Model.CariAdres) ? "-" : Model.CariAdres)</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Ödeme Durumu</h6>
                                <p>
                                    @switch (ViewBag.OdemeDurumu)
                                    {
                                        case "Ödendi":
                                            <span class="badge bg-success">Ödendi</span>
                                            break;
                                        case "Bekliyor":
                                            <span class="badge bg-warning">Bekliyor</span>
                                            break;
                                        case "Kısmi Ödendi":
                                            <span class="badge bg-primary">Kısmi Ödendi</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@ViewBag.OdemeDurumu</span>
                                            break;
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Döviz Türü</h6>
                                <p>@Model.DovizTuru</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Döviz Kuru</h6>
                                <p>@FormatDecimal(Model.DovizKuru)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Fatura Toplamları ve Açıklama -->
        <div class="col-xl-6 col-md-12 box-col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Fatura Toplamları</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Ara Toplam</h6>
                                <p>@FormatDecimal(Model.AraToplam) @currencySymbol</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">KDV Tutarı</h6>
                                <p>@FormatDecimal(Model.KdvTutari) @currencySymbol</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">İndirim Tutarı</h6>
                                <p>@FormatDecimal(Model.IndirimTutari) @currencySymbol</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Genel Toplam</h6>
                                <p class="f-w-600 text-primary">@FormatDecimal(Model.GenelToplam) @currencySymbol</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Ödenen Tutar</h6>
                                <p class="f-w-600 text-success">@FormatDecimal(ViewBag.OdenenTutar) @currencySymbol</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Ödenecek Tutar</h6>
                                <p class="f-w-600 text-danger">@FormatDecimal(ViewBag.OdenecekTutar) @currencySymbol</p>
                            </div>
                        </div>
                    </div>
                    
                    <hr />
                    
                    <div class="row">
                        <div class="col-12">
                            <h6 class="f-w-600">Döviz Cinsinden Tutarlar (@dovizSymbol)</h6>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Ara Toplam (Döviz)</h6>
                                <p>@FormatDecimal(Model.AraToplamDoviz) @dovizSymbol</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">KDV Tutarı (Döviz)</h6>
                                <p>@FormatDecimal(Model.KdvTutariDoviz) @dovizSymbol</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">İndirim Tutarı (Döviz)</h6>
                                <p>@FormatDecimal(Model.IndirimTutariDoviz) @dovizSymbol</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-12 col-lg-6">
                            <div class="info-group">
                                <h6 class="f-w-600">Genel Toplam (Döviz)</h6>
                                <p class="f-w-600 text-info">@FormatDecimal(Model.GenelToplamDoviz) @dovizSymbol</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Açıklama -->
            <div class="card mt-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Açıklama</h5>
                </div>
                <div class="card-body">
                    @if (string.IsNullOrEmpty(Model.Aciklama))
                    {
                        <p>Açıklama bulunmamaktadır.</p>
                    }
                    else
                    {
                        <p>@Model.Aciklama</p>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <!-- Fatura Kalemleri -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Fatura Kalemleri</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>Ürün Kodu</th>
                                    <th>Ürün Adı</th>
                                    <th>Miktar</th>
                                    <th>Birim</th>
                                    <th>Birim Fiyat</th>
                                    <th>Birim Fiyat (Döviz)</th>
                                    <th>KDV %</th>
                                    <th>İndirim %</th>
                                    <th>Tutar</th>
                                    <th>Net Tutar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.FaturaKalemleri != null && Model.FaturaKalemleri.Any())
                                {
                                    foreach (var kalem in Model.FaturaKalemleri)
                                    {
                                        <tr>
                                            <td>@kalem.UrunKodu</td>
                                            <td>
                                                <a asp-controller="Urun" asp-action="Details" asp-route-id="@kalem.UrunID">
                                                    @kalem.UrunAdi
                                                </a>
                                            </td>
                                            <td>@FormatDecimal(kalem.Miktar)</td>
                                            <td>@kalem.Birim</td>
                                            <td>@FormatDecimal(kalem.BirimFiyat) @currencySymbol</td>
                                            <td>@(kalem.BirimFiyatDoviz > 0 ? FormatDecimal(kalem.BirimFiyatDoviz) : FormatDecimal(kalem.BirimFiyat * Model.DovizKuru)) @dovizSymbol</td>
                                            <td>%@kalem.KdvOrani</td>
                                            <td>%@kalem.IndirimOrani</td>
                                            <td>@FormatDecimal(kalem.Tutar) @currencySymbol</td>
                                            <td>@FormatDecimal(kalem.NetTutar) @currencySymbol</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10" class="text-center">Fatura kalemi bulunamadı.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Ödemeler -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Ödemeler</h5>
                        <button type="button" class="btn btn-light btn-sm" onclick="showAddOdemeModal('@Model.FaturaID')">
                            <i class="fas fa-plus"></i> Yeni Ödeme
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>Ödeme Tarihi</th>
                                    <th>Ödeme Türü</th>
                                    <th>Tutar</th>
                                    <th>Açıklama</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Odemeler != null && Model.Odemeler.Any())
                                {
                                    foreach (var odeme in Model.Odemeler)
                                    {
                                        <tr>
                                            <td>@odeme.OdemeTarihi.ToString("dd.MM.yyyy")</td>
                                            <td>@odeme.OdemeTuru</td>
                                            <td>@FormatDecimal(odeme.OdemeTutari) @currencySymbol</td>
                                            <td>@(string.IsNullOrEmpty(odeme.Aciklama) ? "-" : odeme.Aciklama)</td>
                                            <td>
                                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmDeleteOdeme('@odeme.OdemeID')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">Ödeme bulunamadı.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12 text-end">
            <div class="text-end mb-3">
                <a asp-action="Edit" asp-route-id="@Model.FaturaID" class="btn btn-primary"><i class="fas fa-edit"></i> Düzenle</a>
                <a asp-action="Aklama" asp-route-id="@Model.FaturaID" class="btn btn-success"><i class="fas fa-check-circle"></i> Aklama İşlemi</a>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Listeye Dön</a>
                <a href="javascript:window.print()" class="btn btn-info"><i class="fas fa-print"></i> Yazdır</a>
                <a href="#" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"><i class="fas fa-trash"></i> Sil</a>
            </div>
        </div>
    </div>
</div>

<!-- Ödeme Ekle Modal -->
<div class="modal fade" id="addOdemeModal" tabindex="-1" role="dialog" aria-labelledby="addOdemeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addOdemeModalLabel">Yeni Ödeme Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="odemeForm" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="faturaId" value="@Model.FaturaID" />
                    
                    <div class="form-group mb-3">
                        <label for="odemeTarihi">Ödeme Tarihi</label>
                        <input type="date" id="odemeTarihi" name="odemeTarihi" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="odemeAmount">Ödeme Tutarı</label>
                        <input type="number" id="odemeAmount" name="odemeAmount" class="form-control" step="0.01" min="0.01" value="@(Model.GenelToplam - (Model.OdenenTutar ?? 0)).ToString("0.00")" required />
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="odemeTuru">Ödeme Türü</label>
                        <select id="odemeTuru" name="odemeTuru" class="form-control" required>
                            <option value="Nakit">Nakit</option>
                            <option value="Kredi Kartı">Kredi Kartı</option>
                            <option value="Havale/EFT">Havale/EFT</option>
                            <option value="Çek">Çek</option>
                            <option value="Senet">Senet</option>
                        </select>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="aciklama">Açıklama</label>
                        <textarea id="aciklama" name="aciklama" class="form-control" rows="3"></textarea>
                    </div>
                    
                    <div class="form-group text-end">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Ödeme Sil Modal -->
<div class="modal fade" id="deleteOdemeModal" tabindex="-1" role="dialog" aria-labelledby="deleteOdemeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteOdemeModalLabel">Ödeme Sil</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bu ödemeyi silmek istediğinize emin misiniz?</p>
                <form id="deleteOdemeForm" asp-action="DeleteOdeme" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteOdemeId" name="id" />
                    <div class="form-group text-end">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showAddOdemeModal(faturaId) {
            $('#addOdemeModal').modal('show');
        }
        
        function confirmDeleteOdeme(id) {
            $('#deleteOdemeId').val(id);
            $('#deleteOdemeModal').modal('show');
        }

        $(document).ready(function() {
            $('#odemeForm').submit(function(e) {
                e.preventDefault();
                
                var formData = {
                    faturaId: $('input[name="faturaId"]').val(),
                    odemeAmount: $('#odemeAmount').val(),
                    odemeTuru: $('#odemeTuru').val(),
                    odemeTarihi: $('#odemeTarihi').val(),
                    aciklama: $('#aciklama').val()
                };
                
                $.ajax({
                    url: '@Url.Action("AddOdeme", "Fatura")',
                    type: 'POST',
                    data: formData,
                    success: function(result) {
                        if (result.success) {
                            $('#addOdemeModal').modal('hide');
                            Swal.fire({
                                title: 'Başarılı!',
                                text: result.message,
                                icon: 'success',
                                confirmButtonText: 'Tamam'
                            }).then((result) => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Hata!',
                                text: result.message,
                                icon: 'error',
                                confirmButtonText: 'Tamam'
                            });
                        }
                    },
                    error: function(xhr, status, error) {
                        Swal.fire({
                            title: 'Hata!',
                            text: 'Ödeme eklenirken bir hata oluştu: ' + error,
                            icon: 'error',
                            confirmButtonText: 'Tamam'
                        });
                    }
                });
            });
            
            $('#deleteOdemeForm').submit(function(e) {
                e.preventDefault();
                
                var formData = $(this).serialize();
                
                $.ajax({
                    url: '@Url.Action("DeleteOdeme", "Fatura")',
                    type: 'POST',
                    data: formData,
                    success: function(result) {
                        $('#deleteOdemeModal').modal('hide');
                        window.location.reload();
                    },
                    error: function(xhr, status, error) {
                        alert('Ödeme silinirken bir hata oluştu: ' + error);
                    }
                });
            });

            // Sayfa yüklendikten sonra KDV ve döviz bilgilerini otomatik doldur
            if ($('#dovizParaBirimi').text() != '' && parseFloat('@Model.DovizKuru') > 0) {
                var dovizKuru = parseFloat('@Model.DovizKuru');
                
                // Eğer döviz KDV toplamı 0 ise hesapla
                if (parseFloat('@Model.KdvTutariDoviz') === 0) {
                    var kdvTutari = parseFloat('@Model.KdvTutari'.replace(',', '.'));
                    var kdvTutariDoviz = '@Model.DovizTuru' === 'USD' ? 
                        kdvTutari * dovizKuru : 
                        kdvTutari / dovizKuru;
                    
                    $('.dovizKDV').text(formatMoney(kdvTutariDoviz));
                }
                
                // İndirim tutarı için aynı işlem
                if (parseFloat('@Model.IndirimTutariDoviz') === 0) {
                    var indirimTutari = parseFloat('@Model.IndirimTutari'.replace(',', '.'));
                    var indirimTutariDoviz = '@Model.DovizTuru' === 'USD' ? 
                        indirimTutari * dovizKuru : 
                        indirimTutari / dovizKuru;
                    
                    $('.dovizIndirim').text(formatMoney(indirimTutariDoviz));
                }
            }
        });
        
        // Para formatı
        function formatMoney(amount) {
            return new Intl.NumberFormat('tr-TR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }).format(amount);
        }
    </script>
} 