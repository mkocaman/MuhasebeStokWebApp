@model MuhasebeStokWebApp.ViewModels.Kasa.KasaCreateViewModel
@{
    ViewData["Title"] = "Kasa Ekle";
    var kurlar = ViewBag.Kurlar as List<MuhasebeStokWebApp.ViewModels.DovizKuru.DovizKuruViewModel> ?? new List<MuhasebeStokWebApp.ViewModels.DovizKuru.DovizKuruViewModel>();
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>Yeni Kasa</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><a asp-controller="Kasa" asp-action="Index">Kasalar</a></li>
                    <li class="breadcrumb-item active">Yeni Kasa</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Kasa Bilgileri</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="KasaAdi" class="control-label"></label>
                                    <input asp-for="KasaAdi" class="form-control" />
                                    <span asp-validation-for="KasaAdi" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ParaBirimi" class="control-label">Para Birimi</label>
                                    <select asp-for="ParaBirimi" class="form-control">
                                        <option value="TRY">Türk Lirası (TRY)</option>
                                        @foreach (var doviz in kurlar.Select(d => d.ParaBirimiKodu).Distinct())
                                        {
                                            <option value="@doviz">@doviz</option>
                                        }
                                    </select>
                                    <span asp-validation-for="ParaBirimi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="AcilisBakiye" class="control-label"></label>
                                    <input asp-for="AcilisBakiye" class="form-control" />
                                    <span asp-validation-for="AcilisBakiye" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Aktif" class="control-label"></label>
                                    <div class="form-check mt-2">
                                        <input asp-for="Aktif" class="form-check-input" />
                                        <label class="form-check-label" for="Aktif">Aktif</label>
                                    </div>
                                    <span asp-validation-for="Aktif" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Aciklama" class="control-label"></label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group text-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 