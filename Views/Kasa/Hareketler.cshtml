@model List<MuhasebeStokWebApp.ViewModels.Kasa.KasaHareketViewModel>
@{
    ViewData["Title"] = "Kasa Hareketleri";
    var kasa = ViewBag.Kasa as MuhasebeStokWebApp.ViewModels.Kasa.KasaViewModel;
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>Kasa Hareketleri</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><a asp-controller="Kasa" asp-action="Index">Kasalar</a></li>
                    <li class="breadcrumb-item active">Kasa Hareketleri</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@(kasa?.KasaAdi ?? "Kasa Bilgisi Bulunamadı")</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="info-box bg-light p-3">
                                <h6>Kasa Türü</h6>
                                <h4>@(kasa?.KasaTuru ?? "Belirtilmemiş")</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-box bg-light p-3">
                                <h6>Açılış Bakiyesi</h6>
                                <h4>@(kasa?.AcilisBakiye.ToString("N2") ?? "0.00") ₺</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-box bg-light p-3">
                                <h6>Güncel Bakiye</h6>
                                <h4 class="@(kasa != null && kasa.GuncelBakiye >= 0 ? "text-success" : "text-danger")">
                                    @(kasa?.GuncelBakiye.ToString("N2") ?? "0.00") ₺
                                </h4>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-3 text-end">
                        <a asp-action="Create" asp-route-kasaId="@kasa?.KasaID" class="btn btn-primary">
                            <i class="fa fa-plus"></i> Yeni Hareket
                        </a>
                        <a asp-action="Edit" asp-route-id="@(kasa?.KasaID ?? Guid.Empty)" class="btn btn-warning">
                            <i class="fa fa-edit"></i> Kasayı Düzenle
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left"></i> Kasalara Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Kasa Hareketleri</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Hareket Türü</th>
                                    <th>Referans No</th>
                                    <th>Referans Türü</th>
                                    <th>Açıklama</th>
                                    <th class="text-right">Tutar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count == 0)
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">Kayıt bulunamadı.</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var hareket in Model)
                                    {
                                        <tr>
                                            <td>@hareket.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                @if (hareket.HareketTuru == "Giriş" || hareket.HareketTuru == "Açılış Bakiyesi" || hareket.HareketTuru == "Bakiye Artışı")
                                                {
                                                    <span class="badge badge-success">@hareket.HareketTuru</span>
                                                }
                                                else if (hareket.HareketTuru == "Çıkış" || hareket.HareketTuru == "Bakiye Azalışı")
                                                {
                                                    <span class="badge badge-danger">@hareket.HareketTuru</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-info">@hareket.HareketTuru</span>
                                                }
                                            </td>
                                            <td>@hareket.ReferansNo</td>
                                            <td>@hareket.ReferansTuru</td>
                                            <td>@hareket.Aciklama</td>
                                            <td class="text-right">
                                                @if (hareket.HareketTuru == "Giriş" || hareket.HareketTuru == "Açılış Bakiyesi" || hareket.HareketTuru == "Bakiye Artışı")
                                                {
                                                    <span class="text-success">+@hareket.Tutar.ToString("N2") ₺</span>
                                                }
                                                else if (hareket.HareketTuru == "Çıkış" || hareket.HareketTuru == "Bakiye Azalışı")
                                                {
                                                    <span class="text-danger">-@hareket.Tutar.ToString("N2") ₺</span>
                                                }
                                                else
                                                {
                                                    @hareket.Tutar.ToString("N2") <span>₺</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // DataTable uyarılarını gizle
            $.fn.dataTable.ext.errMode = 'none';
            
            // Tablonun sıralanabilir olmasını sağlar
            if ($.fn.DataTable) {
                try {
                    $('.table').DataTable({
                        "order": [[0, "desc"]], // Tarihe göre tersten sıralama
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json",
                            "info": "" // Bilgilendirme yazısını kaldır (çift görünme sorununu çözmek için)
                        },
                        "retrieve": true
                    });
                } catch (e) {
                    console.log("DataTable başlatılırken bir hata oluştu, ancak işlem devam ediyor.");
                }
            }
            
            // Otomatik kapanan alertler
            window.setTimeout(function() {
                $(".alert").fadeTo(500, 0).slideUp(500, function() {
                    $(this).remove();
                });
            }, 4000);
        });
    </script>
} 