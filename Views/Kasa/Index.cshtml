@model MuhasebeStokWebApp.ViewModels.Kasa.KasaListViewModel
@{
    ViewData["Title"] = "Kasa Listesi";
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>Kasa Listesi</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item active">Kasalar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Kasa Listesi</h5>
                        </div>
                        <div class="col-md-6 text-end">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fa fa-plus"></i> Yeni Kasa Ekle
                            </a>
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#yeniKasaHareketModal">
                                <i class="fa fa-exchange-alt"></i> Yeni Kasa Hareketi
                            </button>
                            <button type="button" class="btn btn-info" id="btnYeniTransfer">
                                <i class="fa fa-sync"></i> İç Transfer
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Toplam Bakiye</h5>
                                    <h3 class="text-primary">@Model.ToplamBakiye.ToString("N2") TL</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered dt-responsive nowrap" id="kasaTable" width="100%">
                            <thead>
                                <tr>
                                    <th>Kasa Adı</th>
                                    <th>Para Birimi</th>
                                    <th>Güncel Bakiye</th>
                                    <th>Açıklama</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kasa in Model.Kasalar)
                                {
                                    <tr>
                                        <td>@kasa.KasaAdi</td>
                                        <td>@kasa.ParaBirimi</td>
                                        <td class="text-end">@kasa.GuncelBakiye.ToString("N2")</td>
                                        <td>@kasa.Aciklama</td>
                                        <td>
                                            @if (kasa.Aktif)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Hareketler" asp-route-id="@kasa.KasaID" class="btn btn-sm btn-info" title="Hareketler">
                                                    <i class="fa fa-list"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-success btn-hareket" data-kasa-id="@kasa.KasaID" title="Hareket Ekle">
                                                    <i class="fa fa-exchange-alt"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-primary btn-transfer" data-kasa-id="@kasa.KasaID" title="Transfer Yap">
                                                    <i class="fa fa-sync"></i>
                                                </button>
                                                <a asp-action="Edit" asp-route-id="@kasa.KasaID" class="btn btn-sm btn-warning" title="Düzenle">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@kasa.KasaID" class="btn btn-sm btn-danger" title="Sil">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Kasa Hareketi Modal -->
<div class="modal fade modal-lg" id="yeniKasaHareketModal" tabindex="-1" aria-labelledby="kasaHareketModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="yeniKasaHareketContent">
            <!-- Modal içeriği AJAX ile yüklenecek -->
        </div>
    </div>
</div>

<!-- İç Transfer Modal -->
<div class="modal fade modal-lg" id="transferModal" tabindex="-1" aria-labelledby="transferModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="transferModalContent">
            <!-- Modal içeriği AJAX ile yüklenecek -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            try {
                $('#kasaTable').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                    },
                    "responsive": true,
                    "processing": true,
                    "columnDefs": [
                        { "className": "text-end", "targets": [2] }
                    ]
                });
            } catch (e) {
                console.error("DataTable başlatma hatası:", e);
            }

            // Otomatik kapanan alertler
            window.setTimeout(function() {
                $(".alert").fadeTo(500, 0).slideUp(500, function() {
                    $(this).remove();
                });
            }, 4000);

            // SweetAlert ile başarı mesajı göster
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                Swal.fire({
                    title: 'Başarılı!',
                    text: '@TempData["SuccessMessage"]',
                    icon: 'success',
                    confirmButtonText: 'Tamam'
                });
                </text>
            }
            
            // Yeni Kasa Hareketi Modal
            $('#yeniKasaHareketModal').on('show.bs.modal', function (e) {
                var kasaID = $(e.relatedTarget).data('kasa-id');
                var url = '/Kasa/YeniHareket';
                
                if (kasaID) {
                    url += '?id=' + kasaID;
                }
                
                $('#yeniKasaHareketContent').load(url);
            });
            
            // İç Transfer Modal
            $('#btnYeniTransfer').click(function() {
                var url = '/Kasa/YeniTransfer';
                $('#transferModalContent').load(url, function() {
                    $('#transferModal').modal('show');
                });
            });
            
            // Tablodan kasa ID ile transfer modalını açma
            $(document).on('click', '.btn-transfer', function() {
                var kasaID = $(this).data('kasa-id');
                var url = '/Kasa/YeniTransfer';
                
                if (kasaID) {
                    url += '?kasaId=' + kasaID;
                }
                
                $('#transferModalContent').load(url, function() {
                    $('#transferModal').modal('show');
                });
            });

            // Tablodan kasa ID ile hareket modalını açma
            $(document).on('click', '.btn-hareket', function() {
                var kasaID = $(this).data('kasa-id');
                var url = '/Kasa/YeniHareket?id=' + kasaID;
                
                $('#yeniKasaHareketContent').load(url, function() {
                    $('#yeniKasaHareketModal').modal('show');
                });
            });
        });
    </script>
} 
