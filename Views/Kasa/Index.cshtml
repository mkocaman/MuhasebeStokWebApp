@model MuhasebeStokWebApp.ViewModels.Kasa.KasaListViewModel
@{
    ViewData["Title"] = "Kasa Listesi";
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>Kasa Listesi</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item active">Kasalar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Kasa Listesi</h5>
                        </div>
                        <div class="col-md-6 text-end">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fa fa-plus"></i> Yeni Kasa Ekle
                            </a>
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#yeniKasaHareketModal">
                                <i class="fa fa-exchange-alt"></i> Yeni Kasa Hareketi
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Toplam Bakiye</h5>
                                    <h3 class="text-primary">@Model.ToplamBakiye.ToString("N2") TL</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered dt-responsive nowrap" id="kasaTable" width="100%">
                            <thead>
                                <tr>
                                    <th>Kasa Adı</th>
                                    <th>Para Birimi</th>
                                    <th>Güncel Bakiye</th>
                                    <th>Açıklama</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Kasalar)
                                {
                                    <tr>
                                        <td>@item.KasaAdi</td>
                                        <td>@item.ParaBirimi</td>
                                        <td class="text-right">@item.GuncelBakiye.ToString("N2")</td>
                                        <td>@item.Aciklama</td>
                                        <td>
                                            @if (item.Aktif)
                                            {
                                                <span class="badge badge-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.KasaID" class="btn btn-info btn-sm">
                                                    <i class="fa fa-info-circle"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.KasaID" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.KasaID" class="btn btn-danger btn-sm">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                                <a asp-action="Hareketler" asp-route-id="@item.KasaID" class="btn btn-secondary btn-sm">
                                                    <i class="fa fa-exchange-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Yeni Kasa Hareketi Modal -->
<div class="modal fade" id="yeniKasaHareketModal" tabindex="-1" aria-labelledby="yeniKasaHareketModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div id="yeniKasaHareketContainer">
                <div class="modal-body text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            try {
                $('#kasaTable').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                    },
                    "responsive": true,
                    "processing": true,
                    "columnDefs": [
                        { "className": "text-end", "targets": [2] }
                    ]
                });
            } catch (e) {
                console.error("DataTable başlatma hatası:", e);
            }

            // Otomatik kapanan alertler
            window.setTimeout(function() {
                $(".alert").fadeTo(500, 0).slideUp(500, function() {
                    $(this).remove();
                });
            }, 4000);

            // SweetAlert ile başarı mesajı göster
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                Swal.fire({
                    title: 'Başarılı!',
                    text: '@TempData["SuccessMessage"]',
                    icon: 'success',
                    confirmButtonText: 'Tamam'
                });
                </text>
            }
            
            // Yeni Kasa Hareketi Modal
            $('#yeniKasaHareketModal').on('shown.bs.modal', function (e) {
                // Modal içeriğini yükle
                $.ajax({
                    url: '@Url.Action("YeniHareket", "Kasa")',
                    type: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function(data) {
                        $('#yeniKasaHareketContainer').html(data);
                    },
                    error: function(xhr, status, error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            text: 'Kasa hareketi formu yüklenirken bir hata oluştu.',
                            confirmButtonText: 'Tamam'
                        });
                    }
                });
            });
        });
    </script>
} 
