@model MuhasebeStokWebApp.ViewModels.Kullanici.RolViewModel

@{
    ViewData["Title"] = "Rol Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Rol Sil</h4>
                <a asp-action="Roller" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-danger mb-4" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Dikkat!</strong> Bu rolü silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Rol Adı</label>
                        <input type="text" class="form-control" value="@Model.Name" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Kullanıcı Sayısı</label>
                        <input type="text" class="form-control" value="@Model.UserCount" readonly />
                    </div>
                </div>
            </div>

            <form asp-action="DeleteRole" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mt-3">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                    <a asp-action="Roller" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>