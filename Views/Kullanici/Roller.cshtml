@model IEnumerable<MuhasebeStokWebApp.ViewModels.Kullanici.RolViewModel>

@{
    ViewData["Title"] = "Rol Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Rol Listesi</h4>
                <a asp-action="CreateRole" class="btn btn-success">
                    <i class="fas fa-plus"></i> Yeni Rol
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="rolTable">
                    <thead class="table-light">
                        <tr>
                            <th>Rol Adı</th>
                            <th>Kullanıcı Sayısı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.UserCount</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger btn-sm ms-1" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Yönetimi</h6>
            <a asp-action="Index" class="btn btn-info btn-sm">
                <i class="fas fa-users"></i> Kullanıcıları Yönet
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#rolTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                }
            });

            // Alert mesajlarını otomatik kapatma
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);

            // SweetAlert başarı mesajı
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                Swal.fire({
                    title: 'Başarılı!',
                    text: '@TempData["SuccessMessage"]',
                    icon: 'success',
                    confirmButtonText: 'Tamam'
                });
                </text>
            }
        });
    </script>
} 