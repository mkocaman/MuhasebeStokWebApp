@model MuhasebeStokWebApp.ViewModels.Kur.KurAyarlariViewModel

@{
    ViewData["Title"] = "Kur Ayarları";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Kur Ayarları</h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-sm btn-secondary">
                            <i class="fas fa-arrow-left"></i> Kur Yönetimine Dön
                        </a>
                    </div>
                </div>
                <form asp-action="Ayarlar" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="KurAyarlariID" />
                        
                        <div class="form-group">
                            <label asp-for="BazParaBirimiKodu" class="control-label"></label>
                            <select asp-for="BazParaBirimiKodu" asp-items="Model.ParaBirimleri" class="form-control select2">
                                <option value="">-- Seçiniz --</option>
                            </select>
                            <span asp-validation-for="BazParaBirimiKodu" class="text-danger"></span>
                            <small class="form-text text-muted">Genellikle USD (Amerikan Doları) seçilir.</small>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="IkinciParaBirimiKodu" class="control-label"></label>
                            <select asp-for="IkinciParaBirimiKodu" asp-items="Model.ParaBirimleri" class="form-control select2">
                                <option value="">-- Seçiniz --</option>
                            </select>
                            <span asp-validation-for="IkinciParaBirimiKodu" class="text-danger"></span>
                            <small class="form-text text-muted">Özbekistan için UZS (Özbekistan Somu) seçilebilir.</small>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="UcuncuParaBirimiKodu" class="control-label"></label>
                            <select asp-for="UcuncuParaBirimiKodu" asp-items="Model.ParaBirimleri" class="form-control select2">
                                <option value="">-- Seçiniz --</option>
                            </select>
                            <span asp-validation-for="UcuncuParaBirimiKodu" class="text-danger"></span>
                            <small class="form-text text-muted">Türkiye için TRY (Türk Lirası) seçilebilir.</small>
                        </div>
                        
                        <div class="form-group form-check">
                            <input asp-for="OtomatikGuncelleme" class="form-check-input" />
                            <label asp-for="OtomatikGuncelleme" class="form-check-label"></label>
                            <small class="form-text text-muted">Kurların otomatik olarak güncellenip güncellenmeyeceğini belirler.</small>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="GuncellemeSikligi" class="control-label"></label>
                            <input asp-for="GuncellemeSikligi" class="form-control" />
                            <span asp-validation-for="GuncellemeSikligi" class="text-danger"></span>
                            <small class="form-text text-muted">Kurların kaç saatte bir güncelleneceğini belirler (1-168 saat).</small>
                        </div>
                        
                        @if (Model.SonGuncellemeTarihi.HasValue)
                        {
                            <div class="form-group">
                                <label asp-for="SonGuncellemeTarihi" class="control-label"></label>
                                <input asp-for="SonGuncellemeTarihi" class="form-control" readonly />
                                <small class="form-text text-muted">Kurların en son ne zaman güncellendiğini gösterir.</small>
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="text-right">
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('.select2').select2();
            
            $('#OtomatikGuncelleme').change(function() {
                if ($(this).is(':checked')) {
                    $('#GuncellemeSikligi').prop('disabled', false);
                } else {
                    $('#GuncellemeSikligi').prop('disabled', true);
                }
            });
            
            // Sayfa yüklendiğinde kontrol et
            if (!$('#OtomatikGuncelleme').is(':checked')) {
                $('#GuncellemeSikligi').prop('disabled', true);
            }
        });
    </script>
} 