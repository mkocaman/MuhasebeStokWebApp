@model MuhasebeStokWebApp.ViewModels.Kur.KurCeviriciViewModel

@{
    ViewData["Title"] = "Kur Çevirici";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Kur Çevirici</h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-sm btn-secondary">
                            <i class="fas fa-arrow-left"></i> Kur Yönetimine Dön
                        </a>
                    </div>
                </div>
                <form asp-action="Cevirici" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="KaynakParaBirimiKod" class="control-label"></label>
                            <select asp-for="KaynakParaBirimiKod" asp-items="Model.ParaBirimleri" class="form-control select2">
                                <option value="">-- Seçiniz --</option>
                            </select>
                            <span asp-validation-for="KaynakParaBirimiKod" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="HedefParaBirimiKod" class="control-label"></label>
                            <select asp-for="HedefParaBirimiKod" asp-items="Model.ParaBirimleri" class="form-control select2">
                                <option value="">-- Seçiniz --</option>
                            </select>
                            <span asp-validation-for="HedefParaBirimiKod" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Miktar" class="control-label"></label>
                            <input asp-for="Miktar" class="form-control" />
                            <span asp-validation-for="Miktar" class="text-danger"></span>
                        </div>
                        
                        @if (Model.SonucGoster)
                        {
                            <div class="alert alert-success mt-4">
                                <h5 class="mb-3">Çevirme Sonucu</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Miktar:</strong> @Model.Miktar.ToString("N2") @Model.KaynakParaBirimiKod
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Sonuç:</strong> @Model.Sonuc.ToString("N2") @Model.HedefParaBirimiKod
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-md-12">
                                        <strong>Kullanılan Kur:</strong> 1 @Model.KaynakParaBirimiKod = @Model.KullanilanKur.ToString("N6") @Model.HedefParaBirimiKod
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-md-12">
                                        <strong>Tarih:</strong> @Model.Tarih.ToString("dd.MM.yyyy HH:mm")
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="text-right">
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">Çevir</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('.select2').select2();
            
            // Para birimlerini değiştirme butonu
            $('#degistirBtn').click(function(e) {
                e.preventDefault();
                var kaynakKod = $('#KaynakParaBirimiKod').val();
                var hedefKod = $('#HedefParaBirimiKod').val();
                
                $('#KaynakParaBirimiKod').val(hedefKod).trigger('change');
                $('#HedefParaBirimiKod').val(kaynakKod).trigger('change');
            });
        });
    </script>
} 