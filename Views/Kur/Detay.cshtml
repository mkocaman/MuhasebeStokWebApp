@model MuhasebeStokWebApp.ViewModels.DovizKuruViewModel

@{
    ViewData["Title"] = "Döviz Kuru Detayı";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Döviz Kuru Detayı</h4>
                        <a asp-action="Liste" class="btn btn-outline-light">
                            <i class="fas fa-arrow-left"></i> Listeye Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header py-3 bg-light">
                                    <h6 class="m-0 font-weight-bold text-primary">Kur Bilgileri</h6>
                                </div>
                                <div class="card-body">
                                    <table class="table table-bordered">
                                        <tbody>
                                            <tr>
                                                <th style="width: 40%">Kaynak Para Birimi</th>
                                                <td>@Model.KaynakParaBirimi</td>
                                            </tr>
                                            <tr>
                                                <th>Hedef Para Birimi</th>
                                                <td>@Model.HedefParaBirimi</td>
                                            </tr>
                                            <tr>
                                                <th>Tarih</th>
                                                <td>@Model.Tarih.ToString("dd.MM.yyyy")</td>
                                            </tr>
                                            <tr>
                                                <th>Kaynak</th>
                                                <td>@Model.Kaynak</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header py-3 bg-light">
                                    <h6 class="m-0 font-weight-bold text-primary">Kur Değerleri</h6>
                                </div>
                                <div class="card-body">
                                    <table class="table table-bordered">
                                        <tbody>
                                            <tr>
                                                <th style="width: 40%">Kur Değeri</th>
                                                <td class="text-right">@Model.KurDegeri.ToString("N6")</td>
                                            </tr>
                                            <tr>
                                                <th>Alış Fiyatı</th>
                                                <td class="text-right">@Model.AlisFiyati.ToString("N6")</td>
                                            </tr>
                                            <tr>
                                                <th>Satış Fiyatı</th>
                                                <td class="text-right">@Model.SatisFiyati.ToString("N6")</td>
                                            </tr>
                                            <tr>
                                                <th>Efektif Alış</th>
                                                <td class="text-right">@Model.EfektifAlisFiyati.ToString("N6")</td>
                                            </tr>
                                            <tr>
                                                <th>Efektif Satış</th>
                                                <td class="text-right">@Model.EfektifSatisFiyati.ToString("N6")</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="card mb-4">
                                <div class="card-header py-3 bg-light">
                                    <h6 class="m-0 font-weight-bold text-primary">Ek Bilgiler</h6>
                                </div>
                                <div class="card-body">
                                    <table class="table table-bordered">
                                        <tbody>
                                            <tr>
                                                <th style="width: 30%">Açıklama</th>
                                                <td>@(string.IsNullOrEmpty(Model.Aciklama) ? "-" : Model.Aciklama)</td>
                                            </tr>
                                            <tr>
                                                <th>Oluşturma Tarihi</th>
                                                <td>@Model.GuncellemeTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                            </tr>
                                            <tr>
                                                <th>Durum</th>
                                                <td>
                                                    @if (Model.Aktif)
                                                    {
                                                        <span class="badge bg-success">Aktif</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Pasif</span>
                                                    }
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="btn-group">
                        <a asp-action="Liste" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Listeye Dön
                        </a>
                        <a asp-action="Duzenle" asp-route-id="@Model.DovizKuruID" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <a asp-action="Sil" asp-route-id="@Model.DovizKuruID" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Sil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 