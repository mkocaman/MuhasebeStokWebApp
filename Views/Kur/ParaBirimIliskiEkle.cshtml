@model MuhasebeStokWebApp.ViewModels.Kur.DovizIliskiViewModel

@{
    ViewData["Title"] = "Para Birimi İlişkisi Ekle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Para Birimi İlişkisi Ekle</h3>
                    <div class="card-tools">
                        <a asp-action="ParaBirimIliskileri" class="btn btn-sm btn-secondary">
                            <i class="fas fa-arrow-left"></i> İlişki Listesine Dön
                        </a>
                    </div>
                </div>
                <form asp-action="ParaBirimIliskiEkle" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="KaynakParaBirimiID" class="control-label"></label>
                            <select asp-for="KaynakParaBirimiID" asp-items="Model.ParaBirimleri" class="form-control select2">
                                <option value="">-- Seçiniz --</option>
                            </select>
                            <span asp-validation-for="KaynakParaBirimiID" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="HedefParaBirimiID" class="control-label"></label>
                            <select asp-for="HedefParaBirimiID" asp-items="Model.ParaBirimleri" class="form-control select2">
                                <option value="">-- Seçiniz --</option>
                            </select>
                            <span asp-validation-for="HedefParaBirimiID" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group form-check">
                            <input asp-for="Aktif" class="form-check-input" />
                            <label asp-for="Aktif" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="text-right">
                            <a asp-action="ParaBirimIliskileri" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('.select2').select2();
        });
    </script>
} 