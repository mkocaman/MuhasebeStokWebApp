@model MuhasebeStokWebApp.ViewModels.Kur.DovizIliskiViewModel

@{
    ViewData["Title"] = "Para Birimi İlişkisi Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-danger">
                    <h3 class="card-title">Para Birimi İlişkisi Sil</h3>
                    <div class="card-tools">
                        <a asp-action="ParaBirimIliskileri" class="btn btn-sm btn-secondary">
                            <i class="fas fa-arrow-left"></i> İlişki Listesine Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5><i class="icon fas fa-exclamation-triangle"></i> Uyarı!</h5>
                        <p>Bu para birimi ilişkisini silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-4">Kaynak Para Birimi</dt>
                        <dd class="col-sm-8">@Model.KaynakParaBirimiKodu</dd>
                        
                        <dt class="col-sm-4">Hedef Para Birimi</dt>
                        <dd class="col-sm-8">@Model.HedefParaBirimiKodu</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Aktif)</dt>
                        <dd class="col-sm-8">
                            @if (Model.Aktif)
                            {
                                <span class="badge badge-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Pasif</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="ParaBirimIliskiSil" method="post">
                        <input type="hidden" asp-for="DovizIliskiID" />
                        <div class="text-right">
                            <a asp-action="ParaBirimIliskileri" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 