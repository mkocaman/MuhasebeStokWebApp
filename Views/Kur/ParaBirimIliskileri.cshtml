@model List<MuhasebeStokWebApp.ViewModels.Kur.DovizIliskiViewModel>

@{
    ViewData["Title"] = "Para Birimi İlişkileri";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Para Birimi İlişkileri</h3>
                    <div class="card-tools">
                        <a asp-action="ParaBirimIliskiEkle" class="btn btn-sm btn-primary">
                            <i class="fas fa-plus"></i> Yeni İlişki Ekle
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            Henüz tanımlanmış para birimi ilişkisi bulunmamaktadır.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Kaynak</th>
                                        <th>Hedef</th>
                                        <th>Durum</th>
                                        <th style="width: 150px;">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.KaynakParaBirimiKodu</td>
                                            <td>@item.HedefParaBirimiKodu</td>
                                            <td>
                                                @if (item.Aktif)
                                                {
                                                    <span class="badge badge-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="ParaBirimIliskiDuzenle" asp-route-id="@item.DovizIliskiID" class="btn btn-sm btn-info">
                                                    <i class="fas fa-edit"></i> Düzenle
                                                </a>
                                                <a asp-action="ParaBirimIliskiSil" asp-route-id="@item.DovizIliskiID" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i> Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Kur Yönetimine Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 