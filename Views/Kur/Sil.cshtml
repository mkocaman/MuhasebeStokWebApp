@model MuhasebeStokWebApp.ViewModels.DovizKuruViewModel

@{
    ViewData["Title"] = "Döviz Kuru Sil";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Döviz Kuru Silme Onayı</h4>
                <a asp-action="Liste" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-danger mb-4">
                <h5 class="alert-heading">DİKKAT!</h5>
                <p>Bu döviz kuru kaydını silmek istediğinizden emin misiniz? Bu işlem geri alınamaz ve ilgili hesaplamaları etkileyebilir.</p>
                <hr>
                <p class="mb-0">Devam etmek istediğinizden emin misiniz?</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header py-3 bg-light">
                            <h6 class="m-0 font-weight-bold text-primary">Kur Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th style="width: 40%">Kaynak Para Birimi</th>
                                        <td>@Model.KaynakParaBirimi</td>
                                    </tr>
                                    <tr>
                                        <th>Hedef Para Birimi</th>
                                        <td>@Model.HedefParaBirimi</td>
                                    </tr>
                                    <tr>
                                        <th>Kur Değeri</th>
                                        <td>@Model.KurDegeri.ToString("N6")</td>
                                    </tr>
                                    <tr>
                                        <th>Tarih</th>
                                        <td>@Model.Tarih.ToString("dd.MM.yyyy")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Sil" method="post">
                <input type="hidden" asp-for="DovizKuruID" />
                <div class="form-group mt-4 text-center">
                    <a asp-action="Liste" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 