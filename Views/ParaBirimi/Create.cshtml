@model MuhasebeStokWebApp.Data.Entities.ParaBirimi

@{
    ViewData["Title"] = "Yeni Para Birimi Ekle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Yeni Para Birimi Ekle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Kod" class="control-label">Döviz Kodu</label>
                                    <input asp-for="Kod" class="form-control" placeholder="Örn: TRY, USD, EUR" maxlength="5" required />
                                    <span asp-validation-for="Kod" class="text-danger"></span>
                                    <small class="form-text text-muted">Para birimi için uluslararası 3 harfli kod (TRY, USD, EUR gibi)</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Sembol" class="control-label">Sembol</label>
                                    <input asp-for="Sembol" class="form-control" placeholder="Örn: ₺, $, €" maxlength="5" required />
                                    <span asp-validation-for="Sembol" class="text-danger"></span>
                                    <small class="form-text text-muted">Para birimi için sembol (₺, $, € gibi)</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Ad" class="control-label">Para Birimi Adı</label>
                                    <input asp-for="Ad" class="form-control" placeholder="Örn: Türk Lirası, Amerikan Doları" required />
                                    <span asp-validation-for="Ad" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group form-check mb-3">
                            <input type="checkbox" asp-for="Aktif" class="form-check-input" checked />
                            <label asp-for="Aktif" class="form-check-label">Aktif</label>
                        </div>
                        
                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Listeye Dön
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 