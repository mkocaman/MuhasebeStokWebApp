@model MuhasebeStokWebApp.Data.Entities.ParaBirimiModulu.ParaBirimi
@{
    ViewData["Title"] = "Para Birimi Detayı";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Para Birimi Detayı</h4>
            <div>
                <a asp-action="Duzenle" asp-route-id="@Model.ParaBirimiID" class="btn btn-info btn-sm">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Para Birimi Kodu:</dt>
                        <dd class="col-sm-8">@Model.Kod</dd>

                        <dt class="col-sm-4">Para Birimi Adı:</dt>
                        <dd class="col-sm-8">@Model.Ad</dd>

                        <dt class="col-sm-4">Sembol:</dt>
                        <dd class="col-sm-8">@Model.Sembol</dd>

                        <dt class="col-sm-4">Ondalık Hassasiyet:</dt>
                        <dd class="col-sm-8">@Model.OndalikHassasiyet</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Ana Para Birimi:</dt>
                        <dd class="col-sm-8">@(Model.AnaParaBirimiMi ? "Evet" : "Hayır")</dd>

                        <dt class="col-sm-4">Aktif:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Aktif)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Oluşturma Tarihi:</dt>
                        <dd class="col-sm-8">@Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</dd>

                        @if (Model.GuncellemeTarihi.HasValue)
                        {
                            <dt class="col-sm-4">Güncelleme Tarihi:</dt>
                            <dd class="col-sm-8">@Model.GuncellemeTarihi.Value.ToString("dd.MM.yyyy HH:mm")</dd>
                        }
                    </dl>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.Aciklama))
            {
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">Açıklama</div>
                            <div class="card-body">
                                @Model.Aciklama
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a asp-action="Kurlar" class="btn btn-info">
                    <i class="fas fa-money-bill-wave"></i> Kurlar
                </a>
                <div>
                    <a asp-action="Duzenle" asp-route-id="@Model.ParaBirimiID" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <a asp-action="Sil" asp-route-id="@Model.ParaBirimiID" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 