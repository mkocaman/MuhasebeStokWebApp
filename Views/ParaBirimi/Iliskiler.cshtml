@model IEnumerable<MuhasebeStokWebApp.Data.Entities.ParaBirimiModulu.ParaBirimiIliski>

@{
    ViewData["Title"] = "Para Birimi İlişkileri";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Para Birimi İlişkileri</h4>
            <div>
                <a asp-action="IliskiEkle" class="btn btn-light">
                    <i class="fas fa-plus"></i> Yeni İlişki Ekle
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-striped table-hover" id="iliskilerTable">
                    <thead>
                        <tr>
                            <th>
                                Kaynak Para Birimi
                            </th>
                            <th>
                                Hedef Para Birimi
                            </th>
                            <th>
                                Oluşturma Tarihi
                            </th>
                            <th>
                                Durum
                            </th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(item.KaynakParaBirimi?.Ad ?? "Belirtilmemiş")
                                </td>
                                <td>
                                    @(item.HedefParaBirimi?.Ad ?? "Belirtilmemiş")
                                </td>
                                <td>
                                    @(item.OlusturmaTarihi != default(DateTime) ? item.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm") : "-")
                                </td>
                                <td>
                                    @if (item.Aktif)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="IliskiDetay" asp-route-id="@item.ParaBirimiIliskiID" class="btn btn-info btn-sm">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="IliskiDuzenle" asp-route-id="@item.ParaBirimiIliskiID" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="javascript:void(0);" class="btn btn-danger btn-sm" 
                                       onclick="confirmDelete('@item.ParaBirimiIliskiID', '@item.KaynakParaBirimi?.Ad - @item.HedefParaBirimi?.Ad')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">İlişkiyi Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deleteConfirmationText">Bu para birimi ilişkisini silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="deleteForm" asp-action="IliskiSil" method="post">
                    <input type="hidden" id="deleteId" name="id" />
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#iliskilerTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                },
                "responsive": true
            });
        });

        function confirmDelete(id, name) {
            $('#deleteId').val(id);
            $('#deleteConfirmationText').text(`"${name}" ilişkisini silmek istediğinizden emin misiniz?`);
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}