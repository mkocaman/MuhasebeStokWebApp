@model IEnumerable<MuhasebeStokWebApp.Data.Entities.ParaBirimi>

@{
    ViewData["Title"] = "Para Birimleri";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Para Birimleri</h3>
                </div>
                <div class="card-body">
                    <p>
                        <a asp-action="Create" class="btn btn-sm btn-primary">
                            <i class="bi bi-plus-circle"></i> Yeni Para Birimi Ekle
                        </a>
                    </p>
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    
                    <div class="table-responsive">
                        <table id="paraBirimiTable" class="table table-bordered table-striped table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>Kod</th>
                                    <th>Ad</th>
                                    <th>Sembol</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Kod</td>
                                            <td>@item.Ad</td>
                                            <td>@item.Sembol</td>
                                            <td>
                                                @if (item.Aktif)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.ParaBirimiID" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-pencil"></i> Düzenle
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.ParaBirimiID" class="btn btn-sm btn-info">
                                                    <i class="bi bi-info-circle"></i> Detay
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.ParaBirimiID" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">Kayıt bulunamadı</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if ($.fn.DataTable) {
                try {
                    if (!$.fn.DataTable.isDataTable('#paraBirimiTable')) {
                        initializeDataTable('#paraBirimiTable', {
                            language: dataTablesTurkishLanguage,
                            responsive: true,
                            "dom": 'Bfrtip',
                            "ordering": true,
                            "paging": true,
                            "searching": true,
                            "info": true
                        });
                    }
                } catch (err) {
                    console.error('DataTable hatası:', err);
                }
            }
        });
    </script>
} 