@model IEnumerable<MuhasebeStokWebApp.Data.Entities.ParaBirimiModulu.ParaBirimi>

@{
    ViewData["Title"] = "Para Birimleri";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Para Birimleri Listesi</h4>
                <a asp-action="Ekle" class="btn btn-success">
                    <i class="fas fa-plus"></i> Yeni Para Birimi Ekle
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="paraBirimiTable">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Kod)</th>
                            <th>@Html.DisplayNameFor(model => model.Ad)</th>
                            <th>@Html.DisplayNameFor(model => model.Sembol)</th>
                            <th>Ana Para Birimi</th>
                            <th>@Html.DisplayNameFor(model => model.Aktif)</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Kod</td>
                                <td>@item.Ad</td>
                                <td>@item.Sembol</td>
                                <td>
                                    @if (item.AnaParaBirimiMi)
                                    {
                                        <span class="badge bg-success">Ana Para Birimi</span>
                                    }
                                    else
                                    {
                                        <a asp-action="AnaParaBirimiAyarla" asp-route-id="@item.ParaBirimiID" class="btn btn-sm btn-outline-primary">
                                            Ana Para Birimi Yap
                                        </a>
                                    }
                                </td>
                                <td>
                                    @if (item.Aktif)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detay" asp-route-id="@item.ParaBirimiID" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Duzenle" asp-route-id="@item.ParaBirimiID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Sil" asp-route-id="@item.ParaBirimiID" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#paraBirimiTable').DataTable({
                language: {
                    url: '/js/dataTables.turkish.json'
                },
                responsive: true,
                "pageLength": 25,
                "order": [[1, "asc"]]
            });

            // Otomatik kapanan alertler
            window.setTimeout(function() {
                $('.alert').fadeTo(500, 0).slideUp(500, function() {
                    $(this).remove();
                });
            }, 4000);
        });
    </script>
} 