@model MuhasebeStokWebApp.Data.Entities.ParaBirimiModulu.KurDegeri
@{
    ViewData["Title"] = "Kur Düzenle";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Kur Düzenle</h4>
            <div>
                <a asp-action="Kurlar" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="KurDuzenle" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="KurDegeriID" />
                <input type="hidden" asp-for="OlusturmaTarihi" />
                <input type="hidden" asp-for="OlusturanKullaniciID" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ParaBirimiID" class="control-label">Para Birimi</label>
                            <select asp-for="ParaBirimiID" class="form-control" asp-items="ViewBag.ParaBirimleri"></select>
                            <span asp-validation-for="ParaBirimiID" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Tarih" class="control-label">Tarih</label>
                            <input asp-for="Tarih" class="form-control" type="date" />
                            <span asp-validation-for="Tarih" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Alis" class="control-label">Alış</label>
                            <input asp-for="Alis" class="form-control" type="number" step="0.0001" />
                            <span asp-validation-for="Alis" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Satis" class="control-label">Satış</label>
                            <input asp-for="Satis" class="form-control" type="number" step="0.0001" />
                            <span asp-validation-for="Satis" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Efektif_Alis" class="control-label">Efektif Alış</label>
                            <input asp-for="Efektif_Alis" class="form-control" type="number" step="0.0001" />
                            <span asp-validation-for="Efektif_Alis" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Efektif_Satis" class="control-label">Efektif Satış</label>
                            <input asp-for="Efektif_Satis" class="form-control" type="number" step="0.0001" />
                            <span asp-validation-for="Efektif_Satis" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            <label asp-for="Aciklama" class="control-label">Açıklama</label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group form-check mb-3">
                    <input type="checkbox" asp-for="Aktif" class="form-check-input" />
                    <label asp-for="Aktif" class="form-check-label">Aktif</label>
                </div>

                <div class="form-group d-flex justify-content-between">
                    <a asp-action="Kurlar" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 