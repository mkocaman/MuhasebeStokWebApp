@model IEnumerable<MuhasebeStokWebApp.Data.Entities.ParaBirimiModulu.KurDegeri>

@{
    ViewData["Title"] = "Kur Değerleri";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Kur Değerleri Listesi</h4>
                <div>
                    <a asp-action="KurlariGuncelle" class="btn btn-success me-2">
                        <i class="fas fa-sync"></i> Kurları Güncelle
                    </a>
                    <a asp-action="KurEkle" class="btn btn-success">
                        <i class="fas fa-plus"></i> Yeni Kur Değeri Ekle
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="kurlarTable">
                    <thead class="table-light">
                        <tr>
                            <th>Para Birimi</th>
                            <th>Tarih</th>
                            <th>Alış</th>
                            <th>Satış</th>
                            <th>Efektif Alış</th>
                            <th>Efektif Satış</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ParaBirimi?.Kod - @item.ParaBirimi?.Ad</td>
                                <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                                <td>@item.Alis.ToString("N" + item.ParaBirimi.OndalikHassasiyet)</td>
                                <td>@item.Satis.ToString("N" + item.ParaBirimi.OndalikHassasiyet)</td>
                                <td>@item.EfektifAlis.ToString("N" + item.ParaBirimi.OndalikHassasiyet)</td>
                                <td>@item.EfektifSatis.ToString("N" + item.ParaBirimi.OndalikHassasiyet)</td>
                                <td>
                                    @if (item.Aktif)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="KurDetay" asp-route-id="@item.KurDegeriID" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="KurDuzenle" asp-route-id="@item.KurDegeriID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="KurSil" asp-route-id="@item.KurDegeriID" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#kurlarTable').DataTable({
                language: {
                    url: '/js/dataTables.turkish.json'
                },
                responsive: true,
                "pageLength": 25,
                "order": [[1, "desc"]]
            });
            
            // Otomatik kapanan alertler
            window.setTimeout(function() {
                $('.alert').fadeTo(500, 0).slideUp(500, function() {
                    $(this).remove();
                });
            }, 4000);
        });
    </script>
} 