@model IEnumerable<MuhasebeStokWebApp.Data.Entities.ParaBirimi>

@{
    ViewData["Title"] = "Para Birimi İlişkileri";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Para Birimi İlişkileri</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Kaynak Para Birimi</label>
                            <select id="kaynakParaBirimi" class="form-select">
                                <option value="">Seçiniz...</option>
                                @foreach (var paraBirimi in Model)
                                {
                                    <option value="@paraBirimi.ParaBirimiID" data-kod="@paraBirimi.Kod">@paraBirimi.Ad (@paraBirimi.Kod)</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Hedef Para Birimi</label>
                            <select id="hedefParaBirimi" class="form-select">
                                <option value="">Seçiniz...</option>
                                @foreach (var paraBirimi in Model)
                                {
                                    <option value="@paraBirimi.ParaBirimiID" data-kod="@paraBirimi.Kod">@paraBirimi.Ad (@paraBirimi.Kod)</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button id="btnIliskiSorgula" class="btn btn-primary">İlişkiyi Göster</button>
                        </div>
                    </div>

                    <div id="iliskiDetayContainer" class="mt-4">
                        <!-- İlişki detayları buraya gelecek -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $("#btnIliskiSorgula").click(function() {
                const kaynakId = $("#kaynakParaBirimi").val();
                const hedefId = $("#hedefParaBirimi").val();
                
                if (!kaynakId || !hedefId) {
                    alert("Lütfen kaynak ve hedef para birimlerini seçin.");
                    return;
                }
                
                if (kaynakId === hedefId) {
                    alert("Kaynak ve hedef para birimi aynı olamaz.");
                    return;
                }
                
                // İlişki detaylarını getir
                $.ajax({
                    url: '@Url.Action("IliskiDetay", "ParaBirimi")',
                    data: { kaynakId: kaynakId, hedefId: hedefId },
                    type: 'GET',
                    success: function(result) {
                        $("#iliskiDetayContainer").html(result);
                    },
                    error: function(error) {
                        $("#iliskiDetayContainer").html('<div class="alert alert-danger">Para birimi ilişkisi getirilirken bir hata oluştu.</div>');
                        console.error("Hata:", error);
                    }
                });
            });
        });
    </script>
} 