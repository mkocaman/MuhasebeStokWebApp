@model MuhasebeStokWebApp.ViewModels.ParaBirimi.ParaBirimiIliskileriViewModel

@{
    ViewData["Title"] = "Para Birimi İlişkileri";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@Model.ParaBirimi.Ad (@Model.ParaBirimi.Kod) İlişkileri</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <a href="@Url.Action("IliskiEkle", "ParaBirimi", new { id = Model.ParaBirimi.ParaBirimiID })" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Yeni İlişki Ekle
                        </a>
                        <a href="@Url.Action("Index", "ParaBirimi")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Para Birimleri Listesine Dön
                        </a>
                        <a href="@Url.Action("ParaBirimiIliskileri", "ParaBirimi")" class="btn btn-info">
                            <i class="fas fa-exchange-alt"></i> Tüm Para Birimi İlişkilerine Git
                        </a>
                    </div>

                    @if (!Model.Iliskiler.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Bu para birimine ait ilişki bulunamadı.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>İlişki Yönü</th>
                                        <th>Para Birimi</th>
                                        <th>Çarpan</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var iliski in Model.Iliskiler)
                                    {
                                        var yonStr = iliski.KaynakParaBirimiID == Model.ParaBirimi.ParaBirimiID ? "Kaynak → Hedef" : "Hedef → Kaynak";
                                        var digerParaBirimi = iliski.KaynakParaBirimiID == Model.ParaBirimi.ParaBirimiID ? iliski.HedefParaBirimi : iliski.KaynakParaBirimi;
                                        
                                        <tr>
                                            <td>@yonStr</td>
                                            <td>@digerParaBirimi.Ad (@digerParaBirimi.Kod)</td>
                                            <td>@iliski.Carpan.ToString("N6")</td>
                                            <td>
                                                @if (iliski.Aktif)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("IliskiDuzenle", "ParaBirimi", new { id = iliski.ParaBirimiIliskiID })" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i> Düzenle
                                                </a>
                                                <form method="post" action="@Url.Action("IliskiSil", "ParaBirimi")" style="display: inline;">
                                                    <input type="hidden" name="id" value="@iliski.ParaBirimiIliskiID" />
                                                    <input type="hidden" name="paraBirimiId" value="@Model.ParaBirimi.ParaBirimiID" />
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bu ilişkiyi silmek istediğinize emin misiniz?');">
                                                        <i class="fas fa-trash"></i> Sil
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 