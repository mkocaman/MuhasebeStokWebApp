@model MuhasebeStokWebApp.ViewModels.ParaBirimi.ParaBirimiIliskiViewModel

@{
    ViewData["Title"] = "Para Birimi İlişkisi Düzenle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title">Para Birimi İlişkisi Düzenle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="ParaBirimiIliskiID" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="KaynakParaBirimiID" class="control-label">Kaynak Para Birimi</label>
                                    <select asp-for="KaynakParaBirimiID" asp-items="@(ViewBag.KaynakParaBirimleri as SelectList)" class="form-control">
                                        <option value="">--- Kaynak Para Birimi Seçiniz ---</option>
                                    </select>
                                    <span asp-validation-for="KaynakParaBirimiID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="HedefParaBirimiID" class="control-label">Hedef Para Birimi</label>
                                    <select asp-for="HedefParaBirimiID" asp-items="@(ViewBag.HedefParaBirimleri as SelectList)" class="form-control">
                                        <option value="">--- Hedef Para Birimi Seçiniz ---</option>
                                    </select>
                                    <span asp-validation-for="HedefParaBirimiID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Carpan" class="control-label">Çevrim Katsayısı</label>
                                    <input asp-for="Carpan" class="form-control" />
                                    <span asp-validation-for="Carpan" class="text-danger"></span>
                                    <small class="form-text text-muted">1 birim kaynak para biriminin hedef para birimi karşılığı</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-check mt-4">
                                    <input type="checkbox" asp-for="Aktif" class="form-check-input" />
                                    <label asp-for="Aktif" class="form-check-label">Aktif</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i> Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Listeye Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 