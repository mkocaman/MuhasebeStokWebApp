@{
    ViewData["Title"] = "Kurları Güncelle";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Kurları Güncelle</h4>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <form asp-action="KurlariGuncelle" method="post">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Kur değerlerini güncellemek için aşağıdaki butona tıklayın. Bu işlem, güncel kur verilerini API'den çekecektir.
                </div>
                
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-sync me-2"></i> Kur Değerlerini Güncelle
                    </button>
                    <a asp-action="Kurlar" class="btn btn-secondary btn-lg ms-2">
                        <i class="fas fa-arrow-left me-2"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Otomatik kapanan alertler
            window.setTimeout(function() {
                $('.alert').fadeTo(500, 0).slideUp(500, function() {
                    $(this).remove();
                });
            }, 4000);
        });
    </script>
} 