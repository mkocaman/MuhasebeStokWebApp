@model MuhasebeStokWebApp.ViewModels.FormElements.CheckboxInputViewModel

<div class="form-group form-check">
    <input asp-for="@Model.For" 
           class="form-check-input @(ViewData.ModelState.TryGetValue(Model.For.Name, out var entry) && entry.Errors.Count > 0 ? "is-invalid" : "")" 
           type="checkbox" 
           checked="@Model.IsChecked">
    <label asp-for="@Model.For" class="form-check-label">@Model.Label</label>
    <span asp-validation-for="@Model.For" class="text-danger"></span>
    @if (!string.IsNullOrEmpty(Model.HelpText))
    {
        <small class="form-text text-muted">@Model.HelpText</small>
    }
</div> 