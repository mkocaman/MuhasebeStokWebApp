@model MuhasebeStokWebApp.ViewModels.FormElements.SelectInputViewModel

<div class="form-group">
    <label asp-for="@Model.For" class="control-label">@Model.Label</label>
    <select asp-for="@Model.For" 
            class="form-control @(ViewData.ModelState.TryGetValue(Model.For.Name, out var entry) && entry.Errors.Count > 0 ? "is-invalid" : "")" 
            asp-items="@Model.Items"></select>
    <span asp-validation-for="@Model.For" class="text-danger"></span>
    @if (!string.IsNullOrEmpty(Model.HelpText))
    {
        <small class="form-text text-muted">@Model.HelpText</small>
    }
</div> 