@model dynamic

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @{
                    string baslik = "";
                    string id = "";
                    string controller = "";
                    
                    if (Model is MuhasebeStokWebApp.Data.Entities.Fatura)
                    {
                        var fatura = Model as MuhasebeStokWebApp.Data.Entities.Fatura;
                        baslik = $"'{fatura.FaturaNumarasi}' numaralı faturayı";
                        id = fatura.FaturaID.ToString();
                        controller = "Fatura";
                    }
                    else if (Model is MuhasebeStokWebApp.ViewModels.Irsaliye.IrsaliyeViewModel)
                    {
                        var irsaliye = Model as MuhasebeStokWebApp.ViewModels.Irsaliye.IrsaliyeViewModel;
                        baslik = $"'{irsaliye.IrsaliyeNumarasi}' numaralı irsaliyeyi";
                        id = irsaliye.IrsaliyeID.ToString();
                        controller = "Irsaliye";
                    }
                }
                
                <p>@baslik silmek istediğinize emin misiniz?</p>
                <p class="text-danger">Bu işlem geri alınamaz!</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" asp-action="Delete" asp-controller="@controller" method="post">
                    <input type="hidden" name="id" value="@id" />
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#deleteForm').on('submit', function (e) {
            e.preventDefault();
            
            var form = $(this);
            var url = form.attr('action');
            var formData = form.serialize();
            
            $.ajax({
                type: 'POST',
                url: url,
                data: formData,
                success: function (data) {
                    $('#deleteModal').modal('hide');
                    
                    if (data.success) {
                        // Başarılı ise
                        toastr.success(data.message);
                        
                        // Sayfayı yenile veya liste sayfasına git
                        setTimeout(function() {
                            window.location.href = '/' + form.attr('asp-controller');
                        }, 1500);
                    } else {
                        // Başarısız ise
                        toastr.error(data.message);
                    }
                },
                error: function (xhr, status, error) {
                    $('#deleteModal').modal('hide');
                    toastr.error('İşlem sırasında bir hata oluştu.');
                    console.error(xhr.responseText);
                }
            });
        });
    });
</script> 