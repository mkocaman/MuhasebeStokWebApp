<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Muhasebe Stok Web App</title>
    
    <!-- Google font-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/assets/images/favicon.png">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- CSS Files -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" asp-append-version="true" rel="stylesheet" />
    
    <style>
        body {
            font-family: Rubik, sans-serif;
            background-color: #f6f7fb;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        
        .login-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 450px;
            max-width: 100%;
        }
        
        .login-card h4 {
            margin-bottom: 8px;
            font-weight: 600;
            color: #2c323f;
            font-size: 24px;
        }
        
        .login-card h6 {
            font-size: 14px;
            color: #7e7e7e;
            margin-bottom: 25px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 8px;
            color: #2c323f;
        }
        
        .input-group-text {
            background-color: #f6f7fb;
            border-right: none;
            color: #7e7e7e;
        }
        
        .form-control {
            border-left: none;
            background-color: #f6f7fb;
        }
        
        .form-control:focus {
            box-shadow: none;
            border-color: #ced4da;
        }
        
        .btn-primary {
            background-color: #24695c;
            border-color: #24695c;
            width: 100%;
            padding: 10px;
            font-weight: 500;
        }
        
        .btn-primary:hover {
            background-color: #1d5a4d;
            border-color: #1d5a4d;
        }
        
        .checkbox label {
            margin-bottom: 0;
        }
        
        .login-social-title {
            position: relative;
            text-align: center;
            margin-top: 20px;
            margin-bottom: 15px;
        }
        
        .login-social-title h5 {
            font-size: 14px;
            color: #7e7e7e;
            padding: 0 10px;
            background-color: #fff;
            display: inline-block;
            position: relative;
            z-index: 1;
        }
        
        .login-social-title:before {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            width: 100%;
            height: 1px;
            background-color: #f1f1f1;
            z-index: 0;
        }
        
        .login-social {
            display: flex;
            justify-content: center;
            align-items: center;
            list-style: none;
            padding: 0;
            margin-bottom: 20px;
        }
        
        .login-social li {
            margin: 0 5px;
        }
        
        .login-social li a {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 35px;
            height: 35px;
            background-color: #f6f7fb;
            border-radius: 30px;
            color: #24695c;
        }
        
        .loader-wrapper {
            height: 100%;
            width: 100%;
            position: fixed;
            z-index: 999999;
            top: 0;
            left: 0;
            background-color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .loader-p {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            position: relative;
            animation: loader 1s linear infinite;
            border: 4px solid transparent;
            border-left-color: #24695c;
        }
    </style>
    <style>
        @@keyframes loader {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>

<body>
    <!-- Loader starts-->
    <div class="loader-wrapper">
        <div class="theme-loader">    
            <div class="loader-p"></div>
        </div>
    </div>
    <!-- Loader ends-->
    
    <main role="main">
        @RenderBody()
    </main>

    <!-- Core Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        $(document).ready(function() {
            // Yükleme animasyonunu kapat
            $(".loader-wrapper").fadeOut("slow");
            
            // Şifre göster/gizle fonksiyonu
            $(".show-hide").click(function() {
                var input = $(this).siblings("input");
                if (input.attr("type") === "password") {
                    input.attr("type", "text");
                    $(this).find("span").text("Gizle");
                } else {
                    input.attr("type", "password");
                    $(this).find("span").text("Göster");
                }
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 