@*
    UI Kılavuzu - MuhasebeStokWebApp için tasarım standartları 
    Bu dosya, tüm modüllerde tutarlı görsel dil oluşturmak için kullanılan UI bileşenlerini tanımlar.
*@

@* Renkler *@
@* 
    Birincil Renk: #0d6efd (bg-primary) - Başlıklar, ana aksiyonlar için
    İkincil Renk: #6c757d (bg-secondary) - İkincil aksiyonlar için
    Başarı Rengi: #198754 (bg-success) - Pozitif aksiyonlar, ekleme işlemleri için
    Tehlike Rengi: #dc3545 (bg-danger) - Silme, tehlikeli aksiyonlar için
    Bilgi Rengi: #0dcaf0 (bg-info) - Bilgi gösterimi, detay görüntüleme için
    Uyarı Rengi: #ffc107 (bg-warning) - Dikkat çekmek için
*@

@* Bileşenler ve Kullanım Şekilleri *@

@* === 1. Kart Başlıkları === *@
@*
<div class="card">
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Başlık</h4>
            <button type="button" class="btn btn-success">
                <i class="fas fa-plus"></i> Yeni Ekle
            </button>
        </div>
    </div>
    <div class="card-body">
        <!-- İçerik -->
    </div>
</div>
*@

@* === 2. Tablolar === *@
@*
<div class="table-responsive">
    <table class="table table-bordered table-hover" id="dataTable">
        <thead class="table-light">
            <tr>
                <th>Başlık 1</th>
                <th>Başlık 2</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Değer 1</td>
                <td>Değer 2</td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a href="#" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="#" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="#" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
*@

@* === 3. Formlar === *@
@*
<form method="post">
    <div class="mb-3">
        <label for="itemName" class="form-label">Ad</label>
        <input type="text" class="form-control" id="itemName" name="Name" required>
        <div class="invalid-feedback">Bu alan zorunludur.</div>
    </div>
    
    <div class="mb-3">
        <label for="itemDescription" class="form-label">Açıklama</label>
        <textarea class="form-control" id="itemDescription" name="Description" rows="3"></textarea>
    </div>
    
    <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" id="itemActive" name="Active" checked>
        <label class="form-check-label" for="itemActive">Aktif</label>
    </div>
    
    <div class="d-flex justify-content-end gap-2">
        <a href="#" class="btn btn-secondary">İptal</a>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>
*@

@* === 4. Modaller === *@
@*
<div class="modal fade" id="itemModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Modal Başlık</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form içeriği -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</div>
*@

@* === 5. Sekmeler === *@
@*
<ul class="nav nav-tabs mb-3" id="myTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="tab1-tab" data-bs-toggle="tab" data-bs-target="#tab1" type="button" role="tab" aria-selected="true">
            <i class="fas fa-check-circle text-success"></i> Sekme 1
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="tab2-tab" data-bs-toggle="tab" data-bs-target="#tab2" type="button" role="tab" aria-selected="false">
            <i class="fas fa-times-circle text-danger"></i> Sekme 2
        </button>
    </li>
</ul>

<div class="tab-content" id="myTabsContent">
    <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
        <!-- Sekme 1 içeriği -->
    </div>
    <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
        <!-- Sekme 2 içeriği -->
    </div>
</div>
*@

@* === 6. Uyarılar === *@
@*
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="fas fa-check-circle me-1"></i> Başarılı mesajı
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="fas fa-exclamation-circle me-1"></i> Hata mesajı
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
*@

@* === 7. Durumlar (Badges) === *@
@*
<span class="badge bg-success">Aktif</span>
<span class="badge bg-danger">Pasif</span>
<span class="badge bg-warning text-dark">Beklemede</span>
<span class="badge bg-info">Bilgi</span>
*@

@* === 8. DataTable JavaScript === *@
@*
<script>
    $(document).ready(function() {
        $('#dataTable').DataTable({
            language: {
                url: '/js/dataTables.turkish.json'
            },
            responsive: true,
            pageLength: 25
        });
        
        // Otomatik kapanan alertler
        window.setTimeout(function() {
            $('.alert').fadeTo(500, 0).slideUp(500, function() {
                $(this).remove();
            });
        }, 4000);
    });
</script>
