@model List<MuhasebeStokWebApp.Models.SistemLog>
@{
    ViewData["Title"] = "Cari Logları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">@ViewBag.CariAdi - İşlem Logları</h4>
                <div>
                    <a asp-controller="Cari" asp-action="Details" asp-route-id="@ViewBag.CariID" class="btn btn-light me-2">
                        <i class="fas fa-user"></i> Cari Detayına Dön
                    </a>
                    <a asp-action="Index" class="btn btn-light">
                        <i class="fas fa-list"></i> Tüm Loglar
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Bu cari için herhangi bir log kaydı bulunamadı.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>İşlem Tarihi</th>
                                <th>İşlem Türü</th>
                                <th>Kullanıcı</th>
                                <th>Açıklama</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                <tr>
                                    <td>@log.IslemTarihi.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                    <td>@log.IslemTuru</td>
                                    <td>@(string.IsNullOrEmpty(log.KullaniciAdi) ? "-" : log.KullaniciAdi)</td>
                                    <td>@log.Aciklama</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@log.SistemLogID" class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Cari" asp-action="Details" asp-route-id="@ViewBag.CariID" class="btn btn-secondary">
                <i class="fas fa-user"></i> Cari Detayına Dön
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable'ı başlat
            $('table').DataTable({
                language: {
                    url: '/js/dataTables.turkish.json'
                },
                order: [[0, 'desc']]
            });
        });
    </script>
} 