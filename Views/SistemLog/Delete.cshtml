@model MuhasebeStokWebApp.Models.SistemLog
@{
    ViewData["Title"] = "Log Kaydını Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Log Kaydını Sil</h4>
                <a asp-action="Index" class="btn btn-light">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="alert-heading">Uyarı!</h5>
                <p>Bu log kaydını silmek istediğinize emin misiniz? Bu işlem geri alınamaz.</p>
            </div>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">İşlem Bilgileri</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label fw-bold">İşlem Türü:</label>
                                <div class="col-sm-8">
                                    <p class="form-control-plaintext">@Model.IslemTuru</p>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label fw-bold">İşlem Tarihi:</label>
                                <div class="col-sm-8">
                                    <p class="form-control-plaintext">@Model.IslemTarihi.ToString("dd.MM.yyyy HH:mm:ss")</p>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label fw-bold">Açıklama:</label>
                                <div class="col-sm-8">
                                    <p class="form-control-plaintext">@Model.Aciklama</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Kullanıcı Bilgileri</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label fw-bold">Kullanıcı Adı:</label>
                                <div class="col-sm-8">
                                    <p class="form-control-plaintext">@Model.KullaniciAdi</p>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label fw-bold">IP Adresi:</label>
                                <div class="col-sm-8">
                                    <p class="form-control-plaintext">@Model.IPAdresi</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.SistemLogID" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </div>
            </form>
        </div>
    </div>
</div> 