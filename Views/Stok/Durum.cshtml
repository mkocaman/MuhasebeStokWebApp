@model MuhasebeStokWebApp.ViewModels.Stok.UrunStokDurumViewModel

@{
    ViewData["Title"] = "Ürün Stok Durumu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-boxes"></i> Ürün Stok Durumu</h5>
                        <a asp-controller="Urun" asp-action="Index" class="btn btn-light">
                            <i class="fas fa-arrow-left"></i> Ürün Listesine Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title">Ürün Bilgileri</h5>
                                    <div class="row">
                                        <div class="col-md-4 font-weight-bold">Ürün Kodu:</div>
                                        <div class="col-md-8">@Model.UrunKodu</div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-md-4 font-weight-bold">Ürün Adı:</div>
                                        <div class="col-md-8">@Model.UrunAdi</div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-md-4 font-weight-bold">Kategori:</div>
                                        <div class="col-md-8">@Model.KategoriAdi</div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-md-4 font-weight-bold">Birim:</div>
                                        <div class="col-md-8">@Model.BirimAdi</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card @(Model.GenelStokMiktari > 0 ? "bg-success" : "bg-danger") text-white">
                                <div class="card-body text-center">
                                    <h4 class="card-title">Toplam Stok Miktarı</h4>
                                    <h1 class="display-4">@Model.GenelStokMiktari.ToString("N2") @Model.BirimAdi</h1>
                                    <div class="mt-3">
                                        <a asp-action="Hareketler" asp-route-id="@Model.UrunID" class="btn btn-light">
                                            <i class="fas fa-list"></i> Stok Hareketleri
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0"><i class="fas fa-warehouse"></i> Depo Bazlı Stok Durumu</h5>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Depo Adı</th>
                                                    <th class="text-end">Stok Miktarı</th>
                                                    <th>Durum</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.DepoStokDurumlari != null && Model.DepoStokDurumlari.Any())
                                                {
                                                    foreach (var depo in Model.DepoStokDurumlari)
                                                    {
                                                        <tr>
                                                            <td>@depo.DepoAdi</td>
                                                            <td class="text-end">@depo.StokMiktari.ToString("N2") @Model.BirimAdi</td>
                                                            <td>
                                                                @if (depo.StokMiktari > 0)
                                                                {
                                                                    <span class="badge bg-success">Stokta</span>
                                                                }
                                                                else if (depo.StokMiktari == 0)
                                                                {
                                                                    <span class="badge bg-warning text-dark">Stok Yok</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-danger">Eksi Stok</span>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td colspan="3" class="text-center">Depo stok bilgisi bulunamadı.</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 