@model MuhasebeStokWebApp.ViewModels.Stok.StokTransferViewModel
@{
    ViewData["Title"] = "Stok Transferi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Stok Transferi</h4>
                <a asp-action="Index" class="btn btn-light">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h5 class="alert-heading">Hata!</h5>
                    <p>Lütfen aşağıdaki hataları düzeltin:</p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="StokTransfer" method="post">
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="UrunID" class="form-label">Ürün</label>
                            <select asp-for="UrunID" class="form-select" asp-items="ViewBag.Urunler">
                                <option value="">Ürün Seçiniz</option>
                            </select>
                            <span asp-validation-for="UrunID" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="KaynakDepoID" class="form-label">Kaynak Depo</label>
                            <select asp-for="KaynakDepoID" class="form-select" asp-items="ViewBag.Depolar">
                                <option value="">Kaynak Depo Seçiniz</option>
                            </select>
                            <span asp-validation-for="KaynakDepoID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="HedefDepoID" class="form-label">Hedef Depo</label>
                            <select asp-for="HedefDepoID" class="form-select" asp-items="ViewBag.Depolar">
                                <option value="">Hedef Depo Seçiniz</option>
                            </select>
                            <span asp-validation-for="HedefDepoID" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Miktar" class="form-label">Miktar</label>
                            <input asp-for="Miktar" class="form-control" />
                            <span asp-validation-for="Miktar" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Birim" class="form-label">Birim</label>
                            <select asp-for="Birim" class="form-select" asp-items="ViewBag.Birimler" disabled>
                                <option value="">Birim Seçiniz</option>
                            </select>
                            <span asp-validation-for="Birim" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label">Mevcut Stok Miktarı (Kaynak Depo)</label>
                            <input id="KaynakStokMiktari" class="form-control" readonly />
                        </div>
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Tarih" class="form-label">Tarih</label>
                            <input asp-for="Tarih" class="form-control" type="date" />
                            <span asp-validation-for="Tarih" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ReferansNo" class="form-label">Referans No</label>
                            <input asp-for="ReferansNo" class="form-control" placeholder="Transfer-Ref" />
                            <span asp-validation-for="ReferansNo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Aciklama" class="form-label">Açıklama</label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Stok transferi açıklaması"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-light text-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-exchange-alt"></i> Transfer Et
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // Ürün değiştiğinde otomatik olarak birim getir
            $('#UrunID').change(function () {
                var urunID = $(this).val();
                if (urunID) {
                    $.ajax({
                        url: '@Url.Action("GetUrunBirim", "Stok")',
                        type: 'GET',
                        data: { urunID: urunID },
                        success: function (result) {
                            if (result && result.birim) {
                                $('#Birim').val(result.birim);
                            }
                        }
                    });
                }
                
                // Eğer kaynak depo seçiliyse, stok miktarını güncelle
                var kaynakDepoID = $('#KaynakDepoID').val();
                if (kaynakDepoID) {
                    getKaynakDepoStokMiktari(urunID, kaynakDepoID);
                }
            });
            
            // Kaynak depo değiştiğinde stok miktarını güncelle
            $('#KaynakDepoID').change(function() {
                var urunID = $('#UrunID').val();
                var kaynakDepoID = $(this).val();
                if (urunID && kaynakDepoID) {
                    getKaynakDepoStokMiktari(urunID, kaynakDepoID);
                }
            });
            
            // Stok miktarını getiren fonksiyon
            function getKaynakDepoStokMiktari(urunID, depoID) {
                $.ajax({
                    url: '@Url.Action("GetStokMiktari", "Stok")',
                    type: 'GET',
                    data: { urunID: urunID, depoID: depoID },
                    success: function (result) {
                        if (result && result.stokMiktari !== undefined) {
                            $('#KaynakStokMiktari').val(result.stokMiktari);
                        }
                    }
                });
            }
            
            // Hedef depo ile kaynak depo aynı olamaz kontrolü
            $('#HedefDepoID').change(function() {
                var kaynakDepoID = $('#KaynakDepoID').val();
                var hedefDepoID = $(this).val();
                
                if (kaynakDepoID && hedefDepoID && kaynakDepoID === hedefDepoID) {
                    Swal.fire({
                        title: 'Hata!',
                        text: 'Kaynak depo ile hedef depo aynı olamaz!',
                        icon: 'error',
                        confirmButtonText: 'Tamam'
                    });
                    $(this).val('');
                }
            });
        });
    </script>
} 