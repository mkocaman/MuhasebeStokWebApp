@model MuhasebeStokWebApp.ViewModels.Urun.UrunViewModel

@{
    ViewData["Title"] = "Ürün Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Ürün Sil</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Ürünler</a></li>
                    <li class="breadcrumb-item active">Ürün Sil</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Ürün Silme Onayı</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <strong>Uyarı:</strong> Bu ürünü silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UrunAdi)</dt>
                                <dd class="col-sm-8">@Model.UrunAdi</dd>
                                
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.KategoriAdi)</dt>
                                <dd class="col-sm-8">@Model.KategoriAdi</dd>
                                
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Birim)</dt>
                                <dd class="col-sm-8">@Model.Birim</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ListeFiyati)</dt>
                                <dd class="col-sm-8">@Model.ListeFiyati.ToString("N2") ₺</dd>
                                
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SatisFiyati)</dt>
                                <dd class="col-sm-8">@Model.SatisFiyati.ToString("N2") ₺</dd>
                                
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Aktif)</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Aktif)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Pasif</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="UrunID" />
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-danger">Sil</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 