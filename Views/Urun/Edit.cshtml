@model MuhasebeStokWebApp.ViewModels.Urun.UrunEditViewModel

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Ürün Düzenle</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Ürünler</a></li>
                    <li class="breadcrumb-item active">Ürün Düzenle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Ürün Bilgileri</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UrunID" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UrunAdi" class="control-label"></label>
                                    <input asp-for="UrunAdi" class="form-control" />
                                    <span asp-validation-for="UrunAdi" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="KategoriID" class="control-label"></label>
                                    <select asp-for="KategoriID" asp-items="ViewBag.Kategoriler" class="form-control">
                                        <option value="">-- Kategori Seçin --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ListeFiyati" class="control-label"></label>
                                    <input asp-for="ListeFiyati" class="form-control" />
                                    <span asp-validation-for="ListeFiyati" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="MaliyetFiyati" class="control-label"></label>
                                    <input asp-for="MaliyetFiyati" class="form-control" />
                                    <span asp-validation-for="MaliyetFiyati" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="SatisFiyati" class="control-label"></label>
                                    <input asp-for="SatisFiyati" class="form-control" />
                                    <span asp-validation-for="SatisFiyati" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Aktif" /> @Html.DisplayNameFor(model => model.Aktif)
                            </label>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 