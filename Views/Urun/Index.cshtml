@model MuhasebeStokWebApp.ViewModels.Urun.UrunListViewModel
@using MuhasebeStokWebApp.ViewModels
@using MuhasebeStokWebApp.ViewModels.Shared

@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Admin rolüne sahip kullanıcıları kontrol et
    var isAdmin = User.IsInRole("Admin");
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Ürün Listesi</h4>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createUrunModal">
                    <i class="fas fa-plus"></i> Yeni Ürün Ekle
                </button>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="mb-4">
                <select name="kategoriID" class="form-select" id="kategoriFilter" style="max-width: 300px;">
                    <option value="">-- Tüm Kategoriler --</option>
                    @foreach (var kategori in Model.Kategoriler)
                    {
                        <option value="@kategori.Value" selected="@kategori.Selected">@kategori.Text</option>
                    }
                </select>
            </div>

            <!-- Ürün Sekmeleri -->
            <ul class="nav nav-tabs mb-3" id="urunTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(Model.AktifTab == "aktif" ? "active" : "")" id="aktif-tab" href="@Url.Action("Index", new { tab = "aktif" })" role="tab" aria-controls="aktif" aria-selected="@(Model.AktifTab == "aktif" ? "true" : "false")">
                        <i class="fas fa-check-circle text-success"></i> Aktif Ürünler
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(Model.AktifTab == "pasif" ? "active" : "")" id="pasif-tab" href="@Url.Action("Index", new { tab = "pasif" })" role="tab" aria-controls="pasif" aria-selected="@(Model.AktifTab == "pasif" ? "true" : "false")">
                        <i class="fas fa-times-circle text-warning"></i> Pasif Ürünler
                    </a>
                </li>
                @if (isAdmin)
                {
                    <li class="nav-item" role="presentation">
                        <a class="nav-link @(Model.AktifTab == "silindi" ? "active" : "")" id="silindi-tab" href="@Url.Action("Index", new { tab = "silindi" })" role="tab" aria-controls="silindi" aria-selected="@(Model.AktifTab == "silindi" ? "true" : "false")">
                            <i class="fas fa-trash text-danger"></i> Silinmiş Ürünler
                        </a>
                    </li>
                }
            </ul>
            
            <div class="tab-content" id="urunTabsContent">
                <!-- Aktif Ürünler Sekmesi -->
                <div class="tab-pane fade @(Model.AktifTab == "aktif" ? "show active" : "")" id="aktif" role="tabpanel" aria-labelledby="aktif-tab">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="aktifUrunlerTablosu">
                            <thead class="table-light">
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Kategori</th>
                                    <th>Birim</th>
                                    <th>Liste Fiyatı</th>
                                    <th>Satış Fiyatı</th>
                                    <th>Stok Miktarı</th>
                                    <th>Stok Durumu</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Urunler.Where(u => u.Aktif && !u.Silindi))
                                {
                                    <tr>
                                        <td>@item.UrunAdi</td>
                                        <td>@item.KategoriAdi</td>
                                        <td>@item.Birim</td>
                                        <td class="text-end">@item.ListeFiyati.ToString("N2") $</td>
                                        <td class="text-end">@item.SatisFiyati.ToString("N2") $</td>
                                        <td class="text-end @ColorHelpers.GetNumberColorClass(item.Miktar)">
                                            @item.Miktar.ToString("N2") @item.Birim
                                        </td>
                                        <td class="text-center">
                                            @Html.StokDurumuBadge(item.Miktar, item.KritikStokSeviyesi)
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-sm btn-info btn-edit-urun" data-id="@item.UrunID">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-primary btn-details-urun" data-id="@item.UrunID">
                                                    <i class="fas fa-info-circle"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-warning btn-pasif-urun" data-id="@item.UrunID" data-ad="@item.UrunAdi">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                                @if (isAdmin)
                                                {
                                                    <button type="button" class="btn btn-sm btn-danger btn-delete-urun" data-id="@item.UrunID" data-ad="@item.UrunAdi">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Pasif Ürünler Sekmesi -->
                <div class="tab-pane fade @(Model.AktifTab == "pasif" ? "show active" : "")" id="pasif" role="tabpanel" aria-labelledby="pasif-tab">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="pasifUrunlerTablosu">
                            <thead class="table-light">
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Kategori</th>
                                    <th>Birim</th>
                                    <th>Liste Fiyatı</th>
                                    <th>Satış Fiyatı</th>
                                    <th>Stok Miktarı</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Urunler.Where(u => !u.Aktif && !u.Silindi))
                                {
                                    <tr>
                                        <td>@item.UrunAdi</td>
                                        <td>@item.KategoriAdi</td>
                                        <td>@item.Birim</td>
                                        <td class="text-end">@item.ListeFiyati.ToString("N2") $</td>
                                        <td class="text-end">@item.SatisFiyati.ToString("N2") $</td>
                                        <td class="text-end @ColorHelpers.GetNumberColorClass(item.Miktar)">
                                            @item.Miktar.ToString("N2") @item.Birim
                                        </td>
                                        <td>
                                            <span class="badge bg-warning">Pasif</span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-sm btn-info btn-edit-urun" data-id="@item.UrunID">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-primary btn-details-urun" data-id="@item.UrunID">
                                                    <i class="fas fa-info-circle"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-success btn-aktif-urun" data-id="@item.UrunID" data-ad="@item.UrunAdi">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                @if (isAdmin)
                                                {
                                                    <button type="button" class="btn btn-sm btn-danger btn-delete-urun" data-id="@item.UrunID" data-ad="@item.UrunAdi">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Silinmiş Ürünler Sekmesi (Sadece Admin) -->
                @if (isAdmin)
                {
                    <div class="tab-pane fade @(Model.AktifTab == "silindi" ? "show active" : "")" id="silindi" role="tabpanel" aria-labelledby="silindi-tab">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="silinmisUrunlerTablosu">
                                <thead class="table-light">
                                    <tr>
                                        <th>Ürün Adı</th>
                                        <th>Kategori</th>
                                        <th>Birim</th>
                                        <th>Liste Fiyatı</th>
                                        <th>Satış Fiyatı</th>
                                        <th>Stok Miktarı</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Urunler.Where(u => u.Silindi))
                                    {
                                        <tr>
                                            <td>@item.UrunAdi</td>
                                            <td>@item.KategoriAdi</td>
                                            <td>@item.Birim</td>
                                            <td class="text-end">@item.ListeFiyati.ToString("N2") $</td>
                                            <td class="text-end">@item.SatisFiyati.ToString("N2") $</td>
                                            <td class="text-end @ColorHelpers.GetNumberColorClass(item.Miktar)">
                                                @item.Miktar.ToString("N2") @item.Birim
                                            </td>
                                            <td>
                                                <span class="badge bg-danger">Silinmiş</span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm btn-success btn-restore-urun" data-id="@item.UrunID" data-ad="@item.UrunAdi">
                                                        <i class="fas fa-trash-restore"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Ürün Ekle Modal -->
<div class="modal fade" id="createUrunModal" tabindex="-1" aria-labelledby="createUrunModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="createUrunContainer">
                <div class="modal-body text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ürün Düzenle Modal -->
<div class="modal fade" id="editUrunModal" tabindex="-1" aria-labelledby="editUrunModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="editUrunContainer">
                <div class="modal-body text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ürün Pasife Alma Modal -->
<div class="modal fade" id="pasifUrunModal" tabindex="-1" aria-labelledby="pasifUrunModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="pasifUrunModalLabel">Ürünü Pasife Al</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> Dikkat! Bu ürünü pasife almak istediğinize emin misiniz?
                </div>
                <p>Pasife almak istediğiniz ürün: <strong id="pasifUrunName"></strong></p>
                <p>Pasife alınan ürünler stok, satış ve raporlama işlemlerinde kullanılamaz.</p>
                <input type="hidden" id="pasifUrunID" value="" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-warning" id="confirmPasifUrun">
                    <i class="fas fa-times"></i> Pasife Al
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Ürün Aktif Etme Modal -->
<div class="modal fade" id="aktifUrunModal" tabindex="-1" aria-labelledby="aktifUrunModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="aktifUrunModalLabel">Ürünü Aktif Et</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> Bu ürünü aktif etmek istediğinize emin misiniz?
                </div>
                <p>Aktif etmek istediğiniz ürün: <strong id="aktifUrunName"></strong></p>
                <p>Aktif edilen ürünler tüm işlemlerde kullanılabilir hale gelecektir.</p>
                <input type="hidden" id="aktifUrunID" value="" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-success" id="confirmAktifUrun">
                    <i class="fas fa-check"></i> Aktif Et
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Ürün Silme Modal -->
<div class="modal fade" id="deleteUrunModal" tabindex="-1" aria-labelledby="deleteUrunModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteUrunModalLabel">Ürünü Sil</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i> Dikkat! Bu ürünü silmek istediğinize emin misiniz?
                </div>
                <p>Silmek istediğiniz ürün: <strong id="deleteUrunName"></strong></p>
                <p>Bu işlem geri alınamaz ve silinmiş ürünler sadece Admin tarafından görüntülenebilir.</p>
                <input type="hidden" id="deleteUrunID" value="" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteUrun">
                    <i class="fas fa-trash"></i> Sil
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Ürün Geri Yükleme Modal -->
<div class="modal fade" id="restoreUrunModal" tabindex="-1" aria-labelledby="restoreUrunModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="restoreUrunModalLabel">Ürünü Geri Yükle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="fas fa-undo"></i> Bu ürünü geri yüklemek istediğinize emin misiniz?
                </div>
                <p>Geri yüklemek istediğiniz ürün: <strong id="restoreUrunName"></strong></p>
                <p>Geri yüklenen ürünler pasif durumda olacaktır. Aktif etmek isterseniz ayrıca aktif etmeniz gerekecektir.</p>
                <input type="hidden" id="restoreUrunID" value="" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-info" id="confirmRestoreUrun">
                    <i class="fas fa-undo"></i> Geri Yükle
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Ürün Detay Modal -->
<div class="modal fade" id="detailsUrunModal" tabindex="-1" aria-labelledby="detailsUrunModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="detailsUrunModalLabel">Ürün Detayları</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="detailsUrunModalContent">
                <div class="modal-body text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Kategori filtreleme
            $('#kategoriFilter').change(function() {
                var kategoriID = $(this).val();
                var currentUrl = new URL(window.location.href);
                
                if (kategoriID) {
                    currentUrl.searchParams.set('kategoriID', kategoriID);
                } else {
                    currentUrl.searchParams.delete('kategoriID');
                }
                
                window.location.href = currentUrl.toString();
            });
            
            // DataTables için tablo ayarları
            var dataTableOptions = {
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json',
                },
                order: [[0, 'asc']], // Ürün adına göre sırala
                columnDefs: [
                    { orderable: false, targets: -1 } // Son sütun sıralanamaz (İşlemler)
                ]
            };
            
            // Aktif sekmeyi belirle
            var aktifTab = '@Model.AktifTab';
            
            // İlgili tabloyu başlat
            if (aktifTab === 'aktif') {
                $('#aktifUrunlerTablosu').DataTable(dataTableOptions);
            } else if (aktifTab === 'pasif') {
                $('#pasifUrunlerTablosu').DataTable(dataTableOptions);
            } else if (aktifTab === 'silindi') {
                $('#silinmisUrunlerTablosu').DataTable(dataTableOptions);
            }
            
            // Yeni ürün ekleme modal
            $('#createUrunModal').on('shown.bs.modal', function() {
                $.ajax({
                    url: '@Url.Action("Create")',
                    type: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function(data) {
                        $('#createUrunContainer').html(data);
                    },
                    error: function(xhr, status, error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            text: 'Ürün ekleme formu yüklenirken bir hata oluştu.',
                            confirmButtonText: 'Tamam'
                        });
                    }
                });
            });
            
            // Ürün düzenleme modal
            $(document).on('click', '.btn-edit-urun', function() {
                var id = $(this).data('id');
                
                // Modal içeriğini yükle
                $.ajax({
                    url: '@Url.Action("Edit")/' + id,
                    type: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function(data) {
                        $('#editUrunContainer').html(data);
                        $('#editUrunModal').modal('show');
                    },
                    error: function(xhr, status, error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            text: 'Ürün bilgileri yüklenirken bir hata oluştu.',
                            confirmButtonText: 'Tamam'
                        });
                    }
                });
            });
            
            // Stok Tab değişikliği
            $(document).on('shown.bs.tab', function (e) {
                // DataTable responsive düzenleme
                $.fn.dataTable.tables({ visible: true, api: true }).columns.adjust();
            });
            
            // Ürün pasife alma işlemini buton ile ilişkilendir
            $(document).on('click', '.btn-pasif-urun', function() {
                var urunID = $(this).data('id');
                var urunAdi = $(this).data('ad');
                
                $('#pasifUrunID').val(urunID);
                $('#pasifUrunName').text(urunAdi);
                $('#pasifUrunModal').modal('show');
            });
            
            // Ürün pasife alma işlemini gerçekleştir
            $('#confirmPasifUrun').on('click', function() {
                var urunID = $('#pasifUrunID').val();
                
                $.ajax({
                    url: '@Url.Action("SetPassive")',
                    type: 'POST',
                    data: { id: urunID },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Başarılı!',
                                text: response.message || 'Ürün başarıyla pasife alındı.',
                                confirmButtonText: 'Tamam'
                            }).then(() => {
                                $('#pasifUrunModal').modal('hide');
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Hata!',
                                text: response.message || 'Ürün pasife alınırken bir hata oluştu.',
                                confirmButtonText: 'Tamam'
                            });
                        }
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            text: 'İşlem sırasında bir hata oluştu.',
                            confirmButtonText: 'Tamam'
                        });
                    }
                });
            });
            
            // Ürün aktife alma işlemini buton ile ilişkilendir
            $(document).on('click', '.btn-aktif-urun', function() {
                var urunID = $(this).data('id');
                var urunAdi = $(this).data('ad');
                
                $('#aktifUrunID').val(urunID);
                $('#aktifUrunName').text(urunAdi);
                $('#aktifUrunModal').modal('show');
            });
            
            // Ürün aktife alma işlemini gerçekleştir
            $('#confirmAktifUrun').on('click', function() {
                var urunID = $('#aktifUrunID').val();
                
                $.ajax({
                    url: '@Url.Action("SetActive")',
                    type: 'POST',
                    data: { id: urunID },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Başarılı!',
                                text: response.message || 'Ürün başarıyla aktif edildi.',
                                confirmButtonText: 'Tamam'
                            }).then(() => {
                                $('#aktifUrunModal').modal('hide');
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Hata!',
                                text: response.message || 'Ürün aktif edilirken bir hata oluştu.',
                                confirmButtonText: 'Tamam'
                            });
                        }
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            text: 'İşlem sırasında bir hata oluştu.',
                            confirmButtonText: 'Tamam'
                        });
                    }
                });
            });
            
