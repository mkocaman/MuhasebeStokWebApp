@model MuhasebeStokWebApp.ViewModels.Urun.UrunListViewModel
@using MuhasebeStokWebApp.ViewModels
@using MuhasebeStokWebApp.ViewModels.Shared

@{
    ViewData["Title"] = "Ürünler";
    
    // Admin rolüne sahip kullanıcıları kontrol et
    var isAdmin = User.IsInRole("Admin");
}

<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Ürünler</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Ürünler</li>
                </ol>
            </div>
            <div class="col-sm-6 text-end">
                <button type="button" class="btn btn-primary create-btn" data-bs-toggle="modal" data-bs-target="#urunModal">
                    <i class="fas fa-plus me-1"></i> Yeni Ürün
                </button>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="mb-4">
                <select name="kategoriID" class="form-select" id="kategoriFilter" style="max-width: 300px;">
                    <option value="">-- Tüm Kategoriler --</option>
                    @foreach (var kategori in Model.Kategoriler)
                    {
                        <option value="@kategori.Value" selected="@kategori.Selected">@kategori.Text</option>
                    }
                </select>
            </div>

            <!-- Ürün Sekmeleri -->
            <ul class="nav nav-tabs" id="urunTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(Model.AktifTab == "aktif" ? "active" : "")" 
                            id="aktif-urunler-tab" 
                            data-bs-toggle="tab" 
                            data-bs-target="#aktif-urunler" 
                            type="button" 
                            role="tab" 
                            aria-controls="aktif-urunler" 
                            aria-selected="@(Model.AktifTab == "aktif")">
                        Aktif Ürünler <span class="badge bg-success">@Model.Urunler.Count(u => u.Aktif && !u.Silindi)</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(Model.AktifTab == "pasif" ? "active" : "")" 
                            id="pasif-urunler-tab" 
                            data-bs-toggle="tab" 
                            data-bs-target="#pasif-urunler" 
                            type="button" 
                            role="tab" 
                            aria-controls="pasif-urunler" 
                            aria-selected="@(Model.AktifTab == "pasif")">
                        Pasif Ürünler <span class="badge bg-warning">@Model.Urunler.Count(u => !u.Aktif && !u.Silindi)</span>
                    </button>
                </li>
                @if(isAdmin)
                {
                    <li class="nav-item" role="presentation">
                        <button class="nav-link @(Model.AktifTab == "silindi" ? "active" : "")" 
                                id="silindi-urunler-tab" 
                                data-bs-toggle="tab" 
                                data-bs-target="#silindi-urunler" 
                                type="button" 
                                role="tab" 
                                aria-controls="silindi-urunler" 
                                aria-selected="@(Model.AktifTab == "silindi")">
                            Silinmiş Ürünler <span class="badge bg-danger">@Model.Urunler.Count(u => u.Silindi)</span>
                        </button>
                    </li>
                }
            </ul>
            <div class="tab-content" id="urunTabsContent">
                <!-- Aktif Ürünler Sekmesi -->
                <div class="tab-pane fade @(Model.AktifTab == "aktif" ? "show active" : "")" id="aktif-urunler" role="tabpanel" aria-labelledby="aktif-urunler-tab">
                    <div class="table-responsive mt-3">
                        <table class="table table-bordered table-hover" id="aktifUrunlerTablosu">
                            <thead class="table-warning">
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Kategori</th>
                                    <th>Birim</th>
                                    <th>Liste Fiyatı</th>
                                    <th>Satış Fiyatı</th>
                                    <th>Stok Miktarı</th>
                                    <th>Stok Durumu</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Urunler.Where(u => u.Aktif && !u.Silindi))
                                {
                                    <tr>
                                        <td>@item.UrunAdi</td>
                                        <td>@item.KategoriAdi</td>
                                        <td>@item.Birim</td>
                                        <td class="text-end">@item.ListeFiyati.ToString("N2") $</td>
                                        <td class="text-end">@item.SatisFiyati.ToString("N2") $</td>
                                        <td class="text-end @ColorHelpers.GetNumberColorClass(item.Miktar)">
                                            @item.Miktar.ToString("N2") @item.Birim
                                        </td>
                                        <td class="text-center">
                                            @Html.StokDurumuBadge(item.Miktar, 5)
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@item.UrunID" class="btn btn-sm btn-info" title="Detaylar">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-warning edit-btn" data-id="@item.UrunID" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-danger pasif-yap-btn" data-id="@item.UrunID" title="Pasif Yap">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                                @if (isAdmin)
                                                {
                                                    <button type="button" class="btn btn-sm btn-dark delete-btn" data-id="@item.UrunID" title="Sil">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Pasif Ürünler Sekmesi -->
                <div class="tab-pane fade @(Model.AktifTab == "pasif" ? "show active" : "")" id="pasif-urunler" role="tabpanel" aria-labelledby="pasif-urunler-tab">
                    <div class="table-responsive mt-3">
                        <table class="table table-bordered table-hover" id="pasifUrunlerTablosu">
                            <thead class="table-warning">
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Kategori</th>
                                    <th>Birim</th>
                                    <th>Liste Fiyatı</th>
                                    <th>Satış Fiyatı</th>
                                    <th>Stok Miktarı</th>
                                    <th>Stok Durumu</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Urunler.Where(u => !u.Aktif && !u.Silindi))
                                {
                                    <tr>
                                        <td>@item.UrunAdi</td>
                                        <td>@item.KategoriAdi</td>
                                        <td>@item.Birim</td>
                                        <td class="text-end">@item.ListeFiyati.ToString("N2") $</td>
                                        <td class="text-end">@item.SatisFiyati.ToString("N2") $</td>
                                        <td class="text-end @ColorHelpers.GetNumberColorClass(item.Miktar)">
                                            @item.Miktar.ToString("N2") @item.Birim
                                        </td>
                                        <td class="text-center">
                                            @Html.StokDurumuBadge(item.Miktar, 5)
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-sm btn-warning edit-btn" data-id="@item.UrunID" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-success aktif-yap-btn" data-id="@item.UrunID" title="Aktif Yap">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                @if (isAdmin)
                                                {
                                                    <button type="button" class="btn btn-sm btn-dark delete-btn" data-id="@item.UrunID" title="Sil">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Silinmiş Ürünler Sekmesi (Sadece Admin) -->
                @if (isAdmin)
                {
                    <div class="tab-pane fade @(Model.AktifTab == "silindi" ? "show active" : "")" id="silindi-urunler" role="tabpanel" aria-labelledby="silindi-urunler-tab">
                        <div class="table-responsive mt-3">
                            <table class="table table-bordered table-hover" id="silinmisUrunlerTablosu">
                                <thead class="table-danger">
                                    <tr>
                                        <th>Ürün Adı</th>
                                        <th>Kategori</th>
                                        <th>Birim</th>
                                        <th>Liste Fiyatı</th>
                                        <th>Satış Fiyatı</th>
                                        <th>Stok Miktarı</th>
                                        <th>Stok Durumu</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Urunler.Where(u => u.Silindi))
                                    {
                                        <tr>
                                            <td>@item.UrunAdi</td>
                                            <td>@item.KategoriAdi</td>
                                            <td>@item.Birim</td>
                                            <td class="text-end">@item.ListeFiyati.ToString("N2") $</td>
                                            <td class="text-end">@item.SatisFiyati.ToString("N2") $</td>
                                            <td class="text-end @ColorHelpers.GetNumberColorClass(item.Miktar)">
                                                @item.Miktar.ToString("N2") @item.Birim
                                            </td>
                                            <td class="text-center">
                                                @Html.StokDurumuBadge(item.Miktar, 5)
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-sm btn-success restore-btn" data-id="@item.UrunID" title="Geri Getir">
                                                        <i class="fas fa-trash-restore"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Yeni Ürün Ekle Modal -->
<div class="modal fade" id="urunModal" tabindex="-1" aria-labelledby="urunModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal içeriği AJAX ile doldurulacak -->
            <div class="d-flex justify-content-center p-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Kategori filtreleme
            $('#kategoriFilter').change(function() {
                var kategoriID = $(this).val();
                var currentUrl = new URL(window.location.href);
                
                if (kategoriID) {
                    currentUrl.searchParams.set('kategoriID', kategoriID);
                } else {
                    currentUrl.searchParams.delete('kategoriID');
                }
                
                window.location.href = currentUrl.toString();
            });
            
            // DataTables için tablo ayarları
            var dataTableOptions = {
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json',
                },
                order: [[0, 'asc']], // Ürün adına göre sırala
                columnDefs: [
                    { orderable: false, targets: -1 } // Son sütun sıralanamaz (İşlemler)
                ]
            };
            
            // Aktif ürünler tablosu
            $('#aktifUrunlerTablosu').DataTable(dataTableOptions);
            
            // Pasif ürünler tablosu
            $('#pasifUrunlerTablosu').DataTable(dataTableOptions);
            
            // Silinmiş ürünler tablosu
            $('#silinmisUrunlerTablosu').DataTable(dataTableOptions);
            
            // Yeni ürün ekleme modal
            $('.create-btn').click(function() {
                $.get('@Url.Action("Create")', function(data) {
                    $('#urunModal .modal-content').html(data);
                });
            });
            
            // Ürün düzenleme modal
            $(document).on('click', '.edit-btn', function() {
                var id = $(this).data('id');
                $.get('@Url.Action("Edit")/' + id, function(data) {
                    $('#urunModal .modal-content').html(data);
                    $('#urunModal').modal('show');
                });
            });
            
            // Ürün pasif yapma
            $(document).on('click', '.pasif-yap-btn', function() {
                var id = $(this).data('id');
                if (confirm('Bu ürünü pasif yapmak istediğinize emin misiniz?')) {
                    $.post('@Url.Action("SetInactive")/' + id, function(data) {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert('Ürün pasif yapılırken bir hata oluştu: ' + data.message);
                        }
                    });
                }
            });
            
            // Ürün aktif yapma
            $(document).on('click', '.aktif-yap-btn', function() {
                var id = $(this).data('id');
                if (confirm('Bu ürünü aktif yapmak istediğinize emin misiniz?')) {
                    $.post('@Url.Action("SetActive")/' + id, function(data) {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert('Ürün aktif yapılırken bir hata oluştu: ' + data.message);
                        }
                    });
                }
            });
            
            // Ürün silme
            $(document).on('click', '.delete-btn', function() {
                var id = $(this).data('id');
                if (confirm('Bu ürünü silmek istediğinize emin misiniz? Bu işlem geri alınamaz.')) {
                    $.post('@Url.Action("SetDelete")/' + id, function(data) {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert('Ürün silinirken bir hata oluştu: ' + data.message);
                        }
                    });
                }
            });
            
            // Silinen ürünü geri getirme
            $(document).on('click', '.restore-btn', function() {
                var id = $(this).data('id');
                if (confirm('Bu ürünü geri getirmek istediğinize emin misiniz?')) {
                    $.post('@Url.Action("RestoreDeleted")/' + id, function(data) {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert('Ürün geri getirilirken bir hata oluştu: ' + data.message);
                        }
                    });
                }
            });
        });
    </script>
}