@model MuhasebeStokWebApp.ViewModels.Urun.UrunCreateViewModel

<div class="modal-header">
    <h5 class="modal-title">Yeni Ürün Ekle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="createUrunForm" asp-controller="Urun" asp-action="Create" method="post">
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UrunKodu" class="control-label">Ürün Kodu</label>
                    <input asp-for="UrunKodu" class="form-control" />
                    <span asp-validation-for="UrunKodu" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UrunAdi" class="control-label">Ürün Adı</label>
                    <input asp-for="UrunAdi" class="form-control" />
                    <span asp-validation-for="UrunAdi" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="KategoriID" class="control-label">Kategori</label>
                    <select asp-for="KategoriID" asp-items="ViewBag.Kategoriler" class="form-select">
                        <option value="">-- Kategori Seçin --</option>
                    </select>
                    <span asp-validation-for="KategoriID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BirimID" class="control-label">Birim</label>
                    <select asp-for="BirimID" asp-items="ViewBag.Birimler" class="form-select">
                        <option value="">-- Birim Seçin --</option>
                    </select>
                    <span asp-validation-for="BirimID" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="KDVOrani" class="control-label">KDV Oranı (%)</label>
                    <input asp-for="KDVOrani" class="form-control" type="number" min="0" max="100" value="18" />
                    <span asp-validation-for="KDVOrani" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StokMiktar" class="control-label">Stok Miktarı</label>
                    <input asp-for="StokMiktar" class="form-control" type="number" min="0" value="0" />
                    <span asp-validation-for="StokMiktar" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-check mt-2">
                    <input asp-for="Aktif" class="form-check-input" checked />
                    <label asp-for="Aktif" class="form-check-label">Aktif</label>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 