@model MuhasebeStokWebApp.ViewModels.Urun.UrunEditViewModel

<form id="editUrunForm" asp-action="Edit" method="post">
    <div class="modal-header">
        <h5 class="modal-title">Ürün Düzenle</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <input type="hidden" asp-for="UrunID" />
        
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UrunKodu" class="control-label">Ürün Kodu</label>
                    <input asp-for="UrunKodu" class="form-control" />
                    <span asp-validation-for="UrunKodu" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UrunAdi" class="control-label">Ürün Adı</label>
                    <input asp-for="UrunAdi" class="form-control" />
                    <span asp-validation-for="UrunAdi" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="KategoriID" class="control-label">Kategori</label>
                    <select asp-for="KategoriID" asp-items="ViewBag.Kategoriler" class="form-select">
                        <option value="">-- Kategori Seçin --</option>
                    </select>
                    <span asp-validation-for="KategoriID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BirimID" class="control-label">Birim</label>
                    <select asp-for="BirimID" asp-items="ViewBag.Birimler" class="form-select">
                        <option value="">-- Birim Seçin --</option>
                    </select>
                    <span asp-validation-for="BirimID" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="ListeFiyati" class="control-label">Liste Fiyatı</label>
                    <input asp-for="ListeFiyati" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="ListeFiyati" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="MaliyetFiyati" class="control-label">Maliyet Fiyatı</label>
                    <input asp-for="MaliyetFiyati" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="MaliyetFiyati" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="SatisFiyati" class="control-label">Satış Fiyatı</label>
                    <input asp-for="SatisFiyati" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="SatisFiyati" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StokMiktar" class="control-label">Stok Miktarı</label>
                    <input asp-for="StokMiktar" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="StokMiktar" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-check mt-4">
                    <input asp-for="Aktif" class="form-check-input" />
                    <label asp-for="Aktif" class="form-check-label">Aktif</label>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 