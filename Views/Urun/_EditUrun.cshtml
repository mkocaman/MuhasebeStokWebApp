@model MuhasebeStokWebApp.ViewModels.Urun.UrunEditViewModel

<div class="modal-header bg-primary text-white">
    <h5 class="modal-title">Ürün Düzenle</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="editUrunForm" asp-controller="Urun" asp-action="Edit" method="post">
    <div class="modal-body">
        <div id="editFormAlert" class="alert alert-danger d-none" role="alert"></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <input type="hidden" asp-for="UrunID" />
        
        <div class="mb-3">
            <label asp-for="UrunKodu" class="form-label">Ürün Kodu</label>
            <input asp-for="UrunKodu" class="form-control" required maxlength="50" />
            <span asp-validation-for="UrunKodu" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="UrunAdi" class="form-label">Ürün Adı</label>
            <input asp-for="UrunAdi" class="form-control" required maxlength="200" />
            <span asp-validation-for="UrunAdi" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="KategoriID" class="form-label">Kategori</label>
            <select asp-for="KategoriID" asp-items="Model.Kategoriler" class="form-select" required>
                <option value="">-- Kategori Seçin --</option>
            </select>
            <span asp-validation-for="KategoriID" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="BirimID" class="form-label">Birim</label>
            <select asp-for="BirimID" asp-items="Model.Birimler" class="form-select" required>
                <option value="">-- Birim Seçin --</option>
            </select>
            <span asp-validation-for="BirimID" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="KDVOrani" class="form-label">KDV Oranı (%)</label>
            <input asp-for="KDVOrani" class="form-control" type="number" min="0" max="100" step="0.01" />
            <span asp-validation-for="KDVOrani" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Aciklama" class="form-label">Açıklama</label>
            <textarea asp-for="Aciklama" class="form-control" rows="3" maxlength="500"></textarea>
            <span asp-validation-for="Aciklama" class="text-danger"></span>
        </div>
        
        <div class="form-check mb-3">
            <input asp-for="Aktif" class="form-check-input" type="checkbox" />
            <label asp-for="Aktif" class="form-check-label">Aktif</label>
        </div>
    </div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

<script>
    $(document).ready(function () {
        // Form submit işlemini ele al
        $('#editUrunForm').submit(function (e) {
            e.preventDefault();
            
            // Form verilerini al
            var formData = $(this).serialize();
            
            // AJAX ile form verilerini gönder
            $.ajax({
                url: '@Url.Action("Edit", "Urun")',
                type: 'POST',
                data: formData,
                success: function (response) {
                    // İşlem başarılı ise modal'ı kapat ve tabloyu güncelle
                    $('#urunModal').modal('hide');
                    // Ürün listesini yenile
                    location.reload();
                },
                error: function (xhr, status, error) {
                    // Hata durumunda uyarı göster
                    $('#editFormAlert').text('Ürün güncelleme sırasında bir hata oluştu: ' + error).removeClass('d-none');
                }
            });
        });
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 