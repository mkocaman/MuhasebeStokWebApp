@model MuhasebeStokWebApp.ViewModels.UrunFiyat.UrunFiyatViewModel

@{
    ViewData["Title"] = "Fiyat Kaydını Sil";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col-auto">
            @if (Model.UrunID.HasValue)
            {
                <a asp-action="Index" asp-route-urunId="@Model.UrunID" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Listeye Dön
                </a>
            }
            else
            {
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Listeye Dön
                </a>
            }
        </div>
    </div>
    
    <div class="alert alert-danger">
        <h4>Bu fiyat kaydını silmek istediğinizden emin misiniz?</h4>
        <p>Bu işlem geri alınamaz.</p>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5>Fiyat Bilgileri</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Ürün Kodu:</dt>
                <dd class="col-sm-9">@Model.UrunKodu</dd>
                
                <dt class="col-sm-3">Ürün Adı:</dt>
                <dd class="col-sm-9">@Model.UrunAdi</dd>
                
                <dt class="col-sm-3">Fiyat Tipi:</dt>
                <dd class="col-sm-9">@Model.FiyatTipiAdi</dd>
                
                <dt class="col-sm-3">Fiyat:</dt>
                <dd class="col-sm-9">@Model.Fiyat.ToString("N2") ₺</dd>
                
                <dt class="col-sm-3">Geçerlilik Tarihi:</dt>
                <dd class="col-sm-9">@Model.GecerliTarih.ToString("dd.MM.yyyy")</dd>
                
                <dt class="col-sm-3">Oluşturma Tarihi:</dt>
                <dd class="col-sm-9">@(Model.OlusturmaTarihi?.ToString("dd.MM.yyyy HH:mm") ?? "-")</dd>
                
                <dt class="col-sm-3">Durum:</dt>
                <dd class="col-sm-9">
                    @if (Model.Aktif)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="FiyatID" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Sil</button>
            @if (Model.UrunID.HasValue)
            {
                <a asp-action="Index" asp-route-urunId="@Model.UrunID" class="btn btn-secondary">İptal</a>
            }
            else
            {
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            }
        </div>
    </form>
</div> 