@model MuhasebeStokWebApp.ViewModels.UrunFiyat.UrunFiyatCreateViewModel

<form id="createUrunFiyatForm" asp-action="Create" method="post">
    <div class="modal-header">
        <h5 class="modal-title">Yeni Fiyat Ekle</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="UrunID" class="control-label">Ürün</label>
                    <select asp-for="UrunID" asp-items="ViewBag.Urunler" class="form-select" required>
                        <option value="">-- Ürün Seçin --</option>
                    </select>
                    <span asp-validation-for="UrunID" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="FiyatTipiID" class="control-label">Fiyat Tipi</label>
                    <select asp-for="FiyatTipiID" asp-items="ViewBag.FiyatTipleri" class="form-select" required>
                        <option value="">-- Fiyat Tipi Seçin --</option>
                    </select>
                    <span asp-validation-for="FiyatTipiID" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Fiyat" class="control-label">Fiyat</label>
                    <input asp-for="Fiyat" class="form-control" type="number" step="0.01" min="0.01" required />
                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="GecerliTarih" class="control-label">Geçerlilik Tarihi</label>
                    <input asp-for="GecerliTarih" class="form-control" type="date" required />
                    <span asp-validation-for="GecerliTarih" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

<script>
    $(document).ready(function() {
        $("#createUrunFiyatForm").submit(function(e) {
            e.preventDefault();
            var form = $(this);
            
            $.ajax({
                url: form.attr('action'),
                type: form.attr('method'),
                data: form.serialize(),
                success: function(result) {
                    if (result.success) {
                        $('#modalContainer').modal('hide');
                        showToast('success', result.message);
                        setTimeout(function() {
                            location.reload();
                        }, 1500);
                    } else {
                        // Geçersiz form durumu
                        $('#modalContainer .modal-body').html(result);
                    }
                },
                error: function() {
                    showToast('error', 'İşlem sırasında bir hata oluştu.');
                }
            });
        });
    });
</script> 