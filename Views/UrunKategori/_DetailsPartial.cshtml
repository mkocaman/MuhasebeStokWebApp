@model MuhasebeStokWebApp.ViewModels.UrunKategori.UrunKategoriViewModel

<div class="modal-header">
    <h5 class="modal-title">Kategori Detayları</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="row mb-2">
        <div class="col-md-4 fw-bold">Kategori Adı:</div>
        <div class="col-md-8">@Model.KategoriAdi</div>
    </div>
    <div class="row mb-2">
        <div class="col-md-4 fw-bold">Açıklama:</div>
        <div class="col-md-8">@(string.IsNullOrEmpty(Model.Aciklama) ? "-" : Model.Aciklama)</div>
    </div>
    <div class="row mb-2">
        <div class="col-md-4 fw-bold">Durum:</div>
        <div class="col-md-8">
            @if (Model.Aktif)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-danger">Pasif</span>
            }
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-md-4 fw-bold">Oluşturma Tarihi:</div>
        <div class="col-md-8">@(Model.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm"))</div>
    </div>
    <div class="row mb-2">
        <div class="col-md-4 fw-bold">Güncelleme Tarihi:</div>
        <div class="col-md-8">@(Model.GuncellemeTarihi.HasValue ? Model.GuncellemeTarihi.Value.ToString("dd.MM.yyyy HH:mm") : "-")</div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
</div> 